{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "sipl metrics",
  "type": "object",
  "required": ["evidence_id", "metrics"],
  "properties": {
    "evidence_id": {"type": "string"},
    "metrics": {
      "type": "object",
      "properties": {
        "winrate_quality": {"type": "number"},
        "avg_safety": {"type": "number"},
        "avg_factuality": {"type": "number"},
        "coherence_score": {"type": "number"},
        "collapse_flags": {"type": "array", "items": {"type": "string"}}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
