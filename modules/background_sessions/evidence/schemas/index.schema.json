{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Background Sessions Evidence Index",
  "type": "object",
  "required": ["version", "items"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "path"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^EVD-[A-Z0-9_-]+$"
          },
          "path": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
