{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MetricsCompass",
  "type": "object",
  "required": ["pillar", "kpis", "owner", "decision_cadence"],
  "properties": {
    "pillar": {"enum": ["demand_generation", "conversion", "roi", "money"]},
    "kpis": {"type": "array", "items": {"type": "string"}, "minItems": 2},
    "owner": {"type": "string"},
    "decision_cadence": {"enum": ["weekly", "biweekly", "monthly"]}
  },
  "additionalProperties": false
}
