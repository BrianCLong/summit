{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TrainingPlan",
  "type": "object",
  "required": ["role", "stages", "trainer_model"],
  "properties": {
    "role": {"type": "string"},
    "trainer_model": {"enum": ["dedicated_trainer", "manager_led", "hybrid"]},
    "stages": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "required": ["name", "duration_days", "mode"],
        "properties": {
          "name": {"type": "string"},
          "duration_days": {"type": "integer", "minimum": 1},
          "mode": {"enum": ["classroom", "on_the_job", "blended"]}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
