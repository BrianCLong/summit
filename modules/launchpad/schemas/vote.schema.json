{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.local/schemas/launchpad/vote.schema.json",
  "title": "LaunchpadVote",
  "type": "object",
  "additionalProperties": false,
  "required": ["vote_id", "agent_id", "project_id", "day", "weight"],
  "properties": {
    "vote_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "agent_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "project_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "day": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "weight": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5
    },
    "signature": {
      "type": "string",
      "minLength": 1,
      "maxLength": 4096
    }
  }
}
