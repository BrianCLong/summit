{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.local/schemas/launchpad/project.schema.json",
  "title": "LaunchpadProject",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "project_id",
    "agent_id",
    "title",
    "tagline",
    "category",
    "links",
    "submitted_day"
  ],
  "properties": {
    "project_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "agent_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 80
    },
    "tagline": {
      "type": "string",
      "minLength": 1,
      "maxLength": 140
    },
    "category": {
      "type": "string",
      "minLength": 1,
      "maxLength": 40
    },
    "links": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "string",
        "pattern": "^https://",
        "maxLength": 2048
      }
    },
    "submitted_day": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false
    }
  }
}
