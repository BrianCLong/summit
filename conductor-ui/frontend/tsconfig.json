{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noCheck": true,
    "allowJs": true,
    "types": ["vite/client"]
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/tests/**/*"]
}
