{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claim",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "claim": { "type": "string" },
    "vendor": { "type": "string" },
    "citations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": { "type": "string", "format": "uri" },
          "snapshot_hash": { "type": "string" },
          "span": {
            "type": "object",
            "properties": {
              "start": { "type": "integer" },
              "end": { "type": "integer" },
              "text": { "type": "string" }
            },
            "required": ["text"]
          }
        },
        "required": ["url", "snapshot_hash"]
      }
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "timestamp": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "claim", "vendor", "citations"]
}
