{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GraphCI Metrics",
  "type": "object",
  "properties": {
    "run_id": { "type": "string" },
    "duration_seconds": { "type": "number" },
    "source_count": { "type": "integer" },
    "snapshot_count": { "type": "integer" },
    "claim_count": { "type": "integer" },
    "citation_coverage": { "type": "number", "minimum": 0, "maximum": 1 },
    "determinism_replay_success": { "type": "boolean" },
    "contamination_check_passed": { "type": "boolean" }
  },
  "required": ["run_id", "source_count", "claim_count", "citation_coverage"]
}
