{
  "title": "Monorepo Services — OTel & Prometheus",
  "uid": "monorepo-otel",
  "tags": ["observability", "otel", "prometheus", "slo"],
  "timezone": "utc",
  "refresh": "10s",
  "schemaVersion": 38,
  "version": 1,
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"],
    "time_options": ["1h", "6h", "12h", "24h", "7d"]
  },
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "datasource": { "type": "prometheus" },
        "query": "label_values(http_requests_total, service)",
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "current": { "text": "All", "value": ["All"] },
        "refresh": 1
      },
      {
        "name": "workflow",
        "type": "custom",
        "query": "ingest,query,copilot,vertical-intel",
        "current": { "text": "ingest", "value": "ingest" }
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Request rate by service (req/s)",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_requests_total{service=~\"$service\"}[5m]))",
          "legendFormat": "{{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 5 }, { "color": "red", "value": 10 }] }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "type": "timeseries",
      "title": "Error rate by service (%)",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_requests_total{service=~\"$service\",status=~\"5..\"}[5m])) / sum by (service) (rate(http_requests_total{service=~\"$service\"}[5m])) * 100",
          "legendFormat": "{{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 1 }, { "color": "red", "value": 2 }] }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "type": "timeseries",
      "title": "HTTP p95 latency by service (s)",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, service) (rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m])))",
          "legendFormat": "{{service}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 1 }, { "color": "red", "value": 1.5 }] }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "type": "timeseries",
      "title": "OpenTelemetry pipeline health (spans/s)",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum by (receiver) (rate(otelcol_receiver_accepted_spans[5m]))",
          "legendFormat": "accepted — {{receiver}}"
        },
        {
          "expr": "sum by (receiver) (rate(otelcol_receiver_refused_spans[5m]))",
          "legendFormat": "refused — {{receiver}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 0 }] }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "type": "timeseries",
      "title": "Workflow p95 latency (s)",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "workflow_latency_p95_seconds:rate5m{workflow=\"$workflow\"}",
          "legendFormat": "{{workflow}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3,
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 1 }, { "color": "red", "value": 1.5 }] }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "single", "sort": "desc" }
      }
    },
    {
      "type": "timeseries",
      "title": "Workflow error rate (%)",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "workflow_error_rate:ratio5m{workflow=\"$workflow\"} * 100",
          "legendFormat": "{{workflow}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 1 }, { "color": "red", "value": 2 }] }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "single", "sort": "desc" }
      }
    },
    {
      "type": "stat",
      "title": "Workflow availability SLO (%)",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 0, "y": 24, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "(1 - workflow_error_rate:ratio30m{workflow=\"$workflow\"}) * 100",
          "legendFormat": "{{workflow}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "orange", "value": 99 },
              { "color": "green", "value": 99.5 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto"
      }
    },
    {
      "type": "stat",
      "title": "Workflow latency p95 (ms)",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 12, "y": 24, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "workflow_latency_p95_seconds:rate5m{workflow=\"$workflow\"} * 1000",
          "legendFormat": "{{workflow}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 800 },
              { "color": "red", "value": 1500 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "textMode": "auto"
      }
    }
  ]
}
