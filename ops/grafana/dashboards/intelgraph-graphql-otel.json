{
  "annotations": { "list": [] },
  "editable": true,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "type": "stat",
      "title": "GraphQL Availability (5m)",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "(1 - (sum(rate(graphql_request_errors_total[5m])) / clamp_min(sum(rate(graphql_requests_total[5m])), 1)))",
          "legendFormat": "availability"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0.0 },
              { "color": "yellow", "value": 0.999 },
              { "color": "green", "value": 0.9995 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      }
    },
    {
      "type": "stat",
      "title": "GraphQL Error Rate (5m)",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(graphql_request_errors_total[5m])) / clamp_min(sum(rate(graphql_requests_total[5m])), 1)",
          "legendFormat": "error_rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "red", "value": 0.001 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false }
      }
    },
    {
      "type": "timeseries",
      "title": "GraphQL Complexity p95",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(graphql_query_complexity_bucket[5m])) by (le))",
          "legendFormat": "p95 complexity"
        }
      ],
      "fieldConfig": {
        "defaults": { "decimals": 0 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "GraphQL Errors by Operation",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(graphql_request_errors_total[5m])) by (operation, operation_type)",
          "legendFormat": "{{operation}} ({{operation_type}})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "decimals": 4
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "type": "table",
      "title": "Top GraphQL Operations by Complexity",
      "datasource": { "type": "prometheus" },
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 9 },
      "targets": [
        {
          "expr": "topk(10, sum(rate(graphql_query_complexity_sum[5m])) by (operation, operation_type) / clamp_min(sum(rate(graphql_requests_total[5m])) by (operation, operation_type), 1))",
          "format": "table"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2
        },
        "overrides": []
      },
      "options": {
        "showHeader": true
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "Value": "avg_complexity",
              "operation": "operation",
              "operation_type": "operation_type"
            }
          }
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["graphql", "otel"],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
  "timezone": "",
  "title": "GraphQL Gateway OTEL Metrics",
  "uid": "graphql-otel",
  "version": 1
