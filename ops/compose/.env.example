COMPOSE_PROJECT_NAME=summit2
NETWORK_NAME=summit2_net

# expose on different ports than your single-container
WEB_PORT=15173
API_PORT=18080
GRAFANA_PORT=33000
PROM_PORT=19090
LOKI_PORT=33100

# build locations: update when you tell me your actual paths
API_CONTEXT=../..
API_DOCKERFILE=../../api/Dockerfile
WEB_CONTEXT=../..
WEB_DOCKERFILE=../../webapp/Dockerfile

# images/tags
INTELGRAPH_TAG=latest
WEB_TAG=latest

# neo4j/redis versions
NEO4J_VERSION=5.23
REDIS_VERSION=7.2
GRAFANA_VERSION=11.2.0
PROM_VERSION=v2.55.1
LOKI_VERSION=3.1.2

# grafana admin
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# AWS hybrid (optional)
AWS_REGION=us-west-2
AWS_PROFILE=default
AWS_ENABLE_LOCAL=true
S3_BUCKET=summit-dev-artifacts
SQS_QUEUE=summit-dev-queue
NEO4J_AUTH=neo4j/neo4jlocal
NEO4J_dbms_memory_heap_initial__size=1G
NEO4J_dbms_memory_heap_max__size=2G
NEO4J_dbms_memory_pagecache_size=1G