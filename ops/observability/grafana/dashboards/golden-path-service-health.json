{
  "title": "Golden Path Service Health",
  "description": "Error rate, throughput, and latency coverage for core user journeys",
  "editable": true,
  "timezone": "UTC",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
  },
  "templating": {
    "list": [
      {
        "name": "environment",
        "type": "custom",
        "label": "Environment",
        "options": [
          { "text": "All", "value": "$__all", "selected": true },
          { "text": "prod", "value": "prod" },
          { "text": "staging", "value": "staging" },
          { "text": "dev", "value": "dev" }
        ],
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true,
        "multi": true
      },
      {
        "name": "service",
        "type": "custom",
        "label": "Service",
        "options": [
          { "text": "All", "value": "$__all", "selected": true },
          { "text": "intelgraph-api", "value": "intelgraph-api" },
          { "text": "intelgraph-gateway", "value": "intelgraph-gateway" },
          { "text": "intelgraph-ingest", "value": "intelgraph-ingest" }
        ],
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Golden Path Success Rate",
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "(1 - (sum(rate(http_requests_total{job=~\"$service\",environment=~\"$environment\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=~\"$service\",environment=~\"$environment\"}[5m])))) * 100",
          "legendFormat": "Success %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 98.5 },
              { "color": "green", "value": 99.5 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Request Throughput (req/s)",
      "gridPos": { "h": 4, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=~\"$service\",environment=~\"$environment\"}[1m]))",
          "legendFormat": "RPS",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 5 },
              { "color": "green", "value": 15 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Latency p95 (ms)",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\",environment=~\"$environment\"}[5m])) by (le)) * 1000",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 750 },
              { "color": "red", "value": 1200 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Error Rate by Service",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=~\"$service\",environment=~\"$environment\",status=~\"5..\"}[5m])) by (job) / sum(rate(http_requests_total{job=~\"$service\",environment=~\"$environment\"}[5m])) by (job) * 100",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Request Throughput by Service",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=~\"$service\",environment=~\"$environment\"}[1m])) by (job)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Latency Quantiles by Service",
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 13 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\",environment=~\"$environment\"}[5m])) by (le, job)) * 1000",
          "legendFormat": "p50 {{job}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\",environment=~\"$environment\"}[5m])) by (le, job)) * 1000",
          "legendFormat": "p95 {{job}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\",environment=~\"$environment\"}[5m])) by (le, job)) * 1000",
          "legendFormat": "p99 {{job}}",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 750 },
              { "color": "red", "value": 1200 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi", "sort": "desc" }
      }
    }
  ],
  "links": [],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
