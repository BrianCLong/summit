{
  "dashboard": {
    "id": null,
    "title": "IntelGraph Platform Overview",
    "tags": ["intelgraph", "overview", "maestro"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "cluster",
          "type": "query",
          "query": "label_values(up, cluster)",
          "refresh": "time",
          "includeAll": false,
          "allValue": ".*",
          "current": {
            "value": "intelgraph-prod"
          }
        },
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(up{cluster=\"$cluster\"}, namespace)",
          "refresh": "time",
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Platform Health Score",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "(avg(up{job=~\"maestro-orchestrator|neo4j|redis\"}) * 100)",
            "legendFormat": "Health %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 80 },
                { "color": "green", "value": 95 }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        }
      },
      {
        "id": 2,
        "title": "Active Users",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "sum(maestro_active_sessions_total)",
            "legendFormat": "Sessions",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "short"
          }
        }
      },
      {
        "id": 3,
        "title": "Graph Operations/sec",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "rate(maestro_graph_operations_total[5m])",
            "legendFormat": "Ops/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "ops"
          }
        }
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
        "targets": [
          {
            "expr": "(rate(maestro_orchestration_errors_total[5m]) / rate(maestro_orchestration_requests_total[5m])) * 100",
            "legendFormat": "Error %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            },
            "unit": "percent",
            "max": 10
          }
        }
      },
      {
        "id": 5,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "rate(maestro_orchestration_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "xAxis": { "show": true },
        "yAxes": [
          {
            "label": "Requests/sec",
            "show": true,
            "min": 0
          }
        ],
        "legend": {
          "show": true,
          "values": true,
          "current": true
        }
      },
      {
        "id": 6,
        "title": "Response Time (P95)",
        "type": "graph",
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(maestro_orchestration_duration_seconds_bucket[5m]))",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "show": true,
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "Kubernetes Cluster Resources",
        "type": "graph",
        "gridPos": { "h": 9, "w": 8, "x": 0, "y": 17 },
        "targets": [
          {
            "expr": "(sum(rate(container_cpu_usage_seconds_total{container!=\"POD\",container!=\"\"}[5m])) by (pod)) * 100",
            "legendFormat": "CPU % - {{pod}}",
            "refId": "A"
          },
          {
            "expr": "(sum(container_memory_working_set_bytes{container!=\"POD\",container!=\"\"}) by (pod)) / 1024 / 1024 / 1024",
            "legendFormat": "Memory GB - {{pod}}",
            "refId": "B"
          }
        ]
      },
      {
        "id": 8,
        "title": "Neo4j Performance",
        "type": "graph",
        "gridPos": { "h": 9, "w": 8, "x": 8, "y": 17 },
        "targets": [
          {
            "expr": "rate(neo4j_cypher_query_total[5m])",
            "legendFormat": "Queries/sec",
            "refId": "A"
          },
          {
            "expr": "neo4j_cypher_query_duration_seconds{quantile=\"0.95\"}",
            "legendFormat": "P95 Latency",
            "refId": "B"
          }
        ]
      },
      {
        "id": 9,
        "title": "Top Error Messages",
        "type": "table",
        "gridPos": { "h": 9, "w": 8, "x": 16, "y": 17 },
        "targets": [
          {
            "expr": "topk(5, sum by (error_message) (increase(maestro_orchestration_errors_total[1h])))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true },
              "renameByName": {
                "error_message": "Error Message",
                "Value": "Count"
              }
            }
          }
        ]
      },
      {
        "id": 10,
        "title": "Security Events",
        "type": "graph",
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 26 },
        "targets": [
          {
            "expr": "rate(maestro_security_events_total[5m])",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "title": "Business KPIs",
        "type": "graph",
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 26 },
        "targets": [
          {
            "expr": "sum(maestro_investigations_created_total)",
            "legendFormat": "Investigations Created",
            "refId": "A"
          },
          {
            "expr": "sum(maestro_graph_entities_total)",
            "legendFormat": "Total Entities",
            "refId": "B"
          },
          {
            "expr": "sum(maestro_data_sources_active_total)",
            "legendFormat": "Active Data Sources",
            "refId": "C"
          }
        ]
      }
    ]
  }
}
