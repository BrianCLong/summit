{
  "dashboard": {
    "id": null,
    "title": "Maestro Conductor v24.2 - Backup & DR Monitoring",
    "tags": ["maestro", "backup", "disaster-recovery", "operational-readiness"],
    "style": "dark",
    "timezone": "utc",
    "refresh": "5m",
    "time": {
      "from": "now-30d",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["1m", "5m", "15m", "30m", "1h"],
      "time_options": ["1h", "6h", "12h", "24h", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "custom",
          "options": [
            { "text": "All", "value": ".*", "selected": true },
            { "text": "Production", "value": "production", "selected": false },
            { "text": "Staging", "value": "staging", "selected": false }
          ],
          "multi": false
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "üéØ DR Readiness Score",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "(\n  (\n    sum(rate(backup_drill_tests_passed_total{environment=~\"$environment\"}[7d])) / \n    sum(rate(backup_drill_tests_total{environment=~\"$environment\"}[7d]))\n  ) * 100\n)",
            "legendFormat": "DR Readiness %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 80 },
                { "color": "green", "value": 95 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 2,
        "title": "‚è±Ô∏è Last Successful Drill",
        "type": "stat",
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 },
        "targets": [
          {
            "expr": "time() - backup_drill_last_success_timestamp{environment=~\"$environment\"}",
            "legendFormat": "Hours Ago"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "dtdurations",
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 604800 },
                { "color": "red", "value": 1209600 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "üïê Current RTO",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "backup_drill_rto_seconds{environment=~\"$environment\"}",
            "legendFormat": "RTO (seconds)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 240 },
                { "color": "red", "value": 300 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "üìä Current RPO",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
        "targets": [
          {
            "expr": "backup_drill_rpo_seconds{environment=~\"$environment\"}",
            "legendFormat": "RPO (seconds)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 45 },
                { "color": "red", "value": 60 }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "üìà Drill Success Rate Trend",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "rate(backup_drill_tests_passed_total{environment=~\"$environment\"}[1h]) / rate(backup_drill_tests_total{environment=~\"$environment\"}[1h]) * 100",
            "legendFormat": "Success Rate % - {{environment}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 6,
        "title": "‚è∞ RTO/RPO Trends",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "backup_drill_rto_seconds{environment=~\"$environment\"}",
            "legendFormat": "RTO - {{environment}}"
          },
          {
            "expr": "backup_drill_rpo_seconds{environment=~\"$environment\"}",
            "legendFormat": "RPO - {{environment}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 7,
        "title": "üîß Drill Test Results",
        "type": "table",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "backup_drill_test_duration_seconds{environment=~\"$environment\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "job": true,
                "instance": true
              },
              "renameByName": {
                "environment": "Environment",
                "test_name": "Test Name",
                "test_phase": "Phase",
                "Value": "Duration (s)"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Duration (s)" },
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background",
                    "mode": "basic"
                  }
                },
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      { "color": "green", "value": 0 },
                      { "color": "yellow", "value": 30 },
                      { "color": "red", "value": 60 }
                    ]
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "üìÖ Drill Schedule Compliance",
        "type": "table",
        "gridPos": { "h": 6, "w": 12, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "backup_drill_schedule_compliance{environment=~\"$environment\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "job": true,
                "instance": true
              },
              "renameByName": {
                "environment": "Environment",
                "drill_type": "Drill Type",
                "Value": "Compliance %"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        }
      },
      {
        "id": 9,
        "title": "üö® Recent Drill Alerts",
        "type": "table",
        "gridPos": { "h": 6, "w": 12, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "ALERTS{alertname=~\"BackupDrill.*\", environment=~\"$environment\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "job": true,
                "instance": true
              },
              "renameByName": {
                "alertname": "Alert",
                "environment": "Environment",
                "severity": "Severity",
                "alertstate": "State"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Severity" },
              "properties": [
                {
                  "id": "mappings",
                  "value": [
                    {
                      "options": {
                        "critical": { "text": "üî¥ Critical", "color": "red" },
                        "warning": { "text": "üü° Warning", "color": "yellow" },
                        "info": { "text": "üîµ Info", "color": "blue" }
                      },
                      "type": "value"
                    }
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": 10,
        "title": "üì¶ Backup Size Trends",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 30 },
        "targets": [
          {
            "expr": "backup_size_bytes{environment=~\"$environment\", backup_type=\"postgresql\"}",
            "legendFormat": "PostgreSQL - {{environment}}"
          },
          {
            "expr": "backup_size_bytes{environment=~\"$environment\", backup_type=\"neo4j\"}",
            "legendFormat": "Neo4j - {{environment}}"
          },
          {
            "expr": "backup_size_bytes{environment=~\"$environment\", backup_type=\"redis\"}",
            "legendFormat": "Redis - {{environment}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 11,
        "title": "‚ö° Backup Performance",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 30 },
        "targets": [
          {
            "expr": "backup_duration_seconds{environment=~\"$environment\"}",
            "legendFormat": "{{backup_type}} - {{environment}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 12,
        "title": "üîÑ Restore Performance",
        "type": "timeseries",
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 30 },
        "targets": [
          {
            "expr": "restore_duration_seconds{environment=~\"$environment\"}",
            "legendFormat": "{{backup_type}} - {{environment}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 13,
        "title": "üìã SLO Compliance Summary",
        "type": "stat",
        "gridPos": { "h": 6, "w": 24, "x": 0, "y": 36 },
        "targets": [
          {
            "expr": "(\n  count(backup_drill_rto_seconds{environment=~\"$environment\"} <= 300) /\n  count(backup_drill_rto_seconds{environment=~\"$environment\"})\n) * 100",
            "legendFormat": "RTO SLO Compliance"
          },
          {
            "expr": "(\n  count(backup_drill_rpo_seconds{environment=~\"$environment\"} <= 60) /\n  count(backup_drill_rpo_seconds{environment=~\"$environment\"})\n) * 100",
            "legendFormat": "RPO SLO Compliance"
          },
          {
            "expr": "(\n  sum(rate(backup_drill_tests_passed_total{environment=~\"$environment\"}[7d])) /\n  sum(rate(backup_drill_tests_total{environment=~\"$environment\"}[7d]))\n) * 100",
            "legendFormat": "Test Success Rate"
          },
          {
            "expr": "backup_drill_schedule_compliance{environment=~\"$environment\"}",
            "legendFormat": "Schedule Compliance"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "yellow", "value": 95 },
                { "color": "green", "value": 99 }
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "orientation": "horizontal"
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Drill Executions",
          "datasource": "prometheus",
          "expr": "changes(backup_drill_executions_total[1h]) > 0",
          "titleFormat": "Backup Drill: {{drill_type}}",
          "textFormat": "Environment: {{environment}}, Status: {{status}}",
          "iconColor": "blue"
        },
        {
          "name": "Drill Failures",
          "datasource": "prometheus", 
          "expr": "changes(backup_drill_failures_total[1h]) > 0",
          "titleFormat": "Drill Failed: {{drill_type}}",
          "textFormat": "Environment: {{environment}}, Error: {{error_type}}",
          "iconColor": "red"
        }
      ]
    }
  }
}