{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Evidence Index",
  "type": "object",
  "required": ["version", "items"],
  "properties": {
    "version": { "type": "string" },
    "items": {
      "type": "object",
      "patternProperties": {
        "^EVD-[A-Z0-9-]+$": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
