{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Evidence Index",
  "type": "object",
  "required": ["mapping"],
  "properties": {
    "mapping": {
      "type": "object",
      "patternProperties": {
        "^EVD-[A-Za-z0-9-]+-[A-Z]+-[0-9]{3}$": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    }
  }
}
