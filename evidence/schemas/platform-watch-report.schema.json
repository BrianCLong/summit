{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PlatformWatchReport",
  "type": "object",
  "required": ["schema_version", "evidence_id", "date", "summary", "evidence", "platforms", "claims", "drift"],
  "properties": {
    "schema_version": { "const": "platform-watch.report.v1" },
    "evidence_id": { "type": "string", "pattern": "^EVD-PLAT-[A-Z0-9\\-]+-\\d{8}-[a-f0-9]{8}$" },
    "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "summary": { "type": "string" },
    "evidence": {
      "type": "array",
      "items": { "$ref": "#/$defs/evidence" }
    },
    "platforms": {
      "type": "array",
      "items": { "$ref": "#/$defs/platform" }
    },
    "claims": {
      "type": "array",
      "items": { "$ref": "#/$defs/claim" }
    },
    "drift": { "$ref": "#/$defs/drift" }
  },
  "additionalProperties": false,
  "$defs": {
    "evidence": {
      "type": "object",
      "required": ["id", "platform", "source_url", "title", "content_hash"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^EVD-PLAT-[A-Z0-9\\-]+-\\d{8}-[a-f0-9]{8}$"
        },
        "platform": { "type": "string" },
        "source_url": { "type": "string", "format": "uri" },
        "title": { "type": "string" },
        "content_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
      },
      "additionalProperties": false
    },
    "platform": {
      "type": "object",
      "required": ["id", "name", "status", "evidence_refs"],
      "properties": {
        "id": { "type": "string", "pattern": "^[A-Za-z0-9\\-]+$" },
        "name": { "type": "string" },
        "status": { "type": "string" },
        "evidence_refs": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^EVD-PLAT-[A-Z0-9\\-]+-\\d{8}-[a-f0-9]{8}$"
          }
        }
      },
      "additionalProperties": false
    },
    "claim": {
      "type": "object",
      "required": ["id", "text", "platform", "evidence_refs"],
      "properties": {
        "id": { "type": "string", "pattern": "^[A-Z0-9:\\-]+$" },
        "text": { "type": "string" },
        "platform": { "type": "string" },
        "evidence_refs": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^EVD-PLAT-[A-Z0-9\\-]+-\\d{8}-[a-f0-9]{8}$"
          }
        }
      },
      "additionalProperties": false
    },
    "drift": {
      "type": "object",
      "required": ["detected", "reasons"],
      "properties": {
        "detected": { "type": "boolean" },
        "reasons": {
          "type": "array",
          "items": { "$ref": "#/$defs/driftReason" }
        }
      },
      "additionalProperties": false
    },
    "driftReason": {
      "type": "object",
      "required": ["claim_id", "evidence_id", "explanation"],
      "properties": {
        "claim_id": { "type": "string", "pattern": "^[A-Z0-9:\\-]+$" },
        "evidence_id": {
          "type": "string",
          "pattern": "^EVD-PLAT-[A-Z0-9\\-]+-\\d{8}-[a-f0-9]{8}$"
        },
        "explanation": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
