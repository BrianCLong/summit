{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": true,
  "properties": {
    "artifacts": {
      "items": {
        "properties": {
          "description": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "path"
        ],
        "type": "object"
      },
      "type": "array"
    },
    "evidence_id": {
      "pattern": "^EVD-[a-zA-Z0-9-]+$",
      "type": "string"
    },
    "summary": {
      "type": "string"
    }
  },
  "required": [
    "evidence_id",
    "summary",
    "artifacts"
  ],
  "type": "object"
}
