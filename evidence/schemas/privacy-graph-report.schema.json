{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Summit Privacy Graph Evidence Report",
  "type": "object",
  "required": ["run_id", "item_slug", "evd_ids", "summary", "artifacts"],
  "properties": {
    "run_id": {"type": "string"},
    "item_slug": {"type": "string"},
    "evd_ids": {"type": "array", "items": {"type": "string"}},
    "summary": {
      "type": "object",
      "required": ["what_ran", "result", "backend", "privacy_config"],
      "properties": {
        "what_ran": {"type": "string"},
        "result": {"type": "string"},
        "backend": {"type": "string", "enum": ["plaintext", "he_simulated"]},
        "privacy_config": {
          "type": "object",
          "properties": {
            "require_dp": {"type": "boolean"},
            "max_degree": {"type": "integer"}
          }
        }
      }
    },
    "artifacts": {
      "type": "object",
      "properties": {
        "metrics": {"type": "string"},
        "stamp": {"type": "string"},
        "graph_stats": {"type": "string"}
      }
    }
  },
  "additionalProperties": false
}
