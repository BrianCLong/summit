{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["item", "metrics"],
  "properties": {
    "item": {"type": "string"},
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "value"],
        "properties": {
          "name": {"type": "string"},
          "value": {"type": ["number", "string", "boolean"]}
        }
      }
    }
  }
}
