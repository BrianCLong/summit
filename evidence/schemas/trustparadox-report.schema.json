{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Trust Paradox Evidence Report",
  "type": "object",
  "required": ["run_id", "summary", "evidence_ids"],
  "properties": {
    "run_id": { "type": "string", "pattern": "^[a-z0-9_-]+$" },
    "summary": { "type": "string" },
    "evidence_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^EVD-TRUSTPARADOX-[A-Z]+-\\d{3}$"
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
