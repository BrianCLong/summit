{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Moltbook Relay Evidence Metrics",
  "type": "object",
  "required": ["evidence_id", "metrics"],
  "properties": {
    "evidence_id": {
      "type": "string",
      "pattern": "^EVD-moltbook-relay-[A-Z]+-\\d{3}$"
    },
    "metrics": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
