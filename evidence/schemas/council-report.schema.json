{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Council Evidence Report",
  "type": "object",
  "required": ["evidenceId", "item", "artifacts", "summary"],
  "properties": {
    "evidenceId": {
      "type": "string",
      "pattern": "^EVD-LLMCOUNCIL-[A-Z]+-[0-9]{3}$"
    },
    "item": { "type": "string" },
    "summary": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "sha256"],
        "properties": {
          "path": { "type": "string" },
          "sha256": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
