{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ai-assist report",
  "version": "1.0.0",
  "type": "object",
  "additionalProperties": false,
  "required": ["evidence_id", "item", "summary", "findings"],
  "properties": {
    "evidence_id": { "type": "string", "pattern": "^EVD-[a-z0-9-]+-[a-z0-9-]+-[0-9]{3}$" },
    "item": { "type": "object", "additionalProperties": true },
    "summary": { "type": "string" },
    "findings": { "type": "array", "items": { "type": "string" } }
  }
}
