{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ai-assist metrics",
  "version": "1.0.0",
  "type": "object",
  "additionalProperties": false,
  "required": ["evidence_id", "metrics"],
  "properties": {
    "evidence_id": { "type": "string", "pattern": "^EVD-[a-z0-9-]+-[a-z0-9-]+-[0-9]{3}$" },
    "metrics": {
      "type": "object",
      "properties": {
        "diff_precision": { "type": "number" },
        "spec_adherence": { "type": "number" },
        "regression_rate": { "type": "number" },
        "review_load": { "type": "number" }
      }
    }
  }
}
