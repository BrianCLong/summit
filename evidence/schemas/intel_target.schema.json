{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Intel Target",
  "type": "object",
  "required": ["target_name", "target_type", "target_urls", "license_posture", "collection_boundary", "compliance_gates"],
  "properties": {
    "target_name": { "type": "string" },
    "target_type": { "type": "string" },
    "target_urls": { "type": "array", "items": { "type": "string" } },
    "license_posture": { "type": "string" },
    "collection_boundary": {
      "type": "object",
      "required": ["no_auth", "no_scraping_behind_paywalls", "no_private_apis", "no_leaked_keys", "no_reverse_engineering_binaries"],
      "properties": {
        "no_auth": { "type": "boolean" },
        "no_scraping_behind_paywalls": { "type": "boolean" },
        "no_private_apis": { "type": "boolean" },
        "no_leaked_keys": { "type": "boolean" },
        "no_reverse_engineering_binaries": { "type": "boolean" }
      }
    },
    "compliance_gates": {
      "type": "object",
      "required": ["publicly_accessible_only", "license_tos_compatible_extraction", "no_direct_code_copying", "transformative_reimplementation", "evidence_recorded"],
      "properties": {
        "publicly_accessible_only": { "type": "boolean" },
        "license_tos_compatible_extraction": { "type": "boolean" },
        "no_direct_code_copying": { "type": "boolean" },
        "transformative_reimplementation": { "type": "boolean" },
        "evidence_recorded": { "type": "boolean" }
      }
    }
  }
}
