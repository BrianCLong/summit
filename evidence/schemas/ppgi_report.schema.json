{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Evidence Report (PPGI)",
  "type": "object",
  "required": ["evidence_id", "summary", "artifacts"],
  "properties": {
    "evidence_id": { "type": "string", "pattern": "^EVD-[A-Z0-9-]+$" },
    "summary": { "type": "string" },
    "artifacts": {
      "oneOf": [
        {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      ]
    }
  },
  "additionalProperties": true
}
