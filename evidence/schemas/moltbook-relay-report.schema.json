{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Moltbook Relay Evidence Report",
  "type": "object",
  "required": ["evidence_id", "item", "summary", "controls", "tests"],
  "properties": {
    "evidence_id": {
      "type": "string",
      "pattern": "^EVD-moltbook-relay-[A-Z]+-\\d{3}$"
    },
    "item": {
      "type": "object",
      "required": ["source", "published_date"],
      "properties": {
        "source": { "type": "string" },
        "published_date": { "type": "string" }
      }
    },
    "summary": { "type": "string" },
    "controls": {
      "type": "array",
      "items": { "type": "string" }
    },
    "tests": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
