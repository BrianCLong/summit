{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Evidence Report",
  "type": "object",
  "required": ["evidence_id"],
  "properties": {
    "evidence_id": { "type": "string", "pattern": "^EVD-[a-zA-Z0-9-]+$" },
    "item": { "type": "object" },
    "summary": { "type": "string" },
    "artifacts": {
      "anyOf": [
        { "type": "array", "items": { "type": "string" } },
        { "type": "object" }
      ]
    }
  },
  "additionalProperties": true
}
