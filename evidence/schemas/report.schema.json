{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Evidence Report",
  "type": "object",
  "required": ["evidence_id", "summary", "artifacts"],
  "properties": {
    "evidence_id": {"type": "string"},
    "summary": {"type": "string"},
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "description"],
        "properties": {
          "path": {"type": "string"},
          "description": {"type": "string"}
        }
      }
    }
  }
}
