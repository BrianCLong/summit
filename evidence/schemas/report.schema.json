{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Evidence Report",
  "type": "object",
  "required": ["evidence_id", "item_slug", "claims", "decisions"],
  "properties": {
    "evidence_id": { "type": "string" },
    "item_slug": { "type": "string" },
    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["claim_id", "text", "support"],
        "properties": {
          "claim_id": { "type": "string" },
          "text": { "type": "string" },
          "support": { "type": "string", "enum": ["supported", "unsupported", "contradicted", "unknown"] },
          "evidence_refs": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "decisions": { "type": "array", "items": { "type": "string" } }
  }
}
