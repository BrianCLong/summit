{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Evidence Report",
  "type": "object",
  "required": ["evidence_id", "run_config", "model_endpoint", "tool_hashes", "summary"],
  "properties": {
    "evidence_id": {
      "type": "string",
      "pattern": "^EVD-CODEXLOOP-[A-Z]+-[0-9]+$"
    },
    "run_config": {
      "type": "object"
    },
    "model_endpoint": {
      "type": "string"
    },
    "tool_hashes": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "summary": {
      "type": "string"
    },
    "artifacts": {
      "type": ["array", "object"]
    },
    "item_slug": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
