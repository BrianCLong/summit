{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SummitEvidenceReport",
  "type": "object",
  "required": ["evidence_id", "area", "artifacts"],
  "properties": {
    "evidence_id": {
      "type": "string",
      "pattern": "^EVD-[A-Z0-9]+-[A-Z0-9]+-[0-9]{3}$"
    },
    "area": { "type": "string" },
    "artifacts": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}
