{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Evidence Report",
  "type": "object",
  "required": ["evidence_id", "summary"],
  "properties": {
    "evidence_id": {
      "type": "string",
      "pattern": "^EVD-[A-Za-z0-9_-]+$"
    },
    "item": {
      "type": "object"
    },
    "summary": {
      "type": "string"
    },
    "artifacts": {
      "type": ["array", "object"]
    },
    "item_slug": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
