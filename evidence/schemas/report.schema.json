{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "summit evidence report",
  "type": "object",
  "required": ["evidence_id", "item", "summary", "artifacts"],
  "properties": {
    "evidence_id": {"type": "string", "pattern": "^EVD-[A-Z0-9]+-[A-Z0-9]+-[0-9]{3}$"},
    "item": {"type": "object", "required": ["ref"], "properties": {"ref": {"type": "string"}}},
    "summary": {"type": "object"},
    "artifacts": {"type": "array", "items": {"type": "string"}}
  },
  "additionalProperties": false
}
