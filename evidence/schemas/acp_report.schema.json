{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["item", "evidence"],
  "properties": {
    "item": {
      "type": "object",
      "required": ["slug", "source_url"],
      "properties": {
        "slug": { "type": "string" },
        "source_url": { "type": "string" }
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "files"],
        "properties": {
          "id": { "type": "string" },
          "files": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}
