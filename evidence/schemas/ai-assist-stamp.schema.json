{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ai-assist stamp",
  "version": "1.0.0",
  "type": "object",
  "additionalProperties": false,
  "required": ["evidence_id", "generated_at"],
  "properties": {
    "evidence_id": { "type": "string", "pattern": "^EVD-[a-z0-9-]+-[a-z0-9-]+-[0-9]{3}$" },
    "generated_at": { "type": "string", "format": "date-time" }
  }
}
