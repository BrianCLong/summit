{
  "$schema":"https://json-schema.org/draft/2020-12/schema",
  "type":"object",
  "required":["cognitive_surface","threat_hypotheses","mitigations_applied"],
  "properties":{
    "cognitive_surface":{
      "type":"object",
      "required":["channels","narratives"],
      "properties":{
        "channels":{"type":"array","items":{"type":"string"}},
        "narratives":{"type":"array","items":{"type":"string"}},
        "audience_segments":{"type":"array","items":{"type":"string"}}
      },
      "additionalProperties":false
    },
    "threat_hypotheses":{
      "type":"array",
      "items":{
        "type":"object",
        "required":["type","confidence","evidence_refs"],
        "properties":{
          "type":{"type":"string","enum":["CIB","SYNTHETIC_MEDIA","RECOMMENDER_EXPLOITATION","DATA_POISONING"]},
          "confidence":{"type":"string","enum":["LOW","MEDIUM","HIGH"]},
          "evidence_refs":{"type":"array","items":{"type":"string"}}
        },
        "additionalProperties":false
      }
    },
    "mitigations_applied":{
      "type":"array",
      "items":{"type":"string"}
    }
  },
  "additionalProperties":false
}
