{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "summit evidence index",
  "type": "object",
  "properties": {
    "version": {
      "type": ["string", "integer"]
    },
    "items": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "evidence_id": { "type": "string" },
              "files": {
                "oneOf": [
                   { "type": "array", "items": { "type": "string" } },
                   { "type": "object" }
                ]
              },
              "title": { "type": "string" },
              "category": { "type": "string" },
              "artifacts": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["evidence_id"],
            "properties": {
              "evidence_id": { "type": "string" },
              "files": { "type": "object" }
            }
          }
        }
      ]
    },
    "mappings": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["report", "metrics", "stamp"],
        "properties": {
          "report": { "type": "string" },
          "metrics": { "type": "string" },
          "stamp": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": false
}
