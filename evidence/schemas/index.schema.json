{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Evidence Index",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "evidence": { "type": "object" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "evidence_id": { "type": "string", "pattern": "^EVD-[A-Z0-9]+-[A-Z0-9]+-[0-9]{3}$" },
          "report": { "type": "string" },
          "metrics": { "type": "string" },
          "stamp": { "type": "string" }
        },
        "required": ["evidence_id","report","metrics","stamp"],
        "additionalProperties": false
      }
    }
  },
  "required": ["version","items"],
  "additionalProperties": false
}
