{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "summit evidence index",
  "type": "object",
  "required": [
    "mappings"
  ],
  "properties": {
    "version": {
      "anyOf": [
        {
          "type": "integer",
          "enum": [
            1
          ]
        },
        {
          "type": "string"
        }
      ]
    },
    "items": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "evidence_id",
              "files"
            ],
            "properties": {
              "evidence_id": {
                "type": "string"
              },
              "files": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": [
              "files"
            ],
            "properties": {
              "evidence_id": {
                "type": "string"
              },
              "files": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "title": {
                "type": "string"
              },
              "category": {
                "type": "string"
              },
              "artifacts": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": true
          }
        }
      ]
    },
    "mappings": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "report",
          "metrics",
          "stamp"
        ],
        "properties": {
          "report": {
            "type": "string"
          },
          "metrics": {
            "type": "string"
          },
          "stamp": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}