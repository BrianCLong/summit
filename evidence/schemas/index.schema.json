{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "summit evidence index",
  "type": "object",
  "properties": {
    "version": { "type": ["integer", "string"] },
    "evidence": {
      "type": "object",
      "patternProperties": {
        "^EVD-": {
          "type": "object",
          "properties": {
            "evidence_id": { "type": "string" },
            "files": {
              "type": "object",
              "properties": {
                "report": { "type": "string" },
                "metrics": { "type": "string" },
                "stamp": { "type": "string" }
              },
              "required": ["report", "metrics", "stamp"]
            }
          },
          "required": ["evidence_id", "files"]
        }
      }
    },
    "items": { "type": "object" },
    "mappings": { "type": "object" }
  },
  "anyOf": [
    { "required": ["evidence"] },
    { "required": ["items"] },
    { "required": ["mappings"] }
  ],
  "additionalProperties": true
}
