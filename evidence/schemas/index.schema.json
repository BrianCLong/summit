{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "summit evidence index",
  "type": "object",
  "required": ["items"],
  "properties": {
    "version": {
      "type": "integer"
    },
    "items": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "evidence_id": { "type": "string" },
          "files": {
            "type": "object",
            "properties": {
              "report": { "type": "string" },
              "metrics": { "type": "string" },
              "stamp": { "type": "string" }
            },
            "required": ["report", "metrics", "stamp"]
          },
          "title": { "type": "string" },
          "category": { "type": "string" }
        },
        "required": ["evidence_id", "files"],
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
