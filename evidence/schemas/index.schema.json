{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "summit evidence index",
  "type": "object",
  "required": ["version", "items"],
  "properties": {
    "version": {
      "type": "string"
    },
    "items": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "evidence_id": { "type": "string" },
          "files": {
            "type": "array",
            "items": { "type": "string" }
          },
          "title": { "type": "string" },
          "category": { "type": "string" },
          "artifacts": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "anyOf": [{ "required": ["files"] }, { "required": ["artifacts"] }],
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
