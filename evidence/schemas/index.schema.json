{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "summit evidence index",
  "type": "object",
  "properties": {
    "version": {
      "type": ["string", "number"]
    },
    "items": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      }
    },
    "mappings": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["report", "metrics", "stamp"],
        "properties": {
          "report": { "type": "string" },
          "metrics": { "type": "string" },
          "stamp": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": true
}
