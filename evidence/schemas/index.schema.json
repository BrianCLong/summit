{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "item_slug": { "type": "string" },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "evidence_id": { "type": "string" },
          "files": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["evidence_id", "files"]
      }
    }
  },
  "required": ["item_slug", "entries"],
  "additionalProperties": false
}
