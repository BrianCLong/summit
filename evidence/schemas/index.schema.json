{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Evidence Index",
  "type": "object",
  "properties": {
    "version": { "type": "integer" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "evidence_id": { "type": "string" },
          "paths": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["evidence_id", "paths"]
      }
    }
  },
  "required": ["version", "items"]
}
