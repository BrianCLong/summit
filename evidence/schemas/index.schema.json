{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "items"
  ],
  "properties": {
    "items": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/evidenceItem"
      }
    }
  },
  "definitions": {
    "evidenceItem": {
      "type": "object",
      "required": [
        "id",
        "status",
        "description"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "active",
            "deprecated"
          ]
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
