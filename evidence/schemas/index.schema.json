{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Evidence Index",
  "type": "object",
  "required": ["version"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "item": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "required": ["id", "path"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^EVD-[A-Z0-9_-]+$"
              },
              "path": {
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          {
            "required": ["evidence_id", "report", "metrics", "stamp"],
            "properties": {
              "evidence_id": {
                "type": "string"
              },
              "report": {
                "type": "string"
              },
              "metrics": {
                "type": "string"
              },
              "stamp": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        ]
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "files"],
        "properties": {
          "id": {
            "type": "string"
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "additionalProperties": true
}
