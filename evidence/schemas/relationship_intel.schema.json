{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Relationship Intelligence Schema",
  "type": "object",
  "required": ["node_id", "node_type", "relationships"],
  "properties": {
    "node_id": { "type": "string" },
    "node_type": { "type": "string" },
    "relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["target_id", "edge_type", "weight"],
        "properties": {
          "target_id": { "type": "string" },
          "edge_type": { "type": "string" },
          "weight": { "type": "number", "minimum": 0, "maximum": 1 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "privacy_class": { "type": "string", "enum": ["public", "internal", "confidential", "restricted"] }
        }
      }
    }
  }
}
