{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["pack_id", "template_id", "inputs", "outputs"],
  "properties": {
    "pack_id": { "type": "string" },
    "template_id": { "type": "string" },
    "inputs": {
      "type": "object",
      "properties": {
        "topic": { "type": "string" },
        "goal": { "type": "string" }
      },
      "additionalProperties": true
    },
    "outputs": {
      "type": "object",
      "additionalProperties": true
    },
    "never_log_fields": {
      "type": "array",
      "items": { "type": "string" },
      "default": ["inputs.raw_user_text"]
    }
  },
  "additionalProperties": false
}
