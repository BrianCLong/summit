{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "properties": {
    "evidence_version": {
      "type": "string"
    },
    "items": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "evidence_id": {
            "pattern": "^EVD-[a-zA-Z0-9-]+$",
            "type": "string"
          },
          "files": {
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "type": "array"
          }
        },
        "required": [
          "evidence_id",
          "files"
        ],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": [
    "evidence_version",
    "items"
  ],
  "type": "object"
}
