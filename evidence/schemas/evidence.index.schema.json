{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://summit.local/schemas/evidence.index.schema.json",
  "type": "object",
  "required": ["item_slug", "generated_by", "evidence"],
  "properties": {
    "item_slug": { "type": "string", "minLength": 1 },
    "generated_by": { "type": "string", "minLength": 1 },
    "evidence": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["files"],
        "properties": {
          "summary": { "type": "string" },
          "files": { "type": "array", "items": { "type": "string", "minLength": 1 }, "minItems": 1 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
