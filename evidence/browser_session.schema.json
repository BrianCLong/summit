{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.local/schemas/browser-session.schema.json",
  "title": "WebMCP Browser Session",
  "type": "object",
  "required": ["evidence_id", "origin", "timestamp_ms", "actions"],
  "additionalProperties": false,
  "properties": {
    "evidence_id": {
      "type": "string",
      "pattern": "^SUMMIT-WEBMCP-[A-F0-9]{12}$"
    },
    "origin": {
      "type": "string",
      "pattern": "^https://"
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "target", "timestamp_ms", "payload"],
        "additionalProperties": false,
        "properties": {
          "type": { "type": "string" },
          "target": { "type": "string" },
          "timestamp_ms": { "type": "integer", "minimum": 0 },
          "payload": { "type": "object", "additionalProperties": true }
        }
      }
    }
  }
}
