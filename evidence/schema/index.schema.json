{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence Index Schema",
  "type": "object",
  "properties": {
    "version": {
      "type": "string"
    },
    "items": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "files": {
            "type": "array",
            "items": { "type": "string" }
          },
          "artifacts": {
            "type": "array",
            "items": { "type": "string" }
          },
          "title": {
            "type": "string"
          },
          "category": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["version", "items"],
  "additionalProperties": false
}
