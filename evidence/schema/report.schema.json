{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence Report Schema",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": ["pass", "fail", "error", "skipped"]
    },
    "run_id": {
      "type": "string"
    },
    "config": {
      "type": "object",
      "additionalProperties": true
    },
    "summary": {
      "type": "string"
    },
    "adapter": {
      "type": "string"
    },
    "verdict": {
      "type": "string"
    }
  },
  "required": ["status"],
  "additionalProperties": false
}
