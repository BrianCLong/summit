{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "summit_evidence_report",
  "type": "object",
  "required": ["evidence_id", "title", "summary", "artifacts"],
  "properties": {
    "evidence_id": { "type": "string", "pattern": "^EVD-[A-Z0-9]+-[A-Z0-9]+-\\d{3}$" },
    "title": { "type": "string" },
    "summary": { "type": "string" },
    "status": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
