{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.995 },
              { "color": "green", "value": 0.999 }
            ]
          },
          "unit": "percentunit"
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      },
      "pluginVersion": "10.2.2",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "editorMode": "code",
          "expr": "1 - (signer_attestation_failures_total / signer_attestation_requests_total)",
          "interval": "",
          "legendFormat": "success-rate",
          "range": true,
          "refId": "A"
        }
      ],
      "title": "Attestation success rate",
      "type": "gauge"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "fieldConfig": {
        "defaults": {
          "custom": {},
          "unit": "ms"
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "id": 2,
      "options": {
        "legend": { "calcs": ["p50", "p95"], "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single", "sort": "desc" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "editorMode": "code",
          "expr": "histogram_quantile(0.95, sum(rate(signer_attestation_latency_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p95 latency",
          "range": true,
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "editorMode": "code",
          "expr": "sum(rate(signer_attestation_latency_seconds_sum[5m])) / sum(rate(signer_attestation_latency_seconds_count[5m])) * 1000",
          "legendFormat": "avg latency",
          "range": true,
          "refId": "B"
        }
      ],
      "title": "Latency (ms)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "short" }, "overrides": [] },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 14 },
      "id": 3,
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
          "editorMode": "code",
          "expr": "signer_active_key_info",
          "format": "table",
          "instant": true,
          "legendFormat": "{{key_version}}",
          "range": false,
          "refId": "A"
        }
      ],
      "title": "Active key rotation",
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true },
            "indexByName": {},
            "renameByName": {
              "Value": "expires_in_seconds"
            }
          }
        }
      ],
      "type": "table"
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["signer", "attestation"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "timezone": "utc",
  "title": "Signer Service Reliability",
  "uid": "signer-service",
  "version": 1
}
