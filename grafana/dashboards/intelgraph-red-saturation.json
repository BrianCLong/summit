{
  "uid": "intelgraph-red-saturation",
  "title": "IntelGraph RED + Saturation",
  "schemaVersion": 38,
  "version": 1,
  "timezone": "browser",
  "refresh": "30s",
  "time": { "from": "now-6h", "to": "now" },
  "tags": ["intelgraph", "red", "slo", "saturation"],
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "label": "Service",
        "datasource": "Summit Prometheus",
        "refresh": 1,
        "query": "label_values(http_requests_total, service)",
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      },
      {
        "name": "namespace",
        "type": "query",
        "label": "Namespace",
        "datasource": "Summit Prometheus",
        "refresh": 1,
        "query": "label_values(container_cpu_usage_seconds_total, namespace)",
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Rate (req/s)",
      "description": "5m request rate split by service to monitor traffic and throughput.",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "semi-dark-yellow", "value": 100 },
              { "color": "red", "value": 250 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_requests_total{service=~\"$service\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error Rate (5xx %)",
      "description": "Ratio of 5xx responses over total volume using a 5m window.",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 0.02 },
              { "color": "red", "value": 0.05 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_requests_total{service=~\"$service\",status=~\"5..\"}[5m])) / sum by (service) (rate(http_requests_total{service=~\"$service\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "p95 Duration (ms)",
      "description": "Histogram-based 95th percentile latency over 5m.",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 250 },
              { "color": "red", "value": 500 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, service) (rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m]))) * 1000"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "p99 Duration (ms)",
      "description": "Tail latency for the selected services over 5m.",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 400 },
              { "color": "red", "value": 800 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le, service) (rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m]))) * 1000"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU Saturation (cores)",
      "description": "Container CPU usage by namespace to watch for saturation and throttling risk.",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "fieldConfig": {
        "defaults": {
          "unit": "cores",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 0.7 },
              { "color": "red", "value": 0.9 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "sum by (namespace, pod) (rate(container_cpu_usage_seconds_total{container!=\"\",namespace=~\"$namespace\"}[5m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Saturation (% of limit)",
      "description": "Working set memory as a percentage of pod memory limits by namespace.",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green" },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "showLegend": true, "placement": "bottom" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "(sum by (namespace, pod) (container_memory_working_set_bytes{container!=\"\",namespace=~\"$namespace\"}) / clamp_min(sum by (namespace, pod) (kube_pod_container_resource_limits_memory_bytes{container!=\"\",namespace=~\"$namespace\"}), 1)) * 100"
        }
      ]
    }
  ]
}
