{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyDeleteDuringRetention",
      "Effect": "Deny",
      "Principal": "*",
      "Action": [
        "s3:DeleteObject",
        "s3:DeleteObjectVersion",
        "s3:PutObjectLegalHold",
        "s3:PutObjectRetention"
      ],
      "Resource": "arn:aws:s3:::maestro-evidence-bucket/*",
      "Condition": {
        "StringNotEquals": {
          "s3:object-lock-mode": "GOVERNANCE"
        }
      }
    },
    {
      "Sid": "RequireObjectLockHeaders",
      "Effect": "Deny",
      "Principal": "*",
      "Action": ["s3:PutObject"],
      "Resource": "arn:aws:s3:::maestro-evidence-bucket/*",
      "Condition": {
        "Null": {
          "s3:object-lock-mode": "true"
        }
      }
    },
    {
      "Sid": "AllowReadAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "arn:aws:iam::ACCOUNT-ID:role/maestro-evidence-reader",
          "arn:aws:iam::ACCOUNT-ID:role/maestro-evidence-writer"
        ]
      },
      "Action": [
        "s3:GetObject",
        "s3:GetObjectVersion",
        "s3:GetObjectLegalHold",
        "s3:GetObjectRetention",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::maestro-evidence-bucket",
        "arn:aws:s3:::maestro-evidence-bucket/*"
      ]
    },
    {
      "Sid": "AllowWriteWithObjectLock",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT-ID:role/maestro-evidence-writer"
      },
      "Action": [
        "s3:PutObject",
        "s3:PutObjectRetention",
        "s3:PutObjectLegalHold"
      ],
      "Resource": "arn:aws:s3:::maestro-evidence-bucket/*",
      "Condition": {
        "StringEquals": {
          "s3:object-lock-mode": "GOVERNANCE"
        },
        "NumericBetween": {
          "s3:object-lock-retain-until-date": {
            "aws:RequestedRegion": [
              "2024-01-01T00:00:00Z",
              "2030-12-31T23:59:59Z"
            ]
          }
        }
      }
    },
    {
      "Sid": "DenyOverrideWithoutBypassGovernance",
      "Effect": "Deny",
      "Principal": "*",
      "Action": ["s3:BypassGovernanceRetention"],
      "Resource": "arn:aws:s3:::maestro-evidence-bucket/*",
      "Condition": {
        "StringNotEquals": {
          "aws:userid": [
            "AIDACKCEVSQ6C2EXAMPLE:admin-user",
            "AROACKCEVSQ6C2EXAMPLE:maestro-admin"
          ]
        }
      }
    }
  ]
}
