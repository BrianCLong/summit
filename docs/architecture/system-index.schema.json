{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.example.com/architecture/system-index.schema.json",
  "title": "Summit System Index Schema",
  "description": "Schema for Summit's canonical system index.",
  "type": "object",
  "required": [
    "$schema",
    "version",
    "schema_version",
    "generated_at",
    "authority",
    "components",
    "flows",
    "contracts",
    "queries"
  ],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "version": { "type": "string" },
    "schema_version": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "authority": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "components": {
      "type": "array",
      "items": { "$ref": "#/$defs/component" },
      "minItems": 1
    },
    "flows": {
      "type": "array",
      "items": { "$ref": "#/$defs/flow" },
      "minItems": 1
    },
    "contracts": {
      "type": "array",
      "items": { "$ref": "#/$defs/contract" },
      "minItems": 1
    },
    "queries": {
      "type": "array",
      "items": { "$ref": "#/$defs/query" },
      "minItems": 1
    }
  },
  "$defs": {
    "component": {
      "type": "object",
      "required": [
        "id",
        "name",
        "type",
        "path",
        "owner",
        "contracts",
        "dependencies",
        "runtime",
        "data_stores"
      ],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string" },
        "path": { "type": "string" },
        "owner": { "type": "string" },
        "contracts": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" }
        },
        "runtime": {
          "type": "array",
          "items": { "type": "string" }
        },
        "data_stores": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "flow": {
      "type": "object",
      "required": ["id", "name", "source", "target", "contracts", "data", "provenance_required"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "source": { "type": "string" },
        "target": { "type": "string" },
        "contracts": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "data": {
          "type": "array",
          "items": { "type": "string" }
        },
        "provenance_required": { "type": "boolean" }
      }
    },
    "contract": {
      "type": "object",
      "required": ["id", "path", "authority", "scope"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "path": { "type": "string" },
        "authority": { "type": "string" },
        "scope": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      }
    },
    "query": {
      "type": "object",
      "required": ["id", "intent", "response_shape"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "intent": { "type": "string" },
        "response_shape": { "type": "string" }
      }
    }
  }
}
