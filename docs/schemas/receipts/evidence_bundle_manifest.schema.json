{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.summit.example/receipts/evidence_bundle_manifest.schema.json",
  "title": "EvidenceBundleManifest",
  "allOf": [
    { "$ref": "common.schema.json#/$defs/receipt_envelope" },
    {
      "type": "object",
      "properties": {
        "receipt_type": { "const": "EvidenceBundleManifest" },
        "bundle": {
          "type": "object",
          "required": ["bundle_id", "created_at", "scope"],
          "properties": {
            "bundle_id": { "$ref": "common.schema.json#/$defs/ulid" },
            "created_at": { "type": "string", "format": "date-time" },
            "scope": {
              "type": "object",
              "required": ["framework", "period_start", "period_end"],
              "properties": {
                "framework": { "type": "string" },
                "period_start": { "type": "string", "format": "date-time" },
                "period_end": { "type": "string", "format": "date-time" },
                "controls": { "type": "array", "items": { "type": "string" } }
              },
              "additionalProperties": false
            },
            "contents": {
              "type": "object",
              "required": ["receipts"],
              "properties": {
                "receipts": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["receipt_type", "receipt_id", "payload_hash"],
                    "properties": {
                      "receipt_type": { "type": "string" },
                      "receipt_id": { "$ref": "common.schema.json#/$defs/ulid" },
                      "payload_hash": { "type": "string" }
                    },
                    "additionalProperties": false
                  }
                },
                "attachments": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["name", "hash"],
                    "properties": {
                      "name": { "type": "string" },
                      "mime": { "type": "string" },
                      "hash": { "type": "string" }
                    },
                    "additionalProperties": false
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["bundle"],
      "additionalProperties": false
    }
  ]
}
