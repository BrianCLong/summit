{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Summit Evidence ID Schema",
  "description": "Canonical definition of Evidence IDs for Summit Governance",
  "type": "object",
  "properties": {
    "evidence_id": {
      "type": "string",
      "description": "Unique identifier for the evidence artifact",
      "pattern": "^(ops|release)-evidence-[a-zA-Z0-9\\-\\.]+-[0-9]+$"
    },
    "artifact_file": {
      "type": "string",
      "description": "Expected filename in the evidence bundle",
      "pattern": "^(ops|release)-evidence-[a-zA-Z0-9\\-\\.]+-[0-9]+\\.tar\\.gz$"
    },
    "category": {
      "type": "string",
      "enum": ["operational", "release", "audit", "security"]
    },
    "retention_policy": {
      "type": "string",
      "enum": ["90d", "1y", "3y", "7y"]
    }
  },
  "required": ["evidence_id", "artifact_file", "category"]
}
