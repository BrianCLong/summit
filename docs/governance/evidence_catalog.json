{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence ID Catalog",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0.0"
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Z0-9]+-[A-Z0-9.-]+$"
          },
          "description": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["control", "artifact", "test", "doc"]
          }
        },
        "required": ["id", "description"]
      }
    }
  },
  "required": ["version", "entries"],
  "entries": [
    {
      "id": "GOV-001",
      "description": "Evidence ID Consistency Policy",
      "type": "doc"
    },
    {
      "id": "SOC2-CC6.1",
      "description": "Logical Access Security",
      "type": "control"
    }
  ]
}
