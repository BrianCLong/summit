{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "evidence.report.schema.json",
  "title": "EvidenceReport",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "evidenceId",
    "runId",
    "agent",
    "inputSummary",
    "decisions",
    "outputs"
  ],
  "properties": {
    "evidenceId": {
      "type": "string",
      "pattern": "^EVD-[A-Z0-9-]+$"
    },
    "runId": {
      "type": "string",
      "minLength": 1
    },
    "agent": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "inputSummary": {
      "type": "string",
      "minLength": 1
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["step", "rationale"],
        "properties": {
          "step": {
            "type": "string",
            "minLength": 1
          },
          "rationale": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["kind", "ref"],
        "properties": {
          "kind": {
            "type": "string",
            "minLength": 1
          },
          "ref": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
