{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.local/schemas/content-model/brief.schema.json",
  "title": "Brief",
  "description": "A first-class content object that anchors sources, claims, blocks, and governed actions.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "type",
    "status",
    "owner",
    "audience",
    "security_level",
    "created_at",
    "updated_at",
    "sources",
    "claims",
    "actions",
    "policy_tags"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Stable identifier for cross-brief references."
    },
    "type": {
      "type": "string",
      "enum": ["RFC", "runbook", "threat-brief", "deck"],
      "description": "Normalized brief class used for governance and routing."
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "deprecated", "archived"],
      "description": "Lifecycle state for publication gating."
    },
    "owner": {
      "type": "string",
      "minLength": 1,
      "description": "Accountable owner (team, group, or persona)."
    },
    "audience": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "Intended audiences that influence access and layout."
    },
    "security_level": {
      "type": "string",
      "enum": ["public", "internal", "confidential", "restricted", "export_controlled"],
      "description": "Handling designation used by policy-as-code."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp for audit trails."
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp for review schedules."
    },
    "sources": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/SourceRef"
      },
      "description": "Authoritative source references linked to the brief."
    },
    "claims": {
      "type": "array",
      "items": {
        "$ref": "./claim.schema.json"
      },
      "description": "Claims that this brief assembles or validates."
    },
    "blocks": {
      "type": "array",
      "items": {
        "$ref": "./block.schema.json"
      },
      "description": "Reusable content blocks embedded or referenced."
    },
    "block_order": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true,
      "description": "Optional ordered list of block IDs for rendering."
    },
    "actions": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/WorkItemRef"
      },
      "description": "Work items that keep the brief accurate."
    },
    "policy_tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "Governance tags mapped to release and access policy."
    }
  },
  "$defs": {
    "SourceRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["url", "file", "issue", "pr", "doc", "log"],
          "description": "Source type for provenance."
        },
        "uri": {
          "type": "string",
          "minLength": 1,
          "description": "Resolvable URL or URI."
        },
        "path": {
          "type": "string",
          "minLength": 1,
          "description": "Repository-relative path for local documents."
        },
        "repo": {
          "type": "string",
          "minLength": 1,
          "description": "Repository slug for issue/PR sources."
        },
        "number": {
          "type": "integer",
          "minimum": 1,
          "description": "Issue or PR number."
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable source title."
        }
      }
    },
    "WorkItemRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "repo", "number", "state"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["issue", "pr", "workflow"],
          "description": "Work item class that drives content validity."
        },
        "repo": {
          "type": "string",
          "minLength": 1,
          "description": "Repository slug for the work item."
        },
        "number": {
          "type": "integer",
          "minimum": 1,
          "description": "Issue, PR, or workflow run number."
        },
        "state": {
          "type": "string",
          "enum": ["open", "closed", "merged", "blocked", "stale"],
          "description": "Lifecycle state for drift queries."
        },
        "url": {
          "type": "string",
          "minLength": 1,
          "description": "Direct link for audit review."
        }
      }
    }
  }
}
