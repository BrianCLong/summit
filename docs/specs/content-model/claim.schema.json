{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.local/schemas/content-model/claim.schema.json",
  "title": "Claim",
  "description": "Reusable statement with evidence and policy tagging.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "text",
    "topic",
    "confidence",
    "last_reviewed_at",
    "created_by",
    "tags",
    "evidence",
    "policy_tags"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Stable identifier for cross-brief reuse."
    },
    "text": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable statement of record."
    },
    "topic": {
      "type": "string",
      "minLength": 1,
      "description": "Topic or taxonomy node for discovery."
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Normalized confidence (0-1)."
    },
    "last_reviewed_at": {
      "type": "string",
      "format": "date-time",
      "description": "Most recent validation timestamp."
    },
    "created_by": {
      "type": "string",
      "minLength": 1,
      "description": "Originator of the claim."
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Freeform tags for filtering and rollups."
    },
    "evidence": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/EvidenceRef"
      },
      "minItems": 1,
      "description": "Evidence entries that support the claim."
    },
    "work_items": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/WorkItemRef"
      },
      "description": "Active work items that keep evidence current."
    },
    "policy_tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "description": "Policy labels for handling and release gating."
    }
  },
  "$defs": {
    "EvidenceRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "uri"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["url", "file", "issue", "pr", "doc", "log"],
          "description": "Evidence source type."
        },
        "uri": {
          "type": "string",
          "minLength": 1,
          "description": "Resolvable URL or URI."
        },
        "excerpt": {
          "type": "string",
          "minLength": 1,
          "description": "Relevant excerpt captured for audits."
        },
        "captured_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the evidence was captured."
        }
      }
    },
    "WorkItemRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "repo", "number", "state"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["issue", "pr", "workflow"],
          "description": "Work item class."
        },
        "repo": {
          "type": "string",
          "minLength": 1,
          "description": "Repository slug for the work item."
        },
        "number": {
          "type": "integer",
          "minimum": 1,
          "description": "Issue, PR, or workflow run number."
        },
        "state": {
          "type": "string",
          "enum": ["open", "closed", "merged", "blocked", "stale"],
          "description": "Lifecycle state used in drift checks."
        },
        "url": {
          "type": "string",
          "minLength": 1,
          "description": "Direct link for review."
        }
      }
    }
  }
}
