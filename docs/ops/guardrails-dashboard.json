{
  "title": "Guardrails Dashboard",
  "panels": [
    {
      "title": "Policy Denial Rate",
      "type": "graph",
      "query": "rate(guardrails_enforcement_duration_seconds_count{status=\"deny\"}[5m])",
      "alert": {
        "condition": "value > 0.05",
        "message": "High policy denial rate detected (> 5%)"
      }
    },
    {
      "title": "Enforcement Latency (p99)",
      "type": "graph",
      "query": "histogram_quantile(0.99, rate(guardrails_enforcement_duration_seconds_bucket[5m]))"
    },
    {
      "title": "Write Operations Volume",
      "type": "graph",
      "query": "sum(rate(guardrails_enforcement_duration_seconds_count[5m])) by (action)"
    },
    {
      "title": "Provenance Ledger Integrity",
      "type": "gauge",
      "query": "provenance_ledger_integrity_status"
    }
  ]
}
