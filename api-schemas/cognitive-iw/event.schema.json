{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.summit.io/cognitive-iw/event.schema.json",
  "title": "Cognitive I&W Event",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_id",
    "source",
    "platform",
    "occurred_at",
    "features",
    "hashes"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Event identifier from ingestion pipeline."
    },
    "source": {
      "type": "string",
      "description": "Originating feed or collection channel."
    },
    "platform": {
      "type": "string",
      "description": "Platform name or category."
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "actor": {
      "type": "object",
      "additionalProperties": false,
      "required": ["actor_hash"],
      "properties": {
        "actor_hash": {
          "type": "string",
          "description": "Salted hash of actor identifier."
        },
        "account_age_days": { "type": "integer", "minimum": 0 }
      }
    },
    "features": {
      "type": "object",
      "additionalProperties": false,
      "required": ["emotion_score", "virality_score"],
      "properties": {
        "emotion_score": {
          "type": "number",
          "minimum": -1,
          "maximum": 1,
          "description": "Proxy for emotional intensity (negative to positive)."
        },
        "virality_score": {
          "type": "number",
          "minimum": 0
        },
        "coordination_key": {
          "type": "string",
          "description": "Hashable key used to detect synchronized activity."
        },
        "cluster_id": { "type": "string" },
        "language": { "type": "string" }
      }
    },
    "hashes": {
      "type": "object",
      "additionalProperties": false,
      "required": ["content_hash", "dedupe_hash"],
      "properties": {
        "content_hash": {
          "type": "string",
          "description": "Salted hash of content; no raw text stored."
        },
        "dedupe_hash": {
          "type": "string",
          "description": "Stable hash for deduplication."
        }
      }
    },
    "flags": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "raw_content_included": { "type": "boolean", "const": false }
      }
    }
  }
}
