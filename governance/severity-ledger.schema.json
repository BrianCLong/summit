{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://summit.dev/schemas/severity-ledger.schema.json",
  "title": "Summit Severity Ledger",
  "description": "Machine-readable schema for P0/P1/P2 severity ledger enforcement",
  "type": "object",
  "additionalProperties": false,
  "required": ["issues"],
  "properties": {
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["description", "last_updated", "schema"],
      "properties": {
        "description": { "type": "string", "minLength": 1 },
        "last_updated": { "type": "string", "format": "date-time" },
        "schema": { "type": "string", "minLength": 1 }
      }
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "title",
          "severity",
          "status",
          "rationale",
          "owner_agent",
          "introduced_in"
        ],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "severity": { "type": "string", "enum": ["P0", "P1", "P2"] },
          "status": { "type": "string", "enum": ["open", "closed"] },
          "rationale": { "type": "string", "minLength": 1 },
          "owner_agent": { "type": "string", "minLength": 1 },
          "introduced_in": { "type": "string", "minLength": 1 },
          "resolved_in": { "type": ["string", "null"], "minLength": 1 },
          "evidence": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "notes": { "type": "string" }
        }
      }
    }
  }
}
