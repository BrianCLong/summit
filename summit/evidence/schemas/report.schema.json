{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "summit-evidence-report",
  "type": "object",
  "required": ["evidence_id", "item", "summary", "artifacts"],
  "properties": {
    "evidence_id": {"type": "string"},
    "item": {
      "type": "object",
      "required": ["slug", "source", "version"],
      "properties": {
        "slug": {"type": "string"},
        "source": {"type": "string"},
        "version": {"type": "string"}
      }
    },
    "summary": {"type": "string"},
    "artifacts": {"type": "array", "items": {"type": "string"}}
  },
  "additionalProperties": false
}
