{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SummitEvidenceReport",
  "type": "object",
  "required": ["evidence_id", "summary", "environment", "backend", "artifacts"],
  "properties": {
    "evidence_id": { "type": "string", "pattern": "^EVD-[A-Z0-9\\-]+$" },
    "summary": { "type": "string" },
    "environment": { "type": "string" },
    "backend": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
