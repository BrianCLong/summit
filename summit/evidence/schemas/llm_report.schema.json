{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "summit_evidence_report",
  "type": "object",
  "required": ["evidence_id", "run_id", "summary", "artifacts"],
  "properties": {
    "evidence_id": {"type": "string", "pattern": "^EVD-[A-Z0-9]+-[A-Z]+-[0-9]{3}$"},
    "run_id": {"type": "string"},
    "summary": {"type": "string"},
    "artifacts": {
      "type": "array",
      "items": {"type": "object", "required": ["path", "sha256"], "properties": {
        "path": {"type": "string"},
        "sha256": {"type": "string"}
      }}
    }
  }
}
