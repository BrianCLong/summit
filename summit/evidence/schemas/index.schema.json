{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Evidence Index",
  "type": "object",
  "required": ["run_id", "evidence"],
  "properties": {
    "run_id": { "type": "string" },
    "evidence": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["files"],
        "properties": {
          "files": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": false
}
