{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Evidence Index",
  "type": "object",
  "required": ["version", "items"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["evidence_id", "files", "sha256"],
        "properties": {
          "evidence_id": {
            "type": "string",
            "pattern": "^EVD-[A-Z0-9-]+$"
          },
          "files": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "sha256": {
            "type": "array",
            "items": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
            "minItems": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
