{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "summit_evidence_metrics",
  "type": "object",
  "required": ["run_id", "model", "metrics"],
  "properties": {
    "run_id": {"type": "string"},
    "model": {"type": "string"},
    "metrics": {
      "type": "object",
      "properties": {
        "accuracy": {"type": "number"},
        "consistency": {"type": "number"},
        "p95_latency_ms": {"type": "number"},
        "cost_usd_est": {"type": "number"},
        "refusal_rate": {"type": "number"}
      },
      "additionalProperties": true
    }
  }
}
