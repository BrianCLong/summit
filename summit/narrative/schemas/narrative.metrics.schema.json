{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Narrative Analysis Metrics",
  "type": "object",
  "required": ["evidence_id", "metrics"],
  "properties": {
    "evidence_id": {
      "type": "string",
      "pattern": "^EVD-NARRATIVE-[A-Z0-9\\-]+$"
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
