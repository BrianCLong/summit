{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "items"],
  "properties": {
    "version": { "type": "string" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["evidence_id", "report", "metrics", "stamp"],
        "properties": {
          "evidence_id": { "type": "string", "pattern": "^EVD-[A-Z0-9-]+$" },
          "report": { "type": "string" },
          "metrics": { "type": "string" },
          "stamp": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": false
}
