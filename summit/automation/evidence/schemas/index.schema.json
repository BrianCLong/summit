{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Automation Evidence Index",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^EVD-[A-Z0-9-]+$": {
      "type": "object",
      "additionalProperties": false,
      "required": ["files", "description"],
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "description": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
