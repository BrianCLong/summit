{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Automation Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "automation_id",
    "project_root",
    "status",
    "pii_present",
    "findings",
    "diff_summary"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "automation_id": {
      "type": "string",
      "minLength": 1
    },
    "project_root": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["ok", "no_findings", "findings", "error"]
    },
    "pii_present": {
      "type": "boolean"
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["severity", "title", "details", "paths"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "details": {
            "type": "string",
            "minLength": 1
          },
          "paths": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "diff_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["files_changed", "insertions", "deletions"],
      "properties": {
        "files_changed": {
          "type": "integer",
          "minimum": 0
        },
        "insertions": {
          "type": "integer",
          "minimum": 0
        },
        "deletions": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
