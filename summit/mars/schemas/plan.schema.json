{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MARS Plan",
  "type": "object",
  "required": ["task", "steps"],
  "properties": {
    "task": { "type": "string" },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "cost"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "cost": { "type": "integer" }
        }
      }
    }
  }
}
