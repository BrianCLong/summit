{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MARS Ledger",
  "type": "object",
  "required": ["budget_limit", "total_spent", "entries"],
  "properties": {
    "budget_limit": { "type": "integer" },
    "total_spent": { "type": "integer" },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["task_id", "task_type", "cost_units", "running_total"],
        "properties": {
          "task_id": { "type": "string" },
          "task_type": { "type": "string" },
          "cost_units": { "type": "integer" },
          "running_total": { "type": "integer" }
        }
      }
    }
  }
}
