{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StartupProfile.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["startup_name", "source", "problem", "solution", "mechanism", "claims", "trust_tier"],
  "properties": {
    "startup_name": {"type": "string"},
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["url", "published_date"],
      "properties": {
        "url": {"type": "string"},
        "published_date": {"type": "string"}
      }
    },
    "sector_tags": {"type": "array", "items": {"type": "string"}},
    "problem": {"type": "string"},
    "solution": {"type": "string"},
    "mechanism": {"type": "array", "items": {"type": "string"}},
    "claims": {"type": "array", "items": {"$ref": "claim_v1.json"}},
    "trust_tier": {"type": "string", "enum": ["untrusted", "sourced", "verified"]},
    "assumptions": {"type": "array", "items": {"type": "string"}}
  }
}
