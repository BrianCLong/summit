{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./claim.schema.json",
  "title": "Claim (Canonical v1)",
  "type": "object",
  "properties": {
    "id": { "$ref": "../base.schema.json#/$defs/Identifier" },
    "schemaVersion": { "const": "v1" },
    "entityType": { "const": "Claim" },
    "statement": { "type": "string" },
    "subjectId": { "$ref": "../base.schema.json#/$defs/Identifier" },
    "evidenceIds": {
      "type": "array",
      "items": { "$ref": "../base.schema.json#/$defs/Identifier" }
    },
    "support": {
      "type": "string",
      "enum": ["supports", "contradicts", "neutral"]
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "issuedAt": { "$ref": "../base.schema.json#/$defs/Timestamp" },
    "metadata": { "$ref": "../base.schema.json#/$defs/EntityMetadata" }
  },
  "required": ["id", "schemaVersion", "entityType", "statement", "support"],
  "additionalProperties": false
}
