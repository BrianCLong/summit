{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./base.schema.json",
  "title": "IntelGraph Canonical Base Types v1",
  "$defs": {
    "Identifier": {
      "type": "string",
      "description": "Stable identifier used across services; prefer ULID/UUID." ,
      "minLength": 3,
      "maxLength": 128
    },
    "Timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "RFC 3339 timestamp in UTC"
    },
    "ExternalReference": {
      "type": "object",
      "properties": {
        "system": { "type": "string" },
        "id": { "type": "string" },
        "uri": { "type": "string", "format": "uri" }
      },
      "required": ["system", "id"],
      "additionalProperties": false
    },
    "EntityMetadata": {
      "type": "object",
      "properties": {
        "schemaVersion": { "const": "v1" },
        "sourceSystem": { "type": "string" },
        "ingestedAt": { "$ref": "#/$defs/Timestamp" },
        "lastUpdatedAt": { "$ref": "#/$defs/Timestamp" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["schemaVersion"],
      "additionalProperties": false
    },
    "GeoPoint": {
      "type": "object",
      "properties": {
        "lat": { "type": "number", "minimum": -90, "maximum": 90 },
        "lon": { "type": "number", "minimum": -180, "maximum": 180 }
      },
      "required": ["lat", "lon"],
      "additionalProperties": false
    },
    "TimeRange": {
      "type": "object",
      "properties": {
        "start": { "$ref": "#/$defs/Timestamp" },
        "end": { "$ref": "#/$defs/Timestamp" }
      },
      "required": ["start"],
      "additionalProperties": false
    }
  }
}
