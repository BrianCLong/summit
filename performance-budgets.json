{
  "version": "1.0",
  "global": {
    "default_p95_budget_ms": 200,
    "default_p99_budget_ms": 500,
    "default_error_rate_budget": 0.01,
    "baseline_window_hours": 24,
    "comparison_window_minutes": 15
  },
  "endpoints": {
    "/health": {
      "p95_budget_ms": 50,
      "p99_budget_ms": 100,
      "error_rate_budget": 0.001,
      "critical": true,
      "description": "Health check endpoint - must be fast for load balancer"
    },
    "/health/ready": {
      "p95_budget_ms": 100,
      "p99_budget_ms": 200,
      "error_rate_budget": 0.005,
      "critical": true,
      "description": "Readiness check with database/cache validation"
    },
    "/graphql": {
      "p95_budget_ms": 300,
      "p99_budget_ms": 800,
      "error_rate_budget": 0.02,
      "critical": true,
      "description": "Main GraphQL API endpoint"
    },
    "/api/v1/entities": {
      "p95_budget_ms": 250,
      "p99_budget_ms": 600,
      "error_rate_budget": 0.015,
      "critical": false,
      "description": "Entity CRUD operations"
    },
    "/api/v1/entities/{id}": {
      "p95_budget_ms": 150,
      "p99_budget_ms": 400,
      "error_rate_budget": 0.01,
      "critical": false,
      "description": "Single entity retrieval"
    },
    "/api/v1/search": {
      "p95_budget_ms": 500,
      "p99_budget_ms": 1200,
      "error_rate_budget": 0.03,
      "critical": false,
      "description": "Full-text search functionality"
    },
    "/api/v1/analytics": {
      "p95_budget_ms": 800,
      "p99_budget_ms": 2000,
      "error_rate_budget": 0.05,
      "critical": false,
      "description": "Analytics and reporting endpoints"
    },
    "/metrics": {
      "p95_budget_ms": 100,
      "p99_budget_ms": 250,
      "error_rate_budget": 0.001,
      "critical": false,
      "description": "Prometheus metrics endpoint"
    },
    "/api/v1/auth/login": {
      "p95_budget_ms": 300,
      "p99_budget_ms": 800,
      "error_rate_budget": 0.02,
      "critical": true,
      "description": "User authentication endpoint"
    },
    "/api/v1/auth/refresh": {
      "p95_budget_ms": 100,
      "p99_budget_ms": 300,
      "error_rate_budget": 0.01,
      "critical": true,
      "description": "Token refresh endpoint"
    }
  },
  "monitoring": {
    "prometheus_url": "http://prometheus:9090",
    "grafana_dashboard": "https://grafana.intelgraph.com/d/endpoint-performance",
    "alert_manager_url": "http://alertmanager:9093"
  },
  "alerting": {
    "slack_webhook": null,
    "github_issues": true,
    "email_notifications": false,
    "pagerduty_integration": false
  },
  "enforcement": {
    "fail_pr_on_critical_breach": true,
    "fail_pr_on_any_breach": false,
    "warning_threshold_percent": 80,
    "grace_period_minutes": 30
  }
}
