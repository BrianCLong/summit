{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FactMarkets Report",
  "type": "object",
  "required": ["evidence_id", "summary", "claims", "limitations", "needs_review"],
  "properties": {
    "evidence_id": { "type": "string" },
    "summary": { "type": "string" },
    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["claim_id", "text", "status"],
        "properties": {
          "claim_id": { "type": "string" },
          "text": { "type": "string" },
          "status": { "type": "string", "enum": ["VERIFIED", "INCONSISTENT", "UNVERIFIABLE", "NEEDS_REVIEW"] },
          "reconciliation": {
            "type": "object",
            "properties": {
              "filing_ref": { "type": "string" },
              "evidence_pointer": { "type": "string" }
            }
          }
        }
      }
    },
    "limitations": { "type": "array", "items": { "type": "string" } },
    "needs_review": { "type": "boolean" }
  }
}
