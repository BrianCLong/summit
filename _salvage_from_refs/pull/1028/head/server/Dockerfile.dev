FROM node:20-alpine

WORKDIR /app

# Install nodemon globally (as root)
RUN npm install -g nodemon

# Create a non-root user
RUN addgroup --system appgroup && adduser --system --ingroup appgroup appuser

# Copy package files and install as root
COPY package*.json ./
RUN npm ci

# Copy source code and set permissions
COPY . .
RUN mkdir -p uploads logs && chown -R appuser:appgroup /app

# Switch to non-root user
USER appuser

HEALTHCHECK --interval=30s --timeout=10s --retries=3 CMD curl -f http://localhost:4000/graphql || exit 1

# Expose ports
EXPOSE 4000 9229

# Start development server with debugging
CMD ["npm", "run", "dev"]
