{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ontology Schema",
  "type": "object",
  "properties": {
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "entity": { "type": "string" },
    "props": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "required": { "type": "boolean" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "values": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["name", "type"]
      }
    }
  },
  "required": ["version", "entity"],
  "additionalProperties": true
}
