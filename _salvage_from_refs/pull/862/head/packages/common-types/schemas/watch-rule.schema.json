{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WatchRule",
  "type": "object",
  "required": ["id", "name", "predicate", "action"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "predicate": {
      "type": "object",
      "required": ["field", "op", "value"],
      "properties": {
        "field": { "type": "string" },
        "op": { "enum": ["==", "in", "~", ">="] },
        "value": {}
      }
    },
    "action": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "enum": ["CREATE_ALERT", "BLOCK_MERGE", "TAG", "NOTIFY"] },
        "severity": { "type": "string" },
        "tag": { "type": "string" },
        "channel": { "type": "string" }
      }
    }
  }
}
