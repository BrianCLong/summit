{
  "name": "graphql-bff",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint -c .eslintrc.cjs .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest --runInBand",
    "contract:federation": "jest --runInBand __tests__/contract.test.ts",
    "sec:zap": "echo 'zap scan placeholder'",
    "docker:build": "docker build . -t graphql-bff"
  },
  "dependencies": {
    "@apollo/gateway": "^2.8.3",
    "@apollo/server": "^4.11.0",
    "@opentelemetry/api": "^1.9.0",
    "express": "^4.21.1",
    "express-rate-limit": "^7.1.5",
    "graphql": "^16.8.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-validation-complexity": "^0.4.2",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@apollo/subgraph": "^2.8.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.30",
    "@types/express-rate-limit": "^5.1.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "graphql-tag": "^2.12.6",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/__tests__"],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  }
}
