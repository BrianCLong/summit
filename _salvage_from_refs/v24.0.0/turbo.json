{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"], "cache": true },
    "test":  { "dependsOn": ["build"], "inputs": ["src/**","test/**","jest.config.*"], "cache": true },
    "lint":  { "inputs": ["src/**",".eslintrc.*","package.json"], "cache": true }
  },
  "remoteCache": {
    "store": "s3",
    "endpoint": "${TURBO_S3_ENDPOINT}",
    "bucket": "${TURBO_S3_BUCKET}",
    "region": "us-east-1",
    "accessKeyId": "${TURBO_S3_KEY}",
    "secretAccessKey": "${TURBO_S3_SECRET}"
  }
}