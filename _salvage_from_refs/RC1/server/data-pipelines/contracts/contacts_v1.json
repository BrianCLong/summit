{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ContactsV1Contract", 
  "version": "1.0.0",
  "description": "Contact data source contract for IntelGraph person entities",
  "type": "object",
  "required": ["id", "full_name", "email"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique contact identifier",
      "minLength": 1
    },
    "full_name": {
      "type": "string",
      "description": "Contact full name",
      "minLength": 2,
      "maxLength": 100,
      "pattern": "^[A-Za-z\\s\\-\\.]+$"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Contact email address",
      "classification": "pii"
    },
    "phone": {
      "type": "string",
      "description": "Contact phone number",
      "pattern": "^\\+?[\\d\\s\\-\\(\\)]{7,15}$",
      "classification": "pii"
    },
    "organization": {
      "type": "string",
      "description": "Contact organization",
      "maxLength": 100
    },
    "title": {
      "type": "string",
      "description": "Job title",
      "maxLength": 100
    },
    "location": {
      "type": "string",
      "description": "Contact location",
      "maxLength": 100
    },
    "linkedin_url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://.*linkedin\\.com/.*"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string", 
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "enum": ["crm", "manual", "import", "api"]
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "id": "contact_123456",
      "full_name": "Alice Johnson",
      "email": "alice.johnson@example.com",
      "phone": "+1-555-123-4567",
      "organization": "TechCorp Inc",
      "title": "Software Engineer",
      "location": "San Francisco, CA",
      "linkedin_url": "https://linkedin.com/in/alicejohnson",
      "created_at": "2025-08-14T10:00:00Z",
      "updated_at": "2025-08-14T10:00:00Z",
      "source": "crm"
    }
  ],
  "sla": {
    "freshness_hours": 4,
    "completeness_threshold": 0.9,
    "schema_compatibility": "forward"
  },
  "metadata": {
    "owner": "sales-team",
    "contact": "data-team@intelgraph.com", 
    "created_at": "2025-08-14T00:00:00Z",
    "classification": "confidential",
    "retention_days": 2555,
    "gdpr_applicable": true
  }
}