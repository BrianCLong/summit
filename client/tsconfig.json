{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "noEmit": true,
    "noImplicitAny": false,
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "../types/shims",
      "./types/shims"
    ],
    "jsxImportSource": "react",
    "paths": {
      "@/*": ["./src/*"],
      "zod/v4": ["../types/shims/zod-v4.d.ts", "./types/shims/zod-v4.d.ts"]
    }
  },
  "include": ["src/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "build", "src/**/__tests__/**", "src/components/**/__tests__/**", "src/components/ai-enhanced/tests/**"],
  "files": ["types/custom.d.ts", "types/mui.d.ts", "types/grid2.d.ts"]
}
