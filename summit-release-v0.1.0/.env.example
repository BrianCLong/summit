# Summit v0.1.0 - Environment Configuration Template
#
# Copy this to .env and customize for your deployment
# Do NOT commit .env to version control

# Postgres
POSTGRES_DB=summit
POSTGRES_USER=summit
POSTGRES_PASSWORD=postgrespass
POSTGRES_PORT=15432

# Redis
REDIS_PASSWORD=redispass
REDIS_HOST_PORT=16379

# Neo4j (using alternative ports to avoid conflicts)
NEO4J_AUTH=neo4j/neo4jpass
NEO4JLABS_PLUGINS=["apoc"]
NEO4J_apoc_export_file_enabled=true
NEO4J_apoc_import_file_enabled=true
NEO4J_HTTP_PORT=17474
NEO4J_BOLT_PORT=17687

# Adminer
ADMINER_PORT=18080

# App layer
API_PORT=18081
WEB_PORT=18082
NEO4J_PASSWORD=neo4jpass

# Security
JWT_SECRET=change-me-at-least-32-chars
JWT_REFRESH_SECRET=change-me-different-32-chars
SESSION_SECRET=another-long-secret

# Logging
LOG_LEVEL=info
NODE_ENV=production