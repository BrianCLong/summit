{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Connector Policy (deny-by-default)",
  "type": "object",
  "required": ["connector", "auth", "data_handling", "allowed_behaviors"],
  "properties": {
    "connector": { "type": "string" },
    "auth": {
      "type": "object",
      "required": ["mode"],
      "properties": {
        "mode": { "type": "string", "enum": ["oauth", "api_key", "none"] }
      },
      "additionalProperties": false
    },
    "data_handling": {
      "type": "object",
      "required": ["never_log_fields", "retention_days"],
      "properties": {
        "never_log_fields": { "type": "array", "items": { "type": "string" } },
        "retention_days": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "allowed_behaviors": {
      "type": "object",
      "required": ["publish", "read_analytics", "scrape"],
      "properties": {
        "publish": { "type": "boolean" },
        "read_analytics": { "type": "boolean" },
        "scrape": { "type": "boolean", "const": false }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
