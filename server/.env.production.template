# IntelGraph Production Environment Configuration
# This file should be copied to .env and values updated for your environment

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
PORT=4000

# Database Configuration
POSTGRES_HOST=postgresql-service
POSTGRES_USER=intelgraph
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_DB=intelgraph
POSTGRES_PORT=5432

# Neo4j Configuration
NEO4J_URI=bolt://neo4j-service:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=${NEO4J_PASSWORD}

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# Security Configuration (CRITICAL - Replace with secure values)
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}

# CORS Configuration
ALLOWED_ORIGINS=https://app.intelgraph.com,https://admin.intelgraph.com

# Rate Limiting
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW_MS=900000

# Monitoring
PROMETHEUS_METRICS_ENABLED=true
METRICS_PORT=9090

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:14268/api/traces