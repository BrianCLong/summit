{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Database Configuration",
  "type": "object",
  "properties": {
    "host": {
      "type": "string",
      "format": "hostname"
    },
    "port": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    },
    "user": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "database": {
      "type": "string"
    }
  },
  "required": ["host", "port", "user", "password", "database"]
}
