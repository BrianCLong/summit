{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Application Configuration",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "description": "Configuration version for migration."
    },
    "database": { "$ref": "./database.schema.json" },
    "auth": { "$ref": "./auth.schema.json" },
    "services": { "$ref": "./services.schema.json" },
    "features": { "$ref": "./features.schema.json" },
    "security": { "$ref": "./security.schema.json" },
    "environments": {
      "type": "object",
      "description": "Environment-specific overrides keyed by environment name.",
      "additionalProperties": { "type": "object" }
    }
  },
  "required": ["version", "database", "auth"]
}
