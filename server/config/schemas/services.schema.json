{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Services Configuration",
  "type": "object",
  "properties": {
    "redis": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["url"]
    },
    "neo4j": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "user": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["url", "user", "password"]
    }
  }
}
