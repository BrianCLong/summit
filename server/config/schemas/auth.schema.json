{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Authentication Configuration",
  "type": "object",
  "properties": {
    "jwt": {
      "type": "object",
      "properties": {
        "secret": {
          "type": "string"
        },
        "expiresIn": {
          "type": "string",
          "pattern": "^[0-9]+[smhdy]$"
        }
      },
      "required": ["secret", "expiresIn"]
    },
    "apiKey": {
      "type": "object",
      "properties": {
        "header": {
          "type": "string"
        }
      },
      "required": ["header"]
    }
  },
  "required": ["jwt"]
}
