{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Security Scenario",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name",
    "description",
    "category",
    "intent",
    "policyMode",
    "initialPrompt",
    "toolRequest",
    "expected"
  ],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "category": {
      "type": "string",
      "enum": ["prompt-injection", "tool-misuse", "attribution", "redaction"]
    },
    "intent": { "type": "string" },
    "policyMode": { "type": "string", "enum": ["strict", "permissive"] },
    "initialPrompt": { "type": "string" },
    "toolRequest": {
      "type": "object",
      "required": ["requested", "allowlist"],
      "properties": {
        "requested": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "action": { "type": "string" },
              "resources": { "type": "array", "items": { "type": "string" } },
              "budget": { "type": "number" }
            }
          }
        },
        "allowlist": { "type": "array", "items": { "type": "string" } },
        "maxBudget": { "type": "number" }
      }
    },
    "attribution": {
      "type": "object",
      "properties": {
        "principal": { "type": "string" },
        "correlationIds": { "type": "array", "items": { "type": "string" } },
        "enforce": { "type": "boolean" },
        "spoofed": { "type": "boolean" }
      }
    },
    "toolResponse": {
      "type": "object",
      "properties": {
        "output": { "type": "string" }
      }
    },
    "expected": {
      "type": "object",
      "required": ["decision"],
      "properties": {
        "decision": { "type": "string", "enum": ["allow", "deny"] },
        "rationaleIncludes": { "type": "array", "items": { "type": "string" } },
        "requiredFindings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["category", "severity"],
            "properties": {
              "category": { "type": "string" },
              "severity": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"]
              },
              "evidence": { "type": "string" },
              "remediation": { "type": "string" }
            }
          }
        },
        "assertions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["decision", "finding", "trace", "redaction"]
              },
              "expectedDecision": { "type": "string", "enum": ["allow", "deny"] },
              "findingCategory": { "type": "string" },
              "minSeverity": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"]
              },
              "traceTag": { "type": "string" },
              "redactionToken": { "type": "string" }
            }
          }
        },
        "redactions": { "type": "array", "items": { "type": "string" } },
        "classification": { "type": "string" }
      }
    }
  }
}
