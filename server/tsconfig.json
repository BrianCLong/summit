{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "../",
    "outDir": "./dist",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node", "jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*", "../tests/**/*"],
  "exclude": [
    "node_modules",
    "../node_modules",
    "dist",
    "src/test-setup.ts",
    "jest.config.ts",
    "tests/**/*",
    "../tests/**/*",
    "src/**/__tests__/**/*",
    "src/**/*.test.ts",
    "**/*.test.ts"
  ]
}
