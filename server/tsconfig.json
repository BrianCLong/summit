{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["ES2022"],
    "types": ["node", "jest"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/conductor/**",
    "src/coherence/**",
    "src/ai/**",
    "src/kpro/**",
    "src/nl2cypher/**",
    "src/runbooks/**",
    "src/routes/replay.ts",
    "src/maestro/**",
    "src/monitoring/opentelemetry.ts",
    "src/graphql/resolvers/v040/**",
    "src/graphql/resolvers/v041/**",
    "src/realtime/kafkaConsumer.ts",
    "src/workers/enhanced-worker-template.ts",
    "src/workers/embeddingUpsertWorker.ts",
    "src/workers/canary-escalate.ts",
    "src/middleware/spiffe-auth.ts",
    "src/middleware/maestro-authz.ts",
    "src/services/AlertTriageV2Service.ts",
    "src/services/AnalystDashboardService.ts",
    "src/services/AnalystFeedbackService.ts",
    "src/services/DetectionContentPackV5.ts",
    "src/services/DetectionContentPackV6.ts",
    "src/services/SOARConnectorV1Service.ts",
    "src/services/SOARPlaybookService.ts",
    "src/services/DefensivePsyOpsService.ts",
    "src/resolvers/WargameResolver.ts",
    "src/telemetry/tracing.ts",
    "src/subscriptions/pubsub.ts",
    "src/graphql/resolvers/multimodalResolvers.ts",
    "src/services/MediaUploadService.ts",
    "src/services/GACoremetricsService.ts",
    "src/config/distributed/**",
    "src/config/graphrag.ts",
    "src/config/secrets.ts",
    "src/config/tenant-database.ts",
    "src/federal/**",
    "src/runtime/breakers.ts",
    "src/qam/IncidentAutoReweighter.ts",
    "src/**/__tests__/**",
