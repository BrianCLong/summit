{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "Node16",
    "moduleResolution": "Node16",
    "rootDir": ".",
    "outDir": "./dist",
    "downlevelIteration": true,
    "allowJs": true,
    "sourceMap": true,
    "lib": ["ES2022"],
    "paths": {
      "@/*": ["./src/*"],
      "zod/v4": ["../types/shims/zod-v4.d.ts"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*", "src/**/__tests__/**/*", "tests/**/*", "health/**/*"],
  "exclude": ["node_modules", "dist"]
}
