{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist/server",
    "rootDir": "..",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@intelgraph/*": [
        "../packages/*/src"
      ],
      "@summit/*": [
        "../packages/*/src"
      ],
      "@companyos/*": [
        "../packages/*"
      ],
      "@libs/*": [
        "../libs/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../packages/**/*",
    "../libs/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}