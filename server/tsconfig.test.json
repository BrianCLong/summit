{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "isolatedModules": true
  },
  "include": ["src/**/*", "tests/**/*", "src/**/__tests__/**/*"],
  "exclude": ["dist", "node_modules"]
}
