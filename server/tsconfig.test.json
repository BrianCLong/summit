{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "tests/**/*", "src/**/__tests__/**/*", "../packages/**/*"],
  "exclude": ["dist", "node_modules"]
}
