{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "src/app.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/**",
    "src/**/tests/**",
    "src/**/__mocks__/**"
  ]
}
