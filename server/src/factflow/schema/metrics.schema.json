{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FactFlow Metrics",
  "type": "object",
  "properties": {
    "job_id": {
      "type": "string"
    },
    "processing_time_ms": {
      "type": "number"
    },
    "audio_duration_sec": {
      "type": "number"
    },
    "cache_hit": {
      "type": "boolean"
    },
    "claims_count": {
      "type": "number"
    },
    "verified_count": {
      "type": "number"
    },
    "needs_review_count": {
      "type": "number"
    }
  },
  "required": ["job_id", "processing_time_ms", "claims_count"]
}
