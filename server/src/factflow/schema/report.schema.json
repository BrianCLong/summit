{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FactFlow Report",
  "type": "object",
  "properties": {
    "job_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "speaker": {
            "type": "string"
          },
          "time_range": {
            "type": "object",
            "properties": {
              "start": { "type": "number" },
              "end": { "type": "number" }
            },
            "required": ["start", "end"]
          },
          "verdict": {
            "type": "string",
            "enum": ["verified", "disputed", "unverified", "needs_review"]
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "evidence": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "source": { "type": "string" },
                "url": { "type": "string" },
                "snippet": { "type": "string" }
              },
              "required": ["source"]
            }
          }
        },
        "required": ["id", "text", "verdict"]
      }
    }
  },
  "required": ["job_id", "timestamp", "claims"]
}
