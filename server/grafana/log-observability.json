{
  "annotations": {
    "list": []
  },
  "description": "Operational view of Summit service logs sourced from OpenTelemetry exporters.",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "datasource": {
        "type": "loki",
        "uid": "${datasource}"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "id": 1,
      "options": {
        "legend": {
          "calcs": [],
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      },
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "${datasource}"
          },
          "expr": "sum by (level) (count_over_time({service_name=\"intelgraph-api\"}[$__interval]))",
          "legendFormat": "{{level}}",
          "refId": "A"
        }
      ],
      "title": "Log Volume by Severity",
      "type": "timeseries"
    },
    {
      "datasource": {
        "type": "loki",
        "uid": "${datasource}"
      },
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 9
      },
      "id": 2,
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "${datasource}"
          },
          "expr": "topk(10, count_over_time({service_name=\"intelgraph-api\", log_type=\"graphql_error\"}[6h]))",
          "format": "table",
          "instant": true,
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "title": "Top GraphQL Errors (6h)",
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "renameByName": {
              "Value": "count",
              "label": "error"
            }
          }
        }
      ],
      "type": "table"
    },
    {
      "datasource": {
        "type": "loki",
        "uid": "${datasource}"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 2
              },
              {
                "color": "red",
                "value": 5
              }
            ]
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 9
      },
      "id": 3,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "datasource": {
            "type": "loki",
            "uid": "${datasource}"
          },
          "expr": "100 * sum(rate({service_name=\"intelgraph-api\", level=\"error\"}[5m])) / clamp_min(sum(rate({service_name=\"intelgraph-api\"}[5m])), 0.001)",
          "instant": true,
          "refId": "A"
        }
      ],
      "title": "GraphQL Error Rate (5m)",
      "type": "stat"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "style": "dark",
  "tags": [
    "logs",
    "observability"
  ],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "label": "Logs datasource",
        "query": "loki",
        "type": "datasource",
        "refresh": 1,
        "hide": 0
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "10s",
      "30s",
      "1m",
      "5m"
    ],
    "time_options": [
      "1h",
      "3h",
      "6h",
      "12h",
      "24h"
    ]
  },
  "timezone": "browser",
  "title": "Summit Log Observability",
  "uid": "summit-log-observability",
  "version": 1
}
