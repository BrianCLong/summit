# IntelGraph Server Environment Configuration
# Copy this file to .env and update the values for your environment

# Application
NODE_ENV=development
PORT=4000

# Database URLs
DATABASE_URL=postgres://intelgraph:password@localhost:5432/intelgraph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379

# Security (MUST change in production)
JWT_SECRET=development-jwt-secret-at-least-32-characters-long
JWT_REFRESH_SECRET=development-refresh-secret-different-from-jwt-secret

# CORS
CORS_ORIGIN=http://localhost:3000

# Optional Features
AI_ENABLED=false
KAFKA_ENABLED=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs (optional)
OPENAI_API_KEY=your-openai-key-here
VIRUSTOTAL_API_KEY=your-virustotal-key-here