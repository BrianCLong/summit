{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Dangerous Operation Plan",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "kind": { "type": "string" },
    "mode": { "type": "string", "enum": ["plan-only", "apply"] },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": { "type": "string" },
          "devices": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "string" }
        },
        "required": ["action"]
      }
    },
    "rollback": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": { "type": "string" },
          "devices": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["action"]
      }
    }
  },
  "required": ["kind", "mode", "steps"]
}
