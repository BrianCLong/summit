# Summit Supply Chain Security Configuration
# Part of Shai-Hulud supply chain hardening initiative

# DENY-BY-DEFAULT: Block all npm lifecycle scripts unless explicitly allowed
# This prevents supply chain attacks via malicious postinstall/preinstall scripts
# Packages requiring scripts must be in policy/npm-lifecycle-allowlist.json
ignore-scripts=true

# Engine strictness
engine-strict=false

# Funding and audit messages
fund=false
audit=true

# Peer dependency handling
legacy-peer-deps=true

# Linker configuration
node-linker=hoisted

