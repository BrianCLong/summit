{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Invoice action decision",
  "type": "object",
  "required": ["allowed", "reason", "required_approvals", "flags"],
  "properties": {
    "allowed": { "type": "boolean" },
    "reason": { "type": "string" },
    "required_approvals": {
      "type": "array",
      "items": { "type": "string" }
    },
    "flags": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
