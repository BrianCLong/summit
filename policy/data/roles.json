{
  "roles": {
    "analyst": {
      "description": "Performs day-to-day analysis with standard access.",
      "permissions": ["graph:query", "report:export"],
      "attributes": {
        "clearance": "internal"
      }
    },
    "lead_analyst": {
      "description": "Leads investigations, can ingest new data and export findings.",
      "permissions": ["graph:query", "report:export", "ingest:write"],
      "attributes": {
        "clearance": "restricted"
      }
    },
    "admin": {
      "description": "Break-glass administrator with warrant-bound privileges.",
      "permissions": [
        "graph:query",
        "report:export",
        "ingest:write",
        "tenant:impersonate",
        "admin:*"
      ],
      "attributes": {
        "clearance": "restricted"
      }
    },
    "auditor": {
      "description": "Read-only role for oversight and compliance review.",
      "permissions": ["graph:query", "report:export"],
      "attributes": {
        "clearance": "internal"
      }
    },
    "service_account": {
      "description": "Machine identity for background jobs and pipelines.",
      "permissions": ["ingest:write", "graph:query"],
      "attributes": {
        "clearance": "internal"
      }
    }
  }
}
