{
  "revops": {
    "limits": {
      "global_max_discount": 50
    },
    "config": {
      "bundle_version": "revops-blueprint-v1",
      "tenant": {
        "tenant-default": {
          "blocklist": {
            "domains": ["blocked.test"]
          },
          "lead_routing": {
            "enterprise": {
              "assignee": { "type": "team", "id": "enterprise-team" },
              "sla": { "first_touch_hours": 4 }
            },
            "smb": {
              "assignee": { "type": "team", "id": "smb-queue" },
              "sla": { "first_touch_hours": 24 }
            },
            "midmarket": {
              "assignee": { "type": "team", "id": "midmarket-pod" },
              "sla": { "first_touch_hours": 8 }
            }
          },
          "lead_routing_flags": {
            "important_countries": ["GB", "DE"]
          },
          "discounts": {
            "smb": {
              "max_discount": {
                "ae": 20,
                "sales_manager": 30,
                "vp_sales": 40
              },
              "approvals": {
                "thresholds": [
                  { "max_discount": 20, "approvers": [] },
                  { "max_discount": 30, "approvers": ["sales_manager"] },
                  { "max_discount": 40, "approvers": ["sales_manager", "finance"] }
                ]
              },
              "min_term_months": 12
            },
            "enterprise": {
              "max_discount": {
                "ae": 15,
                "sales_manager": 25,
                "vp_sales": 35
              },
              "approvals": {
                "thresholds": [
                  { "max_discount": 15, "approvers": [] },
                  { "max_discount": 25, "approvers": ["sales_manager"] },
                  { "max_discount": 35, "approvers": ["sales_manager", "finance", "vp_sales"] }
                ]
              },
              "min_term_months": 12
            }
          },
          "contracts": {
            "required_signers": ["buyer", "legal"],
            "required_approvals": ["sales_manager"]
          }
        },
        "tenant-enterprise": {
          "blocklist": {
            "domains": []
          },
          "lead_routing": {
            "enterprise": {
              "assignee": { "type": "team", "id": "global-enterprise" },
              "sla": { "first_touch_hours": 2 }
            }
          },
          "lead_routing_flags": {
            "important_countries": ["US"]
          },
          "discounts": {
            "enterprise": {
              "max_discount": {
                "ae": 10,
                "sales_manager": 20,
                "vp_sales": 30
              },
              "approvals": {
                "thresholds": [
                  { "max_discount": 10, "approvers": [] },
                  { "max_discount": 20, "approvers": ["sales_manager"] },
                  { "max_discount": 30, "approvers": ["sales_manager", "finance"] }
                ]
              },
              "min_term_months": 12
            }
          },
          "contracts": {
            "required_signers": ["buyer", "cfo"],
            "required_approvals": ["finance"]
          }
        }
      },
      "tenant_overrides": {},
      "governance": {
        "naming": {
          "deal_pattern": "^[A-Z]+-[A-Z]+-[A-Za-z0-9]+-[A-Za-z0-9]+-Q[1-4]$",
          "campaign_pattern": "^[A-Za-z]+-[A-Za-z]+-Q[1-4]-[A-Za-z]+$",
          "sku_pattern": "^[A-Za-z0-9]+:[A-Za-z0-9]+:[A-Za-z0-9]+$",
          "territory_pattern": "^[A-Z]{2,}-[A-Za-z]+-[A-Za-z]+$"
        },
        "stage_exit": {
          "enterprise": {
            "discovery": ["problem_confirmed", "budget_owner_identified"],
            "evaluation": ["champion_identified", "paper_process_known"],
            "proposal": ["commercial_terms_sent", "technical_win"],
            "negotiation": ["decision_date", "mutual_plan"],
            "closed_won": ["contract_signed", "sku_config_ready"],
            "closed_lost": ["loss_reason"]
          },
          "smb": {
            "discovery": ["problem_confirmed"],
            "evaluation": ["paper_process_known"],
            "proposal": ["commercial_terms_sent", "budget_owner_identified"],
            "negotiation": ["decision_date"],
            "closed_won": ["contract_signed"],
            "closed_lost": ["loss_reason"]
          }
        },
        "sla": {
          "speed_to_lead_minutes": 15,
          "speed_to_first_meeting_hours": 24,
          "stale_days": 14,
          "stage_aging_days": {
            "discovery": 10,
            "evaluation": 14,
            "proposal": 10,
            "negotiation": 7
          }
        },
        "forecast": {
          "categories": {
            "commit": { "min_stage": "negotiation", "evidence": ["contract_signed"] },
            "best_case": { "min_stage": "proposal", "evidence": ["commercial_terms_sent"] },
            "upside": { "min_stage": "evaluation", "evidence": ["champion_identified"] },
            "pipeline": { "min_stage": "discovery", "evidence": [] }
          }
        },
        "quote_to_cash": {
          "floors": { "enterprise": 5000, "smb": 1200 },
          "ceilings": { "enterprise": 1000000, "smb": 250000 },
          "approval_thresholds": [
            { "max_discount": 10, "approvers": [] },
            { "max_discount": 20, "approvers": ["manager"] },
            { "max_discount": 35, "approvers": ["manager", "finance"] }
          ],
          "renewal_creation_days": [180, 120, 90]
        },
        "routing": {
          "tie_breakers": ["intent_score", "icp_fit", "recency"],
          "manual_channels_blocked": ["slack"]
        },
        "handoffs": {
          "required_packets": ["sdr_ae", "ae_cs", "cs_renewals"],
          "commitment_registry_required": true
        },
        "data_quality": {
          "mandatory_fields": [
            "next_step",
            "next_step_date",
            "buying_role",
            "source",
            "segment",
            "territory"
          ],
          "dedupe": true
        },
        "governance_controls": {
          "access_review_quarterly": true,
          "audit_logs_required": true
        }
      }
    }
  },
  "revops_fixtures": {
    "leads": [
      {
        "id": "lead-123",
        "email": "cto@bigcorp.com",
        "domain": "bigcorp.com",
        "company_size": "1000+",
        "country": "GB",
        "segment_hint": ""
      },
      {
        "id": "lead-999",
        "email": "spam@blocked.test",
        "domain": "blocked.test",
        "company_size": "1-199",
        "country": "US",
        "segment_hint": ""
      }
    ],
    "quotes": [
      {
        "id": "quote-1",
        "segment": "enterprise",
        "discount_percentage": 20,
        "total_value": 100000,
        "term_months": 12,
        "non_standard_terms": []
      }
    ],
    "contracts": [
      {
        "id": "contract-1",
        "status": "signed",
        "region": "US",
        "term_months": 12,
        "mrr": 20000,
        "signatures": [{ "role": "buyer", "signed_at": "2025-01-01T00:00:00Z" }],
        "approvals": ["sales_manager"],
        "flags": []
      },
      {
        "id": "contract-2",
        "status": "draft",
        "region": "US",
        "term_months": 12,
        "mrr": 20000,
        "signatures": [],
        "approvals": [],
        "flags": []
      }
    ]
  }
}
