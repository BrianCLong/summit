        "defaults": {
          "thresholds": [
            { "value": 0, "color": "green" },
            { "value": 80, "color": "orange" },
            { "value": 95, "color": "red" }
          ]
        }
      },
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Spend Trend (Daily)",
      "targets": [
        { "expr": "sum(rate(conductor_spend_total_usd[1d]))" } # Placeholder metric
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 6 }
