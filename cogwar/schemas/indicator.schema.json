{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Indicator",
  "type": "object",
  "required": ["id", "name", "modality", "severity", "confidence"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "modality": {
      "type": "string",
      "enum": ["cyber", "info", "social", "behavioral"]
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "evidence_refs": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
