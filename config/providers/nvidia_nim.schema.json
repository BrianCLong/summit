{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "apiKeyRef": { "type": "string", "description": "Reference to the secret name containing the API key" },
    "baseUrl": { "type": "string", "default": "https://integrate.api.nvidia.com/v1" },
    "model": { "type": "string", "default": "moonshotai/kimi-k2.5" },
    "modeDefault": { "type": "string", "enum": ["instant", "thinking"], "default": "instant" },
    "maxRetries": { "type": "integer", "default": 3 },
    "retryBackoffMs": { "type": "integer", "default": 1000 },
    "enableMultimodal": { "type": "boolean", "default": false }
  },
  "required": ["apiKeyRef"]
}
