{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Feature Flags Configuration",
  "type": "object",
  "required": ["version", "environments", "flags"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version"
    },
    "description": {
      "type": "string"
    },
    "environments": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["provider", "config"],
        "properties": {
          "provider": {
            "type": "string",
            "enum": ["local", "launchdarkly", "unleash", "split"]
          },
          "config": {
            "type": "object"
          }
        }
      }
    },
    "flags": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["key", "name", "type", "defaultValue"],
        "properties": {
          "key": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["boolean", "string", "number", "json"]
          },
          "defaultValue": {
            "oneOf": [
              {"type": "boolean"},
              {"type": "string"},
              {"type": "number"},
              {"type": "object"}
            ]
          },
          "allowedValues": {
            "type": "array"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "killSwitch": {
            "type": "boolean"
          },
          "rollout": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["all", "gradual", "targeted"]
              },
              "percentage": {
                "type": "number",
                "minimum": 0,
                "maximum": 100
              },
              "rules": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "attribute": {
                      "type": "string"
                    },
                    "operator": {
                      "type": "string",
                      "enum": ["in", "not_in", "equals", "contains"]
                    },
                    "values": {
                      "type": "array"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "killSwitches": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["key", "name", "defaultValue"],
        "properties": {
          "key": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "defaultValue": {
            "type": "boolean"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
