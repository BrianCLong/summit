  "devDependencies": {
    "typescript": "5.6.3",
    "jest": "29.7.0",
    "@types/jest": "29.5.14",
    "@types/express": "4.17.21",
    "supertest": "6.3.4",
    "@types/supertest": "2.0.16"
  },
  "bin": {
    "lac-sim": "bin/lac-sim.js"
  }
