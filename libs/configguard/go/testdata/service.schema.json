{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ServiceConfig",
  "type": "object",
  "required": ["serviceName", "port", "mode"],
  "properties": {
    "serviceName": {
      "type": "string",
      "minLength": 1
    },
    "port": {
      "type": "integer",
      "minimum": 1024,
      "maximum": 65535
    },
    "mode": {
      "type": "string",
      "enum": ["development", "staging", "production"]
    },
    "database": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  },
  "additionalProperties": false
}
