{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "evidence"],
  "properties": {
    "version": { "type": "string" },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "area", "files"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^EVD-SUMMIT-[A-Z0-9_]+-[0-9]{3}$"
          },
          "area": { "type": "string" },
          "files": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
