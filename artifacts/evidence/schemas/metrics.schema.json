{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["evidenceId", "verifierVersion", "counts"],
  "properties": {
    "evidenceId": {
      "type": "string",
      "pattern": "^EVD-SUMMIT-[A-Z0-9_]+-[0-9]{3}$"
    },
    "verifierVersion": { "type": "string" },
    "counts": {
      "type": "object",
      "required": ["files"],
      "properties": {
        "files": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
