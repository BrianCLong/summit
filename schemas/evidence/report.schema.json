{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "evidence report",
  "type": "object",
  "required": ["evidence_id", "item_slug", "area", "summary", "sources"],
  "properties": {
    "evidence_id": {"type": "string", "pattern": "^EVD-[a-z0-9\\-]+-[A-Z]{2,6}-\\d{3}$"},
    "item_slug": {"type": "string"},
    "area": {"type": "string"},
    "summary": {"type": "string"},
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ref", "type"],
        "properties": {
          "ref": {"type": "string"},
          "type": {"type": "string", "enum": ["model_card", "license", "paper", "repo", "other"]}
        }
      }
    },
    "assumptions": {"type": "array", "items": {"type": "string"}}
  },
  "additionalProperties": false
}
