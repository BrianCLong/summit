{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/evidence/evidence-status-api.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["evidence_id", "status", "details"],
  "propertyNames": {
    "not": {
      "pattern": "(?i)(timestamp|time|created_at|updated_at|last_update|started_at|finished_at|ended_at|duration_ms)"
    }
  },
  "properties": {
    "evidence_id": {
      "type": "string"
    },
    "status": {
      "enum": ["pass", "fail", "missing"]
    },
    "details": {
      "type": "string"
    }
  }
}
