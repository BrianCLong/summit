{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/evidence/evidence-id-consistency-report.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["gate_version", "sha", "evidence_root", "evidence", "duplicate_ids", "status"],
  "propertyNames": {
    "not": {
      "pattern": "(?i)(timestamp|time|created_at|updated_at|last_update|started_at|finished_at|ended_at|duration_ms)"
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "gate_version": {
      "const": "1.3.1"
    },
    "sha": {
      "type": "string",
      "minLength": 1
    },
    "evidence_root": {
      "type": "string",
      "minLength": 1
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "path", "sha256"],
        "propertyNames": {
          "not": {
            "pattern": "(?i)(timestamp|time|created_at|updated_at|last_update|started_at|finished_at|ended_at|duration_ms)"
          }
        },
        "properties": {
          "id": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        }
      }
    },
    "duplicate_ids": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "paths"],
        "propertyNames": {
          "not": {
            "pattern": "(?i)(timestamp|time|created_at|updated_at|last_update|started_at|finished_at|ended_at|duration_ms)"
          }
        },
        "properties": {
          "id": {
            "type": "string"
          },
          "paths": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "status": {
      "enum": ["pass", "fail"]
    }
  }
}
