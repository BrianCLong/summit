{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SummitEvidenceStamp",
  "type": "object",
  "required": ["evidence_id", "generated_at"],
  "properties": {
    "evidence_id": {"type": "string", "pattern": "^EVD-[A-Z0-9]+-[A-Z]+-[0-9]{3}$"},
    "generated_at": {"type": "string", "format": "date-time"}
  },
  "additionalProperties": true
}
