{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence Index",
  "type": "object",
  "required": ["version", "items"],
  "properties": {
    "version": { "type": "integer" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["evidence_id", "report", "metrics", "stamp"],
        "properties": {
          "evidence_id": { "type": "string" },
          "report": { "type": "string" },
          "metrics": { "type": "string" },
          "stamp": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
