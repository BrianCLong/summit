{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["items"],
  "properties": {
    "version": { "type": ["string", "number"] },
    "items": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["evidence_id"],
            "properties": {
              "evidence_id": { "type": "string" },
              "files": {
                "anyOf": [
                  {
                    "type": "object",
                    "required": ["report", "metrics", "stamp"],
                    "properties": {
                      "report": { "type": "string" },
                      "metrics": { "type": "string" },
                      "stamp": { "type": "string" }
                    },
                    "additionalProperties": false
                  },
                  {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                ]
              },
              "artifacts": {
                "type": "array",
                "items": { "type": "string" }
              },
              "report": { "type": "string" },
              "metrics": { "type": "string" },
              "stamp": { "type": "string" },
              "title": { "type": "string" },
              "category": { "type": "string" }
            },
            "anyOf": [
              { "required": ["files"] },
              { "required": ["report", "metrics", "stamp"] },
              { "required": ["artifacts"] }
            ],
            "additionalProperties": true
          }
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "files": {
                "anyOf": [
                  {
                    "type": "object",
                    "required": ["report", "metrics", "stamp"],
                    "properties": {
                      "report": { "type": "string" },
                      "metrics": { "type": "string" },
                      "stamp": { "type": "string" }
                    },
                    "additionalProperties": false
                  },
                  {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                ]
              },
              "artifacts": {
                "type": "array",
                "items": { "type": "string" }
              },
              "report": { "type": "string" },
              "metrics": { "type": "string" },
              "stamp": { "type": "string" },
              "title": { "type": "string" },
              "category": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      ]
    }
  },
  "additionalProperties": false
}
