{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["items"],
  "properties": {
    "version": { "type": ["string", "number"] },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["evidence_id"],
        "properties": {
          "evidence_id": { "type": "string" },
          "files": {
            "type": "object",
            "required": ["report", "metrics", "stamp"],
            "properties": {
              "report": { "type": "string" },
              "metrics": { "type": "string" },
              "stamp": { "type": "string" }
            },
            "additionalProperties": false
          },
          "report": { "type": "string" },
          "metrics": { "type": "string" },
          "stamp": { "type": "string" }
        },
        "anyOf": [{ "required": ["files"] }, { "required": ["report", "metrics", "stamp"] }],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
