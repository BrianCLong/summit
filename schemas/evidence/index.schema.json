{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence Index",
  "type": "object",
  "properties": {
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "files": {
             "type": "object",
             "properties": {
               "report": { "type": "string" },
               "metrics": { "type": "string" },
               "stamp": { "type": "string" }
             }
          }
        },
        "required": ["id", "files"]
      }
    }
  }
}
