{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/evidence/evidence-id-consistency-ai-ledger.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["gate_version", "sha", "artifacts"],
  "propertyNames": {
    "not": {
      "pattern": "(?i)(timestamp|time|created_at|updated_at|last_update|started_at|finished_at|ended_at|duration_ms)"
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "gate_version": {
      "const": "1.3.1"
    },
    "sha": {
      "type": "string",
      "minLength": 1
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "sha256"],
        "propertyNames": {
          "not": {
            "pattern": "(?i)(timestamp|time|created_at|updated_at|last_update|started_at|finished_at|ended_at|duration_ms)"
          }
        },
        "properties": {
          "name": {
            "type": "string"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          }
        }
      }
    }
  }
}
