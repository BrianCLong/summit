{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ArchitectureSpec v1",
  "type": "object",
  "required": ["id", "version", "components", "connections", "assumptions"],
  "properties": {
    "id": { "type": "string" },
    "version": { "type": "integer", "const": 1 },
    "assumptions": { "type": "object" },
    "slos": { "type": "object" },
    "components": {
      "type": "array",
      "maxItems": 200,
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["api", "worker", "db", "cache", "queue", "object_store", "external"]
          },
          "replicas": { "type": "integer", "minimum": 1 },
          "capacity": { "type": "object" },
          "region": { "type": "string" },
          "cost_model": { "type": "object" }
        },
        "additionalProperties": false
      }
    },
    "connections": {
      "type": "array",
      "maxItems": 500,
      "items": {
        "type": "object",
        "required": ["from", "to", "protocol"],
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "protocol": { "type": "string", "enum": ["http", "grpc", "async"] },
          "p99_budget_ms": { "type": "number", "minimum": 0 },
          "retry_policy": { "type": "object" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
