{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NarrativeGraphNodes",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "properties"],
        "properties": {
          "id": { "type": "string" },
          "type": { "enum": ["Narrative", "Frame", "Claim", "Assumption", "Artifact", "Actor", "Community", "Event", "Handoff"] },
          "properties": { "type": "object" }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source", "target", "type"],
        "properties": {
          "source": { "type": "string" },
          "target": { "type": "string" },
          "type": { "type": "string" },
          "properties": { "type": "object" }
        }
      }
    }
  }
}
