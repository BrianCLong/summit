{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["receipt_id", "source_node_id", "artifacts"],
  "properties": {
    "receipt_id": { "type": "string" },
    "source_node_id": { "type": "string", "description": "ID of the Claim/Assumption/Frame being proven" },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["artifact_id", "content_sha256"],
        "properties": {
          "artifact_id": { "type": "string" },
          "content_sha256": { "type": "string" },
          "uri": { "type": "string" },
          "snippets": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "method": { "type": "string", "enum": ["exact_match", "semantic_similarity", "manual_assertion"] },
    "score": { "type": "number", "minimum": 0, "maximum": 1 }
  }
}
