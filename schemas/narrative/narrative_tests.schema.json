{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NarrativeTestResults",
  "type": "object",
  "required": ["suite_id", "results"],
  "properties": {
    "suite_id": { "type": "string" },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["test_id", "status"],
        "properties": {
          "test_id": { "type": "string" },
          "status": { "enum": ["PASS", "FAIL", "SKIP"] },
          "details": { "type": "object" }
        }
      }
    }
  }
}
