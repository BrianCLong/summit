{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.example.com/schemas/platform-watch/metrics.schema.json",
  "title": "PlatformWatchMetrics",
  "type": "object",
  "required": ["schema_version", "date", "counts"],
  "properties": {
    "schema_version": { "const": "platform-watch.metrics.v1" },
    "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "counts": {
      "type": "object",
      "required": ["sources", "evidence", "platforms", "claims", "drift"],
      "properties": {
        "sources": { "type": "integer", "minimum": 0 },
        "evidence": { "type": "integer", "minimum": 0 },
        "platforms": { "type": "integer", "minimum": 0 },
        "claims": { "type": "integer", "minimum": 0 },
        "drift": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
