{
  "$id": "https://summit.dev/schemas/policy-decision",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Policy Decision",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^pdec_[a-zA-Z0-9\\-_.]+$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "policy": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "rule": {
          "type": "string"
        }
      },
      "required": [
        "package",
        "version"
      ],
      "additionalProperties": false,
      "description": "Policy information"
    },
    "input": {
      "type": "object",
      "properties": {},
      "additionalProperties": {}
    },
    "result": {
      "type": "object",
      "properties": {
        "allow": {
          "type": "boolean"
        },
        "reasons": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "metadata": {
          "type": "object",
          "properties": {},
          "additionalProperties": {}
        }
      },
      "required": [
        "allow"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "id",
    "timestamp",
    "policy",
    "input",
    "result"
  ],
  "additionalProperties": false,
  "description": "Policy Decision"
}
