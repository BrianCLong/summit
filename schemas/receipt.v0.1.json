{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://switchboard.dev/schemas/receipt.v0.1.json",
  "title": "Switchboard Action Receipt v0.1",
  "type": "object",
  "required": [
    "schema_version",
    "receipt_id",
    "receipt_type",
    "principal",
    "skill",
    "mode",
    "intent",
    "policy",
    "plan",
    "tool_calls",
    "artifacts",
    "outputs",
    "cost",
    "signatures"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "switchboard.receipt.v0.1"
    },
    "receipt_id": {
      "type": "string",
      "pattern": "^sha256:[a-f0-9]{64}$"
    },
    "receipt_type": {
      "type": "string",
      "const": "SkillInvocationReceipt"
    },
    "links": {
      "type": "object",
      "properties": {
        "parent_receipt_id": { "type": ["string", "null"] },
        "session_id": { "type": "string" },
        "trace_id": { "type": "string" }
      }
    },
    "principal": {
      "type": "object",
      "required": ["user_id", "channel"],
      "properties": {
        "user_id": { "type": "string" },
        "tenant_id": { "type": "string" },
        "device_id": { "type": "string" },
        "channel": { "type": "string" }
      }
    },
    "skill": {
      "type": "object",
      "required": ["skill_id", "version", "bundle_digest_sha256", "publisher_id"],
      "properties": {
        "skill_id": { "type": "string" },
        "version": { "type": "string" },
        "bundle_digest_sha256": { "type": "string" },
        "publisher_id": { "type": "string" },
        "publisher_key_id": { "type": "string" }
      }
    },
    "mode": {
      "type": "string",
      "enum": ["observe", "assist", "autopilot"]
    },
    "intent": {
      "type": "object",
      "required": ["natural_language", "classified_goal", "confidence"],
      "properties": {
        "natural_language": { "type": "string" },
        "classified_goal": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "policy": {
      "type": "object",
      "required": ["policy_version", "decisions"],
      "properties": {
        "policy_version": { "type": "string" },
        "decisions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["decision_id", "outcome", "rule"],
            "properties": {
              "decision_id": { "type": "string" },
              "outcome": { "type": "string", "enum": ["allow", "deny", "conditional"] },
              "rule": {
                "type": "object",
                "properties": {
                  "rule_id": { "type": "string" },
                  "policy_ref": { "type": "string" }
                }
              },
              "reason": { "type": "string" },
              "explain": { "type": "object" }
            }
          }
        }
      }
    },
    "plan": {
      "type": "object",
      "properties": {
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["step_id", "name", "status"],
            "properties": {
              "step_id": { "type": "string" },
              "name": { "type": "string" },
              "requested_capabilities": {
                "type": "array",
                "items": { "type": "string" }
              },
              "status": {
                "type": "string",
                "enum": ["pending", "completed", "failed", "skipped"]
              }
            }
          }
        }
      }
    },
    "tool_calls": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["call_id", "tool", "status"],
        "properties": {
          "call_id": { "type": "string" },
          "tool": { "type": "string" },
          "capability": { "type": "string" },
          "inputs": { "type": "object" },
          "inputs_hash": { "type": "string" },
          "outputs_hash": { "type": "string" },
          "status": { "type": "string" },
          "timing": {
            "type": "object",
            "properties": {
              "start_ms": { "type": "integer" },
              "end_ms": { "type": "integer" }
            }
          }
        }
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["artifact_id", "type", "hash"],
        "properties": {
          "artifact_id": { "type": "string" },
          "type": { "type": "string" },
          "uri": { "type": "string" },
          "hash": { "type": "string" },
          "size_bytes": { "type": "integer" },
          "created_by": { "type": "string" },
          "sensitivity": { "type": "string" }
        }
      }
    },
    "outputs": {
      "type": "object",
      "properties": {
        "summary": { "type": "string" },
        "result_refs": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "cost": {
      "type": "object",
      "required": ["token_input", "token_output", "model"],
      "properties": {
        "token_input": { "type": "integer" },
        "token_output": { "type": "integer" },
        "model": { "type": "string" },
        "wall_ms": { "type": "integer" }
      }
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "signer", "sig"],
        "properties": {
          "type": { "type": "string", "const": "ed25519" },
          "signer": { "type": "string" },
          "key_id": { "type": "string" },
          "sig": { "type": "string" }
        }
      }
    }
  }
}
