{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "People Thrive Evidence Index Schema",
  "type": "object",
  "properties": {
    "version": { "type": "number" },
    "evidence": { "type": "object" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["evidence_id", "report", "metrics", "stamp"],
        "properties": {
          "evidence_id": { "type": "string" },
          "report": { "type": "string" },
          "metrics": { "type": "string" },
          "stamp": { "type": "string" }
        }
      }
    }
  },
  "required": ["version", "items"]
}
