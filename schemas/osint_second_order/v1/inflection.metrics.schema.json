{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Inflection Metrics",
  "type": "object",
  "properties": {
    "target": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "metrics": {
      "type": "object",
      "properties": {
        "velocity": { "type": "number" },
        "acceleration": { "type": "number" },
        "jerk": { "type": "number" }
      },
      "required": ["velocity", "acceleration"]
    },
    "inflection_point": { "type": "boolean" }
  },
  "required": ["target", "timestamp", "metrics"]
}
