{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": { "type": "string" },
    "version": { "type": "string" },
    "last_updated": { "type": "string", "format": "date" },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "questions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "question": { "type": "string" },
                "answer": { "type": "string", "enum": ["Yes", "No", "N/A", "Partial"] },
                "comment": { "type": "string" },
                "evidence_ref": { "type": "string" }
              },
              "required": ["id", "question", "answer"]
            }
          }
        },
        "required": ["title", "questions"]
      }
    }
  },
  "required": ["title", "version", "sections"]
}
