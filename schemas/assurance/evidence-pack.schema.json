{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Summit Assurance Evidence Pack Index",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "metadata": {
      "type": "object",
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "policy": { "type": "string" },
        "git_sha": { "type": "string" }
      },
      "required": ["timestamp", "policy"]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "evidence_id": { "type": "string", "pattern": "^EVIDENCE:[a-z0-9-]+:[a-z]+:[a-f0-9]+:[0-9]+$" },
          "kind": { "enum": ["sbom", "provenance", "vuln", "index"] },
          "path": { "type": "string" },
          "sha256": { "type": "string" }
        },
        "required": ["evidence_id", "kind", "path", "sha256"]
      }
    }
  },
  "required": ["version", "metadata", "items"]
}
