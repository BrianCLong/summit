{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.example.com/schemas/flake-registry.schema.json",
  "title": "Flake Registry",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "flakes"],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "flakes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "scope",
          "target",
          "owner",
          "ticket",
          "created",
          "expires",
          "rationale",
          "mitigation"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9-]{2,64}$"
          },
          "scope": {
            "type": "string",
            "enum": ["unit-test", "integration-test", "workflow-job", "lint-rule"]
          },
          "target": {
            "type": "string",
            "minLength": 3
          },
          "owner": {
            "type": "string",
            "pattern": "^@[A-Za-z0-9_.-]+$"
          },
          "ticket": {
            "type": "string",
            "format": "uri"
          },
          "created": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "expires": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "rationale": {
            "type": "string",
            "minLength": 3,
            "maxLength": 200
          },
          "mitigation": {
            "type": "string",
            "minLength": 3,
            "maxLength": 120
          }
        }
      }
    }
  }
}
