{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CogOps Metrics",
  "type": "object",
  "required": ["metrics_id", "fixture_id", "indicators", "aggregates"],
  "properties": {
    "metrics_id": {
      "type": "string",
      "pattern": "^EVID-COGOPS-[0-9a-f]{12}$"
    },
    "fixture_id": { "type": "string" },
    "indicators": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["indicator_type", "score", "confidence", "evidence_refs"],
        "properties": {
          "indicator_type": {
            "type": "string",
            "enum": [
              "coordination",
              "provenance_gap",
              "amplification",
              "synthetic_media"
            ]
          },
          "score": { "type": "number", "minimum": 0, "maximum": 1 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "evidence_refs": {
            "type": "array",
            "items": { "type": "string", "pattern": "^EVID-COGOPS-[0-9a-f]{12}$" }
          }
        },
        "additionalProperties": false
      }
    },
    "aggregates": {
      "type": "object",
      "required": ["indicator_totals", "proxy_totals"],
      "properties": {
        "indicator_totals": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        },
        "proxy_totals": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
