{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gate Policy v0.1",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "enum": ["0.1"]
    },
    "gates": {
      "type": "object",
      "properties": {
        "pr": {
          "$ref": "#/definitions/GateList"
        },
        "nightly": {
          "$ref": "#/definitions/GateList"
        },
        "release": {
          "$ref": "#/definitions/GateList"
        }
      },
      "additionalProperties": false,
      "required": ["pr", "nightly", "release"]
    }
  },
  "required": ["version", "gates"],
  "definitions": {
    "GateList": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/GateEntry"
      }
    },
    "GateEntry": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "command": {
          "type": "string"
        },
        "severity": {
          "type": "string",
          "enum": ["warn", "block"]
        },
        "timeout_seconds": {
            "type": "integer"
        },
        "artifacts_expected": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
      },
      "required": ["name", "command", "severity"]
    }
  }
}
