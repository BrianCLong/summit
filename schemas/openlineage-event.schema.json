{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.example.com/schemas/openlineage-event.schema.json",
  "title": "OpenLineage Event (Deterministic Subset)",
  "type": "object",
  "required": [
    "eventType",
    "eventTime",
    "producer",
    "run",
    "job",
    "inputs",
    "outputs"
  ],
  "additionalProperties": false,
  "properties": {
    "eventType": {
      "type": "string",
      "enum": ["START", "COMPLETE", "FAIL"]
    },
    "eventTime": {
      "type": "string",
      "format": "date-time"
    },
    "producer": {
      "type": "string",
      "minLength": 1
    },
    "schemaURL": {
      "type": "string",
      "format": "uri"
    },
    "run": {
      "type": "object",
      "required": ["runId"],
      "additionalProperties": false,
      "properties": {
        "runId": {
          "type": "string",
          "minLength": 1
        },
        "facets": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "job": {
      "type": "object",
      "required": ["namespace", "name"],
      "additionalProperties": false,
      "properties": {
        "namespace": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "facets": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "inputs": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/dataset"
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/dataset"
      }
    }
  },
  "$defs": {
    "dataset": {
      "type": "object",
      "required": ["namespace", "name"],
      "additionalProperties": false,
      "properties": {
        "namespace": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "facets": {
          "type": "object",
          "additionalProperties": true
        }
      }
    }
  }
}
