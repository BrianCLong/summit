{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Handoff Bundle",
  "type": "object",
  "required": ["schema_version", "agent", "job_id", "step_id", "timestamp", "inputs_hash", "prompt_ref", "outputs", "evidence"],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "agent": {
      "type": "string"
    },
    "job_id": {
      "type": "string"
    },
    "step_id": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "inputs_hash": {
      "type": "string"
    },
    "prompt_ref": {
      "type": "object",
      "required": ["name", "version", "hash"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "hash": { "type": "string" }
      }
    },
    "outputs": {
      "type": "object"
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "uri", "hash"],
        "properties": {
          "type": { "type": "string" },
          "uri": { "type": "string" },
          "hash": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "signature": {
      "type": "string"
    }
  }
}
