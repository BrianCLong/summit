{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Orchestrator Job",
  "type": "object",
  "required": ["name", "steps"],
  "properties": {
    "job_id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "agent", "inputs"],
        "properties": {
          "id": {
            "type": "string"
          },
          "agent": {
            "type": "string",
            "enum": ["security-agent", "ops-agent", "compliance-agent", "docs-agent", "release-agent"]
          },
          "version": {
            "type": "string"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "inputs": {
            "type": "object"
          }
        }
      }
    }
  }
}
