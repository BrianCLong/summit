{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.example.com/schemas/fcr/v1/fcr-cluster.schema.json",
  "title": "FCR Cluster",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "cluster_id",
    "centroid_hash",
    "signal_count",
    "tenant_count_bucket",
    "confidence",
    "first_observed_at",
    "last_observed_at"
  ],
  "properties": {
    "cluster_id": { "type": "string", "format": "uuid" },
    "centroid_hash": { "type": "string" },
    "signal_count": { "type": "integer", "minimum": 1 },
    "tenant_count_bucket": { "type": "string", "enum": ["1-2", "3-5", "6-10", "11+"] },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "first_observed_at": { "type": "string", "format": "date-time" },
    "last_observed_at": { "type": "string", "format": "date-time" },
    "public_artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "value"],
        "properties": {
          "type": { "type": "string", "enum": ["url", "media_hash"] },
          "value": { "type": "string" }
        }
      }
    },
    "provenance_summary": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "c2pa_pass_rate": { "type": "number", "minimum": 0, "maximum": 1 },
        "signer_set": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
