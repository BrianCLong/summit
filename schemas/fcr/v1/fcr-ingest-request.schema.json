{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.example.com/schemas/fcr/v1/fcr-ingest-request.schema.json",
  "title": "FCR Ingest Request",
  "type": "object",
  "additionalProperties": false,
  "required": ["tenant_id", "signals"],
  "properties": {
    "tenant_id": { "type": "string", "minLength": 3 },
    "signals": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "fcr-signal.schema.json" }
    }
  }
}
