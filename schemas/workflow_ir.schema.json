{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Workflow IR",
  "type": "object",
  "properties": {
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "kind": { "enum": ["classify", "route", "extract", "validate", "transform"] },
          "config": { "type": "object" }
        },
        "required": ["id", "kind"]
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "array",
        "minItems": 2,
        "maxItems": 2,
        "items": { "type": "string" }
      }
    },
    "meta": { "type": "object" }
  },
  "required": ["steps", "edges"]
}
