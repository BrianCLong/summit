{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "IntentAmbiguityReport",
  "type": "object",
  "required": ["report_id", "ambiguities"],
  "properties": {
    "report_id": { "type": "string" },
    "storyboard_id": { "type": "string" },
    "ambiguities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ambiguity_id", "severity", "summary", "scope"],
        "properties": {
          "ambiguity_id": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "summary": { "type": "string" },
          "scope": {
            "type": "object",
            "required": ["frame_indices"],
            "properties": {
              "frame_indices": {
                "type": "array",
                "items": { "type": "integer", "minimum": 0 }
              },
              "stroke_ids": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": false
          },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
