{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://summit.tech/schemas/intent_spec.schema.json",
  "title": "Graph Intent Specification",
  "description": "A formal specification for compiling user intent into constrained graph queries.",
  "type": "object",
  "properties": {
    "query_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this intent compilation event."
    },
    "original_query": {
      "type": "string",
      "description": "The raw natural language query from the user."
    },
    "intent_type": {
      "type": "string",
      "enum": ["traversal", "aggregation", "path_finding", "neighbor_expansion"],
      "description": "The category of graph operation required."
    },
    "target_entities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "required": ["id", "type"]
      }
    },
    "constraints": {
      "type": "object",
      "properties": {
        "max_hops": { "type": "integer", "minimum": 1, "maximum": 5 },
        "min_confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "relationship_types": {
          "type": "array",
          "items": { "type": "string" }
        },
        "temporal_window": {
          "type": "object",
          "properties": {
            "start": { "type": "string", "format": "date-time" },
            "end": { "type": "string", "format": "date-time" }
          }
        }
      }
    },
    "evidence_budget": {
      "type": "object",
      "properties": {
        "max_nodes": { "type": "integer", "default": 50 },
        "max_edges": { "type": "integer", "default": 100 },
        "max_paths": { "type": "integer", "default": 10 }
      },
      "required": ["max_nodes"]
    },
    "ordering": {
      "type": "object",
      "properties": {
        "by": { "type": "string", "enum": ["centrality", "recency", "confidence"] },
        "direction": { "type": "string", "enum": ["ASC", "DESC"] }
      },
      "required": ["by", "direction"]
    }
  },
  "required": ["query_id", "original_query", "intent_type", "evidence_budget", "ordering"]
}
