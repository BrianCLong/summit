{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Policy Graph Schema",
  "description": "Schema for Summit Policy Graph representing governance rules and relationships.",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "v1"
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["Policy", "Rule", "Role", "Subject", "Resource"]
          },
          "attributes": { "type": "object" }
        },
        "required": ["id", "type"]
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "target": { "type": "string" },
          "relation": {
            "type": "string",
            "enum": ["GOVERNS", "ALLOWS", "DENIES", "MEMBER_OF", "ACCESSES"]
          }
        },
        "required": ["source", "target", "relation"]
      }
    }
  },
  "required": ["version", "nodes", "edges"]
}
