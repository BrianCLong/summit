{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://switchboard.dev/schemas/skill.permissions.v0.1.json",
  "title": "Switchboard Skill Permissions v0.1",
  "type": "object",
  "required": [
    "schema_version",
    "requested_capabilities",
    "risk_class",
    "default_mode"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "switchboard.skill.permissions.v0.1"
    },
    "risk_class": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"]
    },
    "default_mode": {
      "type": "string",
      "enum": ["observe", "assist", "autopilot"]
    },
    "requires_user_approval_for": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "requested_capabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["capability", "scope"],
        "properties": {
          "capability": {
            "type": "string",
            "pattern": "^[a-z]+\\.[a-z]+$"
          },
          "scope": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "providers": {
                "type": "array",
                "items": { "type": "string" }
              },
              "labels_allowlist": {
                "type": "array",
                "items": { "type": "string" }
              },
              "domains_allowlist": {
                "type": "array",
                "items": { "type": "string" }
              },
              "paths_allowlist": {
                "type": "array",
                "items": { "type": "string" }
              },
              "deny_private_networks": { "type": "boolean" },
              "send_allowed": { "type": "boolean" },
              "max_requests_per_run": { "type": "integer" },
              "max_total_bytes": { "type": "integer" }
            }
          }
        }
      }
    }
  }
}
