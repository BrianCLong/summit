{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Evidence Index",
  "type": "object",
  "properties": {
    "version": {"type": "string"},
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "evidence_id": {"type": "string"},
          "paths": {
            "type": "object",
            "properties": {
              "report": {"type": "string"},
              "metrics": {"type": "string"},
              "stamp": {"type": "string"}
            },
            "required": ["report", "metrics", "stamp"],
            "additionalProperties": false
          }
        },
        "required": ["evidence_id", "paths"],
        "additionalProperties": false
      }
    }
  },
  "required": ["version", "items"],
  "additionalProperties": false
}
