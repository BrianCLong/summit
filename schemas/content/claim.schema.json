{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://summit.example.com/schemas/content/claim.schema.json",
  "title": "Summit Content Claim",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string" },
    "text": { "type": "string" },
    "topic": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "last_reviewed_at": { "type": "string", "format": "date-time" },
    "created_by": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "policy_tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "evidence": {
      "type": "array",
      "items": { "$ref": "#/definitions/evidenceRef" }
    },
    "work_items": {
      "type": "array",
      "items": { "$ref": "#/definitions/workItemRef" }
    }
  },
  "required": [
    "id",
    "text",
    "topic",
    "confidence",
    "last_reviewed_at",
    "created_by",
    "tags",
    "evidence"
  ],
  "definitions": {
    "evidenceRef": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "kind": {
          "type": "string",
          "enum": ["url", "file", "issue", "log", "doc", "dataset"]
        },
        "uri": { "type": "string" },
        "description": { "type": "string" },
        "captured_at": { "type": "string", "format": "date-time" },
        "hash": { "type": "string" }
      },
      "required": ["id", "kind", "uri"]
    },
    "workItemRef": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": { "type": "string", "enum": ["issue", "pr", "workflow"] },
        "repo": { "type": "string" },
        "number": { "type": "integer", "minimum": 1 },
        "state": { "type": "string" },
        "url": { "type": "string" }
      },
      "required": ["kind", "repo", "number", "state"]
    }
  }
}
