{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SourceDocument",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "source_doc_id",
    "source_name",
    "relpath",
    "provenance_uri",
    "mime_type",
    "byte_size",
    "content_sha256",
    "publisher",
    "provenance_confidence"
  ],
  "properties": {
    "source_doc_id": {
      "type": "string"
    },
    "source_name": {
      "type": "string"
    },
    "relpath": {
      "type": "string"
    },
    "provenance_uri": {
      "type": "string"
    },
    "mime_type": {
      "type": "string"
    },
    "byte_size": {
      "type": "integer",
      "minimum": 0
    },
    "content_sha256": {
      "type": "string",
      "pattern": "^[0-9a-f]{64}$"
    },
    "publisher": {
      "type": "string"
    },
    "provenance_confidence": {
      "type": "string"
    }
  }
}
