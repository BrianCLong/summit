{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.example.com/schemas/ci-perf-budget.schema.json",
  "title": "CI Performance Budget",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "budgets"],
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "budgets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "workflow_file",
          "job",
          "scope",
          "budget_seconds_p50",
          "budget_seconds_p95",
          "hard_limit_seconds",
          "regression_threshold_percent",
          "owner"
        ],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "workflow_file": { "type": "string", "minLength": 1 },
          "job": { "type": "string", "minLength": 1 },
          "step_group": { "type": "string" },
          "scope": {
            "type": "string",
            "enum": ["PR", "main-only", "release-branch-only"]
          },
          "budget_seconds_p50": { "type": "number", "minimum": 0 },
          "budget_seconds_p95": { "type": "number", "minimum": 0 },
          "hard_limit_seconds": { "type": "number", "minimum": 0 },
          "regression_threshold_percent": { "type": "number", "minimum": 0 },
          "owner": { "type": "string", "minLength": 1 },
          "ticket": { "type": "string" }
        }
      }
    }
  }
}
