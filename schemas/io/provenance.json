{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Provenance Envelope",
  "type": "object",
  "required": ["source", "collection_method", "timestamp", "hash", "tenant_id"],
  "properties": {
    "source": { "type": "string" },
    "collection_method": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "hash": { "type": "string" },
    "license": { "type": "string" },
    "retention_class": { "type": "string" },
    "tenant_id": { "type": "string" },
    "chain_of_custody": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
