{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit IO Case-as-Code Schema",
  "type": "object",
  "required": ["version", "case_id", "hypothesis", "sources_allowed", "detectors"],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "case_id": {
      "type": "string",
      "minLength": 1
    },
    "hypothesis": {
      "type": "string",
      "minLength": 1
    },
    "sources_allowed": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "detectors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "thresholds": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    },
    "export_formats": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "dataset_hash": {
      "type": "string",
      "minLength": 1
    },
    "model_hash": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false
}
