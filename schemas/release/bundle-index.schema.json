{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://intelgraph.com/schemas/release/bundle-index.schema.json",
  "title": "Release Bundle Index",
  "type": "object",
  "required": [
    "schemaVersion",
    "files"
  ],
  "additionalProperties": true,
  "properties": {
    "schemaVersion": {
      "type": "string"
    },
    "pointers": {
      "type": "object",
      "additionalProperties": true
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "sha256",
          "bytes"
        ],
        "additionalProperties": true,
        "properties": {
          "path": {
            "type": "string"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "bytes": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    }
  }
}
