{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://intelgraph.com/schemas/release/release-manifest.schema.json",
  "title": "Release Manifest",
  "type": "object",
  "required": ["schemaVersion", "tag", "sha", "generated_at", "artifacts"],
  "additionalProperties": true,
  "properties": {
    "schemaVersion": {
      "type": "string"
    },
    "tag": {
      "type": "string"
    },
    "sha": {
      "type": "string"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "artifacts": {
      "type": "array"
    },
    "by": {
      "type": "string"
    }
  }
}
