{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://summit.dev/schemas/connector-registry.json",
  "title": "Summit Connector Registry Schema",
  "description": "Schema for the Summit platform connector registry",
  "type": "object",
  "required": ["version", "connectors"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the registry format"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When this registry was generated"
    },
    "connectors": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Connector"
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Category"
      }
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "description": "Map of capability IDs to descriptions"
    }
  },
  "definitions": {
    "Connector": {
      "type": "object",
      "required": ["id", "name", "version", "status", "category", "capabilities", "path"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "Unique identifier for the connector"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name"
        },
        "description": {
          "type": "string",
          "description": "Brief description of the connector"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Semantic version of the connector"
        },
        "status": {
          "type": "string",
          "enum": ["experimental", "beta", "stable", "deprecated"],
          "description": "Maturity status"
        },
        "category": {
          "type": "string",
          "description": "Category ID this connector belongs to"
        },
        "capabilities": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["pull", "push", "stream", "query", "batch", "incremental", "enrich", "geocode"]
          },
          "description": "List of capabilities this connector supports"
        },
        "entityTypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Entity types this connector can produce (* for any)"
        },
        "relationshipTypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Relationship types this connector can produce (* for any)"
        },
        "authentication": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "none",
              "basic",
              "api-key",
              "bearer",
              "oauth2",
              "certificate",
              "aws-credentials",
              "iam-role",
              "service-account",
              "managed-identity",
              "file-path",
              "token"
            ]
          },
          "description": "Supported authentication methods"
        },
        "rateLimit": {
          "oneOf": [
            { "type": "null" },
            {
              "type": "object",
              "properties": {
                "requestsPerMinute": {
                  "type": "integer",
                  "minimum": 1
                },
                "burstLimit": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            }
          ],
          "description": "Rate limiting configuration"
        },
        "license": {
          "type": "string",
          "description": "License type for this connector"
        },
        "maintainer": {
          "type": "string",
          "description": "Team or individual maintaining this connector"
        },
        "documentation": {
          "type": "string",
          "description": "Path to documentation"
        },
        "path": {
          "type": "string",
          "description": "Filesystem path to connector implementation"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Optional tags for filtering"
        }
      }
    },
    "Category": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
