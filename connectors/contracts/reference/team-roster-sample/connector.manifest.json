{
  "$schema": "../../schema/connector.manifest.v1.schema.json",
  "schemaVersion": "v1",
  "connectorId": "team-roster-sample",
  "name": "Team Roster Sample",
  "description": "Minimal roster connector that emits canonical person and team membership entities from a static fixture.",
  "version": "1.0.0",
  "owner": "intelgraph-lab",
  "tags": ["reference", "roster", "sample"],
  "source": {
    "type": "file",
    "endpoint": "./fixtures/roster.json",
    "contentType": "json",
    "owner": "internal-sample"
  },
  "auth": {
    "type": "none"
  },
  "rateLimits": {
    "requestsPerMinute": 60,
    "burst": 10,
    "concurrency": 1,
    "notes": "Static fixture replay"
  },
  "license": {
    "classification": "internal",
    "terms": "demo-only",
    "obligations": ["retain snapshot version in golden outputs"]
  },
  "pii": {
    "fields": [
      {
        "field": "email",
        "category": "high",
        "policy": "mask",
        "comment": "mask emails in golden output"
      },
      { "field": "phone", "category": "medium", "policy": "drop" }
    ]
  },
  "mapping": {
    "handler": "./mapper.js",
    "hints": [
      {
        "source": "people[].id",
        "targetType": "Person",
        "idField": "id",
        "nameField": "name",
        "provenanceTag": "roster-row"
      },
      {
        "source": "people[].team",
        "targetType": "Team",
        "idField": "team",
        "nameField": "team_name",
        "provenanceTag": "team-dimension"
      }
    ]
  },
  "fixtures": {
    "sample": "./fixtures/roster.json",
    "golden": "./fixtures/golden.v1.json",
    "description": "Happy-path roster"
  },
  "contracts": {
    "snapshotVersion": "roster.v1",
    "generatedAt": "2025-02-05T00:00:00Z",
    "outputSchemaVersion": "canonical.v1"
  }
}
