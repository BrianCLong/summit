{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CompanyOS Data Catalog",
  "type": "object",
  "required": ["catalog_version", "datasets"],
  "additionalProperties": false,
  "properties": {
    "catalog_version": {
      "type": "string",
      "pattern": "^v[0-9]+$"
    },
    "datasets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "dataset_id",
          "owner",
          "classification",
          "pii",
          "residency_allowed_regions",
          "retention_ttl_days",
          "encryption_required"
        ],
        "additionalProperties": false,
        "properties": {
          "dataset_id": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9-]{2,63}$"
          },
          "owner": {
            "type": "string",
            "minLength": 2
          },
          "classification": {
            "type": "string",
            "enum": ["public", "internal", "confidential", "restricted"]
          },
          "pii": {
            "type": "object",
            "required": ["contains_pii", "pii_categories"],
            "additionalProperties": false,
            "properties": {
              "contains_pii": {
                "type": "boolean"
              },
              "pii_categories": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "residency_allowed_regions": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^[a-z]{2}-[a-z]+-[0-9]+$"
            }
          },
          "retention_ttl_days": {
            "type": "integer",
            "minimum": 1
          },
          "encryption_required": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
