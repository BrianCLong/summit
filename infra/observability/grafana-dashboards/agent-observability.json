{
  "dashboard": {
    "title": "Agent KPIs & Runtime Health",
    "schemaVersion": 38,
    "refresh": "30s",
    "tags": ["agents", "runtime", "otel"],
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Agent Success Rate (5m)",
        "targets": [
          {
            "expr": "sum(rate(agent_requests_total{status='success'}[5m])) / sum(rate(agent_requests_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 90 },
                { "color": "green", "value": 97 }
              ]
            }
          }
        },
        "gridPos": { "h": 5, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Avg Agent Runtime Cost (5m)",
        "targets": [{ "expr": "sum(rate(agent_runtime_cost_total[5m]))", "refId": "A" }],
        "fieldConfig": { "defaults": { "unit": "currencyUSD" } },
        "gridPos": { "h": 5, "w": 6, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "type": "graph",
        "title": "Agent Latency p95",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(agent_latency_seconds_bucket[5m])) by (le))",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 0, "y": 5 },
        "lines": true,
        "linewidth": 2
      },
      {
        "id": 4,
        "type": "graph",
        "title": "CPU & Memory per Agent Runtime",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{container!='',namespace='agents'}[5m])) by (pod)",
            "refId": "A"
          },
          {
            "expr": "sum(container_memory_working_set_bytes{container!='',namespace='agents'}) by (pod)",
            "refId": "B"
          }
        ],
        "gridPos": { "h": 9, "w": 12, "x": 12, "y": 5 },
        "legend": { "show": true }
      },
      {
        "id": 5,
        "type": "table",
        "title": "Correlation Coverage",
        "targets": [
          {
            "expr": "sum(rate(otel_span_correlation_links_total[5m])) by (service_name)",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 7, "w": 12, "x": 0, "y": 14 },
        "transformations": []
      },
      {
        "id": 6,
        "type": "heatmap",
        "title": "Error Density by Service",
        "targets": [
          {
            "expr": "sum(rate(agent_requests_total{status='failed'}[5m])) by (service,reason)",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 7, "w": 12, "x": 12, "y": 14 }
      }
    ]
  }
}
