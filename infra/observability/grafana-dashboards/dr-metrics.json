{
  "dashboard": {
    "title": "Disaster Recovery & Resilience Metrics",
    "tags": ["dr", "resilience", "rto", "rpo"],
    "timezone": "browser",
    "schemaVersion": 38,
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Actual RPO (Target: ≤ 5 minutes)",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "intelgraph_dr_rpo_actual_seconds{database=\"postgres\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 240, "color": "yellow"},
                {"value": 300, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Actual RTO (Target: ≤ 1 hour)",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "intelgraph_dr_rto_actual_seconds{database=\"postgres\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 3000, "color": "yellow"},
                {"value": 3600, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "graph",
        "title": "Replication Lag (All Databases)",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "intelgraph_dr_replication_lag_seconds",
            "legendFormat": "{{database}} ({{primary_region}} → {{dr_region}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Replication Lag"
          }
        ],
        "thresholds": [
          {
            "value": 300,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 4,
        "type": "graph",
        "title": "Backup Frequency",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "time() - intelgraph_dr_last_backup_timestamp{backup_type=\"full\"}",
            "legendFormat": "{{database}} - {{backup_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Time Since Last Backup"
          }
        ]
      },
      {
        "id": 5,
        "type": "graph",
        "title": "Backup Size Trend",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "intelgraph_dr_backup_size_bytes",
            "legendFormat": "{{database}} - {{backup_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Backup Size"
          }
        ]
      },
      {
        "id": 6,
        "type": "table",
        "title": "DR Restore Tests (Last 30 days)",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "sum(increase(intelgraph_dr_restore_tests_total[30d])) by (database, test_type, result)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "type": "table",
        "title": "Chaos Experiments Summary",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "sum(increase(intelgraph_chaos_experiments_total[30d])) by (experiment_type, target, result)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "type": "stat",
        "title": "Chaos Drill Pass Rate (Monthly)",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "100 * (sum(increase(intelgraph_chaos_experiments_total{result=\"success\"}[30d])) / sum(increase(intelgraph_chaos_experiments_total[30d])))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 100, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "type": "graph",
        "title": "Chaos Recovery Time",
        "gridPos": {"h": 6, "w": 18, "x": 6, "y": 22},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(intelgraph_chaos_recovery_time_seconds_bucket[24h])) by (le, experiment_type))",
            "legendFormat": "P95 - {{experiment_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Recovery Time"
          }
        ]
      }
    ]
  }
}
