{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LayoutGraph",
  "description": "Schema for layout graphs covering pages, blocks, lines, tokens, and tables.",
  "type": "object",
  "required": ["pages"],
  "properties": {
    "pages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "number", "bbox", "blocks"],
        "properties": {
          "id": {"type": "string"},
          "number": {"type": "integer", "minimum": 1},
          "bbox": {
            "type": "object",
            "required": ["x", "y", "w", "h"],
            "properties": {
              "x": {"type": "number"},
              "y": {"type": "number"},
              "w": {"type": "number", "exclusiveMinimum": 0},
              "h": {"type": "number", "exclusiveMinimum": 0}
            }
          },
          "blocks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "type", "bbox", "lines"],
              "properties": {
                "id": {"type": "string"},
                "type": {"type": "string", "description": "paragraph|table|figure|list|title"},
                "bbox": {"$ref": "#/definitions/bbox"},
                "lines": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["id", "text", "bbox"],
                    "properties": {
                      "id": {"type": "string"},
                      "text": {"type": "string"},
                      "bbox": {"$ref": "#/definitions/bbox"},
                      "tokens": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "required": ["id", "text", "bbox"],
                          "properties": {
                            "id": {"type": "string"},
                            "text": {"type": "string"},
                            "bbox": {"$ref": "#/definitions/bbox"},
                            "confidence": {"type": "number", "minimum": 0, "maximum": 1}
                          }
                        }
                      }
                    }
                  }
                },
                "table": {
                  "type": "object",
                  "description": "Optional table grid representation",
                  "properties": {
                    "rows": {"type": "integer", "minimum": 1},
                    "cols": {"type": "integer", "minimum": 1},
                    "cells": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["row", "col", "text", "bbox"],
                        "properties": {
                          "row": {"type": "integer", "minimum": 0},
                          "col": {"type": "integer", "minimum": 0},
                          "row_span": {"type": "integer", "minimum": 1, "default": 1},
                          "col_span": {"type": "integer", "minimum": 1, "default": 1},
                          "text": {"type": "string"},
                          "bbox": {"$ref": "#/definitions/bbox"}
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "relations": {
      "type": "array",
      "description": "Graph relations between elements (e.g., caption-of, references).",
      "items": {
        "type": "object",
        "required": ["source_id", "target_id", "type"],
        "properties": {
          "source_id": {"type": "string"},
          "target_id": {"type": "string"},
          "type": {"type": "string"},
          "confidence": {"type": "number", "minimum": 0, "maximum": 1}
        }
      }
    }
  },
  "definitions": {
    "bbox": {
      "type": "object",
      "required": ["x", "y", "w", "h"],
      "properties": {
        "x": {"type": "number"},
        "y": {"type": "number"},
        "w": {"type": "number", "exclusiveMinimum": 0},
        "h": {"type": "number", "exclusiveMinimum": 0}
      }
    }
  },
  "additionalProperties": false
}
