{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Frontier Runtime Trace",
  "type": "object",
  "properties": {
    "traceId": {
      "type": "string"
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "nodeId": { "type": "string" },
          "type": { "type": "string" },
          "startTime": { "type": "string", "format": "date-time" },
          "endTime": { "type": "string", "format": "date-time" },
          "status": { "type": "string" }
        }
      }
    }
  },
  "required": ["traceId", "nodes"]
}
