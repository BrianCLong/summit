{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommits"],
  "rangeStrategy": "replace",
  "packageRules": [
    { "matchPackagePatterns": ["^@types/","eslint","jest"], "groupName": "devdeps weekly", "schedule": ["before 5am on monday"], "automerge": true },
    { "matchUpdateTypes": ["patch","minor"], "automerge": true, "groupName": "safe-minors" },
    { "matchUpdateTypes": ["major"], "prPriority": -1, "labels": ["risk:high"] }
  ]
}