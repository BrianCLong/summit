{
  "name": "@summit/mcc",
  "version": "0.1.0",
  "description": "Model Card Compiler (MCC) converts YAML model cards into signed JSON artifacts with enforcement hooks.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcc": "dist/bin/mcc.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts src",
