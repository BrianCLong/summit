{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.example.com/schemas/capability-fabric.schema.json",
  "title": "Capability Registry",
  "type": "object",
  "required": ["version", "capabilities"],
  "properties": {
    "version": { "type": "integer" },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "capability_id",
          "name",
          "description",
          "business_domain",
          "owner_team",
          "repo",
          "service",
          "data_classification",
          "allowed_identities",
          "schemas",
          "operations",
          "risk_controls"
        ],
        "properties": {
          "capability_id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "business_domain": { "type": "string" },
          "owner_team": { "type": "string" },
          "oncall": { "type": "string" },
          "repo": { "type": "string" },
          "service": { "type": "string" },
          "data_classification": { "type": "string" },
          "allowed_identities": { "type": "array", "items": { "type": "string" } },
          "authn": { "type": "object" },
          "authz": { "type": "object" },
          "schemas": {
            "type": "object",
            "properties": {
              "input_schema_ref": { "type": "string" },
              "output_schema_ref": { "type": "string" }
            }
          },
          "operations": { "type": "array", "items": { "type": "string" } },
          "risk_controls": {
            "type": "object",
            "properties": {
              "rate_limit": {
                "type": "object",
                "properties": { "max_per_minute": { "type": "integer" } }
              },
              "approvals_required": { "type": "boolean" },
              "redaction_fields": { "type": "array", "items": { "type": "string" } },
              "allowlist_fields": { "type": "array", "items": { "type": "string" } }
            }
          },
          "dependency_edges": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "target": { "type": "string" },
                "description": { "type": "string" }
              }
            }
          },
          "policy_refs": { "type": "array", "items": { "type": "string" } },
          "matchers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "server": { "type": "string" },
                "tool": { "type": "string" },
                "method": { "type": "string" },
                "path": { "type": "string" }
              }
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
