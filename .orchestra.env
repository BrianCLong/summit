# Symphony Orchestra Environment Configuration
# This file is read by tools/symphony.py for environment-specific settings

# Environment profile (dev, staging, prod)
ORCHESTRA_ENV=dev
PROFILE=dev              # dev|ci|prod (scripts read if present) - legacy compatibility

# Autonomy level (0=manual, 1=suggest, 2=auto-local, 3=allow-bursts)
AUTONOMY=1               # 0=plan, 1=ask+confirm, 2=act, 3=act+persist

# RAG settings
RAG_TOPK=5
RAG_CHUNK=800
RAG_MODEL_EMBED=nomic-embed-text

# Model routing preferences
ROUTING_TASK_CODE=local/llama-cpu
ROUTING_TASK_CHAT=local/llama
ROUTING_TASK_EMBED=nomic-embed-text

# Orchestra integration settings
ENABLE_ORCHESTRA_INTEGRATION=true
ENABLE_OBSERVABILITY=true
DAILY_BUDGET_USD=10.0
REQUEST_TIMEOUT_S=30
