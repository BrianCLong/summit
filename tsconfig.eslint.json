{
  "extends": "./tsconfig.base.json",
  "include": [
    "apps/**/src/**/*.{ts,tsx}",
    "packages/**/src/**/*.{ts,tsx}",
    "client/src/**/*.{ts,tsx}",
    "server/src/**/*.{ts,tsx}",
    "services/**/src/**/*.{ts,tsx}"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.next/**",
    "**/build/**",
    "**/.turbo/**",
    "**/.cache/**",
    "**/coverage/**",
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/tests/**",
    "**/e2e/**"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "src/*"
      ],
      "@ui/*": [
        "client/src/*"
      ],
      "@server/*": [
        "server/src/*"
      ],
      "@client/*": [
        "client/src/*"
      ]
    },
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node"
    ]
  }
}
