{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Summit Intelligence Item",
  "type": "object",
  "required": [
    "id",
    "date",
    "title",
    "classification",
    "sources",
    "actors",
    "tags",
    "claims"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the item (e.g., INTELBRIEF-20260131)"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date of the brief (YYYY-MM-DD)"
    },
    "title": {
      "type": "string",
      "description": "Title of the intelligence brief"
    },
    "classification": {
      "type": "string",
      "enum": ["public", "internal", "restricted"],
      "default": "internal",
      "description": "Classification level"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "url"],
        "properties": {
          "label": {"type": "string"},
          "url": {"type": "string", "format": "uri"}
        },
        "additionalProperties": false
      }
    },
    "actors": {
      "type": "array",
      "items": {"type": "string"}
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"}
    },
    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["claim_id", "summary", "confidence"],
        "properties": {
          "claim_id": {"type": "string"},
          "summary": {"type": "string"},
          "confidence": {
            "type": "string",
            "enum": ["low", "medium", "high", "very_high"]
          }
        },
        "additionalProperties": false
      }
    },
    "ttps": {
      "type": "array",
      "items": {"type": "string"},
      "description": "List of Tactics, Techniques, and Procedures observed"
    }
  },
  "additionalProperties": false
}
