{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://summit.io/schemas/influence_ops/v2/cognitive_layer.graph.json",
  "title": "Cognitive Layer Schema",
  "description": "Graph schema for cognitive attributes and defensive interventions.",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["CognitiveAttribute", "CognitiveState", "CognitiveSignal", "DefenseIntervention"]
          },
          "properties": {
            "type": "object",
            "properties": {
              "attributeName": { "type": "string" },
              "uncertainty": { "type": "number", "minimum": 0, "maximum": 1 },
              "interventionType": { "type": "string" }
            }
          }
        },
        "required": ["id", "type"]
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "target": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["AFFECTS_ATTRIBUTE", "MITIGATED_BY", "MEASURED_BY"]
          },
          "properties": {
            "type": "object",
            "properties": {
              "impactScore": { "type": "number" }
            }
          }
        },
        "required": ["source", "target", "type"]
      }
    }
  },
  "required": ["nodes", "edges"]
}
