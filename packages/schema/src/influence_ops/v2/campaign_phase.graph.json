{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://summit.io/schemas/influence_ops/v2/campaign_phase.graph.json",
  "title": "Campaign Phase Engine Schema",
  "description": "Graph schema for multi-phase influence campaigns and tactics.",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["Campaign", "CampaignPhase", "Tactic"]
          },
          "properties": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "status": { "type": "string", "enum": ["ACTIVE", "PLANNED", "COMPLETED", "SUSPENDED"] },
              "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
            }
          }
        },
        "required": ["id", "type"]
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "target": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["HAS_PHASE", "PHASE_PRECEDES", "USES_TACTIC"]
          },
          "properties": {
            "type": "object",
            "properties": {
              "weight": { "type": "number" }
            }
          }
        },
        "required": ["source", "target", "type"]
      }
    }
  },
  "required": ["nodes", "edges"]
}
