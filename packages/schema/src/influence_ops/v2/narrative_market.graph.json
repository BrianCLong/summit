{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://summit.io/schemas/influence_ops/v2/narrative_market.graph.json",
  "title": "Narrative Market Schema",
  "description": "Graph schema for narrative marketplace dynamics and audience segmentation.",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["NarrativeMarket", "MarketMetric", "AudienceSegment", "Narrative", "NarrativeVariant"]
          },
          "properties": {
            "type": "object",
            "properties": {
              "metricType": { "type": "string", "enum": ["ATTENTION", "CREDIBILITY", "RETENTION"] },
              "value": { "type": "number" },
              "segmentSize": { "type": "integer" }
            }
          }
        },
        "required": ["id", "type"]
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "target": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["TARGETS_SEGMENT", "COMPETES_WITH", "DERIVES_FROM", "LOCALIZED_AS", "MEASURED_BY"]
          },
          "properties": {
            "type": "object",
            "properties": {
              "overlapScore": { "type": "number" }
            }
          }
        },
        "required": ["source", "target", "type"]
      }
    }
  },
  "required": ["nodes", "edges"]
}
