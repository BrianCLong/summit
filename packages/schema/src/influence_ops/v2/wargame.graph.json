{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://summit.io/schemas/influence_ops/v2/wargame.graph.json",
  "title": "Wargame Schema",
  "description": "Graph schema for deterministic wargame scenarios.",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["WargameScenario", "Faction", "Move", "Effect", "ImpactLink"]
          },
          "properties": {
            "type": "object",
            "properties": {
              "scenarioName": { "type": "string" },
              "factionName": { "type": "string" },
              "moveType": { "type": "string" }
            }
          }
        },
        "required": ["id", "type"]
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "source": { "type": "string" },
          "target": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["EXECUTES_MOVE", "CAUSES_EFFECT", "LINKS_TO_IMPACT"]
          },
          "properties": {
            "type": "object",
            "properties": {
              "stepOrder": { "type": "integer" }
            }
          }
        },
        "required": ["source", "target", "type"]
      }
    }
  },
  "required": ["nodes", "edges"]
}
