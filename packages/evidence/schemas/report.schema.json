{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Competitive Intelligence Report",
  "type": "object",
  "properties": {
    "eid": { "type": "string" },
    "date": { "type": "string", "format": "date" },
    "summary": { "type": "string" },
    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "text": { "type": "string" },
            "source_id": { "type": "string" }
        }
      }
    }
  },
  "required": ["eid", "date"]
}
