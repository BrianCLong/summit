{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence Stamp",
  "type": "object",
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "git_sha": { "type": "string" },
    "pipeline_mode": { "type": "string", "enum": ["offline", "connected"] },
    "snapshot_manifest_hash": { "type": "string" }
  },
  "required": ["timestamp", "git_sha", "snapshot_manifest_hash"]
}
