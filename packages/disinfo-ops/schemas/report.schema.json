{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Disinfo Ops Report",
  "type": "object",
  "required": ["evidence_id", "job_id", "verdict", "limitations"],
  "properties": {
    "evidence_id": { "type": "string", "pattern": "^EVD-.*" },
    "job_id": { "type": "string" },
    "verdict": { "type": "string", "enum": ["TRUE", "FALSE", "UNCLEAR", "NEEDS_CONTEXT"] },
    "summary": { "type": "string" },
    "limitations": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": { "type": "string" },
          "status": { "type": "string" }
        },
        "required": ["text"]
      }
    }
  },
  "additionalProperties": false
}
