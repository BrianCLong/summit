{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.intelgraph.dev/schemas/adapter/manifest.json",
  "title": "Adapter Bundle Manifest",
  "type": "object",
  "required": [
    "id",
    "name",
    "version",
    "sdkVersion",
    "entrypoint",
    "createdAt",
    "compatibility",
    "artifacts",
    "checksums"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "sdkVersion": {
      "type": "string",
      "minLength": 1
    },
    "entrypoint": {
      "type": "string",
      "minLength": 1
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "maintainer": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" }
      },
      "additionalProperties": false
    },
    "compatibility": {
      "$ref": "https://summit.intelgraph.dev/schemas/adapter/compatibility.json"
    },
    "artifacts": {
      "type": "object",
      "required": ["payload", "sbom", "slsa", "configSchema", "compatibility"],
      "properties": {
        "payload": { "type": "string" },
        "sbom": { "type": "string" },
        "slsa": { "type": "string" },
        "configSchema": { "type": "string" },
        "compatibility": { "type": "string" }
      },
      "additionalProperties": false
    },
    "checksums": {
      "type": "object",
      "required": ["payload", "sbom", "slsa", "configSchema"],
      "properties": {
        "payload": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "sbom": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "slsa": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
        "configSchema": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
