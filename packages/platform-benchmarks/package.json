{
  "name": "@summit/platform-benchmarks",
  "version": "1.0.0",
  "description": "Cross-language benchmark harness for Summit platform (P17)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./runners": {
      "import": "./dist/runners/index.js",
      "types": "./dist/runners/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "benchmark": "tsx src/cli.ts",
    "benchmark:ci": "tsx src/cli.ts --ci --output json",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "tinybench": "^2.6.0",
    "cli-table3": "^0.6.3",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "eslint": "^8.56.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "benchmark",
    "performance",
    "testing",
    "summit"
  ],
  "license": "MIT"
}
