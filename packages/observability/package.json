{
  "name": "@companyos/observability",
  "version": "1.0.0",
  "description": "CompanyOS Observability SDK - Unified metrics, logging, tracing, and SLO management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./metrics": {
      "import": "./dist/metrics/index.js",
      "types": "./dist/metrics/index.d.ts"
    },
    "./logging": {
      "import": "./dist/logging/index.js",
      "types": "./dist/logging/index.d.ts"
    },
    "./tracing": {
      "import": "./dist/tracing/index.js",
      "types": "./dist/tracing/index.d.ts"
    },
    "./slo": {
      "import": "./dist/slo/index.js",
      "types": "./dist/slo/index.d.ts"
    },
    "./health": {
      "import": "./dist/health/index.js",
      "types": "./dist/health/index.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware/index.js",
      "types": "./dist/middleware/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist",
    "dev": "tsc -b --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.48.0",
    "@opentelemetry/exporter-prometheus": "^0.52.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.0",
    "@opentelemetry/instrumentation-express": "^0.41.0",
    "@opentelemetry/instrumentation-http": "^0.52.0",
    "@opentelemetry/instrumentation-graphql": "^0.42.0",
    "@opentelemetry/instrumentation-pg": "^0.43.0",
    "@opentelemetry/resources": "^1.25.0",
    "@opentelemetry/sdk-metrics": "^1.25.0",
    "@opentelemetry/sdk-node": "^0.52.0",
    "@opentelemetry/sdk-trace-base": "^1.25.0",
    "@opentelemetry/sdk-trace-node": "^1.25.0",
    "@opentelemetry/semantic-conventions": "^1.25.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "keywords": [
    "observability",
    "metrics",
    "logging",
    "tracing",
    "opentelemetry",
    "prometheus",
    "slo",
    "companyos"
  ],
  "author": "CompanyOS Platform Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0"
  }
}
