{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Team Configuration",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "leadAgentId": { "type": "string" },
    "members": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "agentId": { "type": "string" },
          "agentType": { "type": "string" },
          "backendType": { "type": "string", "enum": ["in-process", "container", "local"] },
          "cwd": { "type": "string" }
        },
        "required": ["agentId", "agentType"]
      }
    }
  },
  "required": ["name", "members"]
}
