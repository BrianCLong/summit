{
  "name": "@summit/summit-agent",
  "version": "0.1.0",
  "description": "Summit-native coding agent CLI with governance receipts",
  "type": "module",
  "bin": {
    "summit-agent": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
