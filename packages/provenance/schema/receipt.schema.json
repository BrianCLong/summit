{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://intelgraph.dev/schemas/provenance/receipt.schema.json",
  "title": "ProvenanceReceipt",
  "type": "object",
  "required": ["id", "payload", "payloadHash", "issuedAt", "signature", "signer"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Stable identifier for the receipt",
      "pattern": "^[A-Za-z0-9._:-]+$",
      "minLength": 3
    },
    "payload": {
      "type": "object",
      "description": "Canonical payload the receipt covers",
      "additionalProperties": true
    },
    "payloadHash": {
      "type": "string",
      "description": "Hex-encoded SHA-256 hash of the canonical payload",
      "pattern": "^[a-f0-9]{64}$"
    },
    "issuedAt": {
      "type": "string",
      "description": "RFC3339 timestamp when the receipt was produced",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "description": "Optional contextual metadata attached to the receipt",
      "additionalProperties": {
        "type": ["string", "number", "boolean", "null"]
      }
    },
    "signature": {
      "type": "string",
      "description": "Base64-encoded signature produced by the signer",
      "minLength": 16
    },
    "signer": {
      "type": "object",
      "description": "Information about the key material that produced the receipt",
      "required": ["keyId", "algorithm"],
      "properties": {
        "keyId": {
          "type": "string",
          "minLength": 3
        },
        "algorithm": {
          "type": "string",
          "enum": ["RSASSA_PSS_SHA_256", "RSASSA_PSS_SHA_384", "RSASSA_PSS_SHA_512"]
        },
        "publicKey": {
          "type": "string",
          "description": "Optional PEM-encoded public key when available"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
