{
  "$id": "https://intelgraph.dev/schemas/provenance/receipt.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProvenanceReceipt",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 3,
      "pattern": "^[A-Za-z0-9._:-]+$",
      "description": "Stable identifier for the receipt"
    },
    "payload": {
      "type": "object",
      "properties": {},
      "additionalProperties": {},
      "description": "Canonical payload the receipt covers"
    },
    "payloadHash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "Hex-encoded SHA-256 hash of the canonical payload"
    },
    "issuedAt": {
      "type": "string",
      "format": "date-time",
      "description": "RFC3339 timestamp when the receipt was produced"
    },
    "metadata": {
      "type": "object",
      "properties": {},
      "additionalProperties": {
        "type": [
          "string",
          "number",
          "boolean",
          "null"
        ]
      },
      "description": "Optional contextual metadata attached to the receipt"
    },
    "signature": {
      "type": "string",
      "minLength": 16,
      "description": "Base64-encoded signature produced by the signer"
    },
    "signer": {
      "type": "object",
      "properties": {
        "keyId": {
          "type": "string",
          "minLength": 3
        },
        "algorithm": {
          "type": "string",
          "enum": [
            "RSASSA_PSS_SHA_256",
            "RSASSA_PSS_SHA_384",
            "RSASSA_PSS_SHA_512"
          ]
        },
        "publicKey": {
          "type": "string",
          "description": "Optional PEM-encoded public key when available"
        }
      },
      "required": [
        "keyId",
        "algorithm"
      ],
      "additionalProperties": false,
      "description": "Information about the key material that produced the receipt"
    }
  },
  "required": [
    "id",
    "payload",
    "payloadHash",
    "issuedAt",
    "signature",
    "signer"
  ],
  "additionalProperties": false,
  "description": "ProvenanceReceipt"
}
