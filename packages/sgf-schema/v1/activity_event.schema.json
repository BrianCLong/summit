{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://summit.ai/schemas/sgf/v1/activity_event.schema.json",
  "title": "ActivityEvent",
  "type": "object",
  "required": ["event_id", "timestamp", "event_type", "tenant_id", "residency_region"],
  "properties": {
    "event_id": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "string", "format": "date-time" },
    "event_type": {
      "type": "string",
      "enum": [
        "prompt",
        "response",
        "tool_call",
        "agent_step",
        "policy_decision",
        "data_access",
        "deployment"
      ]
    },
    "tenant_id": { "type": "string" },
    "residency_region": { "type": "string" },
    "user_principal": { "type": "string" },
    "session_id": { "type": "string" },
    "trace_id": { "type": "string" },
    "asset_id": { "type": "string" },
    "payload": { "type": "object" },
    "metadata": { "type": "object" }
  }
}
