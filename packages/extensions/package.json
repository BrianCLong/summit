{
  "name": "@summit/extensions",
  "version": "2.0.0",
  "description": "Unified extension framework for Summit",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "summit-ext": "./bin/summit-ext"
  },
  "scripts": {
    "build": "tsc && chmod +x bin/summit-ext",
    "dev": "tsc --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "glob": "^10.3.10",
    "ajv": "^8.12.0",
    "zod": "^3.22.4",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "keywords": [
    "extensions",
    "plugins",
    "summit",
    "ecosystem"
  ]
}
