{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Summit Receipt v0.1",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "actor": { "type": "string" },
    "action": { "type": "string" },
    "payload": { "type": "object" },
    "hash": { "type": "string" },
    "previous_hash": { "type": ["string", "null"] }
  },
  "required": ["id", "timestamp", "actor", "action", "hash"]
}
