{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "types": ["node", "pg", "uuid", "crypto-js"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/__tests__", "tests", "coverage"]
}
