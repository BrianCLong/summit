{
  "name": "@intelgraph/migration-linter",
  "version": "1.0.0-rc.1",
  "description": "Static linter for SQL and ORM migrations enforcing backward-compatible patterns",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "migration-linter": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "lint:ci": "pnpm run build && node dist/cli.js",
    "test": "vitest run"
  },
  "keywords": [
    "migrations",
    "database",
    "safety",
    "lint"
  ],
  "author": "Summit Engineering",
  "license": "MIT",
  "dependencies": {
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.4"
  }
}
