{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryRegistry",
  "type": "object",
  "properties": {
    "queries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "phase": { "enum": ["DISCOVERY", "JUSTIFICATION"] },
          "cypher": { "type": "string" },
          "params": { "type": "array", "items": { "type": "string" } },
          "max_rows": { "type": "integer" },
          "projection_allowlist": { "type": "array", "items": { "type": "string" } },
          "pii_tags": { "type": "array", "items": { "type": "string" } },
          "tenant_scope": { "type": "boolean" }
        },
        "required": ["id", "phase", "cypher"]
      }
    }
  },
  "required": ["queries"]
}
