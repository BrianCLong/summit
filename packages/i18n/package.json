{
  "name": "@intelgraph/i18n",
  "version": "1.0.0",
  "description": "Comprehensive internationalization system for Summit/IntelGraph platform",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./locales/*": "./locales/*"
  },
  "files": [
    "dist",
    "locales"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "extract": "node scripts/extract-strings.js",
    "validate": "node scripts/validate-translations.js",
    "coverage": "node scripts/translation-coverage.js"
  },
  "dependencies": {
    "i18next": "^24.0.5",
    "react-i18next": "^15.3.3",
    "i18next-browser-languagedetector": "^8.0.2",
    "i18next-http-backend": "^3.0.2",
    "i18next-icu": "^2.3.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.5",
    "@types/react": "^19.2.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "react",
    "i18next"
  ],
  "author": "IntelGraph Team",
  "license": "PROPRIETARY"
}
