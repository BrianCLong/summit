{
  "name": "@intelgraph/sim-harness",
  "version": "0.1.0",
  "description": "Scenario simulation and evaluation harness for IntelGraph platform",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:integration": "jest --testMatch='**/*.integration.test.ts'",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "run-scenario": "node dist/cli.js",
    "clean": "rm -rf dist reports/*.json reports/*.html"
  },
  "keywords": [
    "simulation",
    "evaluation",
    "testing",
    "scenarios",
    "intelligence",
    "graph-analytics"
  ],
  "author": "IntelGraph Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "axios": "^1.6.0",
    "commander": "^11.0.0",
    "uuid": "^9.0.0",
    "ws": "^8.14.0",
    "yaml": "^2.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=9.12.0"
  }
}
