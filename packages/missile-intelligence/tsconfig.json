{
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
