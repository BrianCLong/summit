{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Disinfo Ecosystem Report",
  "type": "object",
  "properties": {
    "evidence_id": { "type": "string" },
    "risk_score": { "type": "number" },
    "signals": {
      "type": "object",
      "properties": {
        "content": { "type": "object" },
        "provenance": { "type": "object" },
        "network": { "type": "object" }
      }
    },
    "targeting_gap": { "type": "object" },
    "mitigations": { "type": "array" }
  },
  "required": ["evidence_id", "risk_score"]
}
