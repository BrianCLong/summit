{
  "name": "@summit/pve",
  "version": "0.1.0",
  "description": "Policy Validation Engine - OPA-driven governance and invariant enforcement for Summit",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "glob": "^11.0.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0",
    "eslint": "^9.0.0"
  },
  "peerDependencies": {
    "@octokit/rest": "^20.0.0"
  },
  "peerDependenciesMeta": {
    "@octokit/rest": {
      "optional": true
    }
  },
  "keywords": [
    "policy",
    "validation",
    "governance",
    "opa",
    "invariant",
    "enforcement",
    "summit"
  ],
  "author": "Summit Team",
  "license": "MIT",
  "files": [
    "dist",
    "src/policies"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./policies/*": "./src/policies/*"
  }
}
