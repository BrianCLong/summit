{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Summit Skill Manifest",
  "type": "object",
  "required": ["schema_version", "name", "version", "description", "inputs", "outputs", "permissions"],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": ["1.0"]
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "license": {
      "type": "string"
    },
    "inputs": {
      "type": "object",
      "description": "JSON Schema for input parameters"
    },
    "outputs": {
      "type": "object",
      "description": "JSON Schema for output result"
    },
    "requirements": {
      "type": "object",
      "properties": {
        "mcp_tools": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "version"],
            "properties": {
              "name": { "type": "string" },
              "version": { "type": "string" }
            }
          }
        },
        "runtime": {
          "type": "string"
        },
        "environment_variables": {
            "type": "array",
            "items": { "type": "string" }
        }
      }
    },
    "permissions": {
      "type": "object",
      "required": ["filesystem", "network"],
      "properties": {
        "filesystem": {
          "type": "object",
          "properties": {
            "read": {
              "type": "array",
              "items": { "type": "string" }
            },
            "write": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "network": {
          "type": "object",
          "properties": {
            "domains": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "env": {
          "type": "object",
          "properties": {
            "secrets": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "governance": {
      "type": "object",
      "properties": {
        "classification": {
          "type": "string",
          "enum": ["public", "internal", "confidential", "restricted"]
        },
        "determinism": {
          "type": "string",
          "enum": ["deterministic", "best_effort", "nondeterministic"]
        },
        "side_effects": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
