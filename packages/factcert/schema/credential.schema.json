{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FactCert Credential",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^CERT_[A-Z0-9]+$"
    },
    "type": {
      "type": "string",
      "enum": ["FactCheckerCredential"]
    },
    "holder": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "issuer": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["id", "name"]
    },
    "level": {
      "type": "string",
      "enum": ["L1", "L2", "Supervisor"]
    },
    "domain": {
      "type": "string",
      "enum": ["Finance", "Legal", "Health", "General"]
    },
    "issued_at": {
      "type": "string",
      "format": "date-time"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["active", "suspended", "revoked"]
    },
    "signature": {
      "$ref": "stamp.schema.json"
    }
  },
  "required": ["id", "type", "holder", "issuer", "level", "domain", "issued_at", "status"]
}
