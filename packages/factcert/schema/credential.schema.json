{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FactCert Credential",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the credential"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "contains": {
        "const": "FactCheckerCredential"
      }
    },
    "issuer": {
      "type": "string",
      "description": "DID or identifier of the issuer"
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "specializations": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["General", "Health", "Finance", "Legal", "Political"]
          }
        },
        "level": {
          "type": "string",
          "enum": ["Associate", "Professional", "Expert"]
        }
      },
      "required": ["id", "level"]
    }
  },
  "required": ["id", "type", "issuer", "issuanceDate", "credentialSubject"]
}
