{
  "title": "Golden Paths",
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "Step p95 latency",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, journey, step)(rate(gp_step_latency_seconds_bucket[5m])))",
          "legendFormat": "{{journey}}/{{step}}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Journey success ratio",
      "targets": [
        {
          "expr": "avg_over_time(gp_journey_success_ratio_sum[5m]) / ignoring(le) avg_over_time(gp_journey_success_ratio_count[5m])",
          "legendFormat": "success"
        }
      ],
      "gridPos": { "h": 4, "w": 8, "x": 0, "y": 9 }
    },
    {
      "type": "table",
      "title": "Step errors (5m)",
      "targets": [
        {
          "expr": "sum by (journey, step, reason)(increase(gp_step_errors_total[5m]))",
          "legendFormat": "{{journey}}/{{step}}"
        }
      ],
      "gridPos": { "h": 7, "w": 16, "x": 8, "y": 9 }
    },
    {
      "type": "stat",
      "title": "Latest failures",
      "targets": [
        {
          "expr": "sum by (journey, step)(increase(gp_step_errors_total[15m]))",
          "legendFormat": "{{journey}}/{{step}}"
        }
      ],
      "links": [
        {
          "title": "Open Trace",
          "url": "${TEMPO_URL}/search?q={{__value.text}}"
        }
      ],
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 16 }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "journey",
        "query": "label_values(gp_step_latency_seconds_bucket, journey)",
        "type": "query"
      }
    ]
  },
  "schemaVersion": 37,
  "version": 1
}
