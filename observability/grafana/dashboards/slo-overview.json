{
  "title": "Service SLO Overview",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "stat",
      "title": "Gateway Error Rate",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{service='gateway',namespace=~'$namespace',status=~'5..'}[5m])) / sum(rate(http_requests_total{service='gateway',namespace=~'$namespace'}[5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.01 },
              { "color": "red", "value": 0.02 }
            ]
          },
          "unit": "percentunit"
        },
        "overrides": []
      },
      "options": { "colorMode": "value", "graphMode": "area", "justifyMode": "center" }
    },
    {
      "type": "stat",
      "title": "API p95 Latency",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service='api',namespace=~'$namespace'}[5m])) by (le))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.45 },
              { "color": "red", "value": 0.75 }
            ]
          },
          "unit": "s"
        },
        "overrides": []
      },
      "options": { "colorMode": "value", "graphMode": "area", "justifyMode": "center" }
    },
    {
      "type": "graph",
      "title": "Analytics Engine Burn Rate",
      "targets": [
        {
          "expr": "sum(rate(job_errors_total{service='analytics-engine',namespace=~'$namespace'}[5m])) / sum(rate(job_executions_total{service='analytics-engine',namespace=~'$namespace'}[5m]))"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percentunit" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list" }, "tooltip": { "mode": "single" } }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 2,
        "query": "label_values(kube_pod_info, namespace)",
        "multi": false,
        "includeAll": false
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" }
}
