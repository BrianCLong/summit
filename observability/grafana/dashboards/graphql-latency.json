{
  "title": "GraphQL Latency & Errors",
  "panels": [
    {
      "type": "timeseries",
      "title": "GraphQL p95",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(apollo_request_duration_ms_bucket[5m])) by (le))"
        }
      ]
    },
    {
      "type": "stat",
      "title": "5xx Rate",
      "targets": [
        { "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m]))" }
      ]
    }
  ]
}
