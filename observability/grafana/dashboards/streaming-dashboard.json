  "panels": [
    {
      "title": "Kafka Throughput (Events/sec)",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(kafka_server_brokertopicmetrics_messagesin_total[1m])",
          "legendFormat": "{{topic}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "title": "Consumer Lag",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "kafka_consumergroup_lag",
          "legendFormat": "{{group}} - {{topic}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "title": "Aggregation Updates",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(aggregation_updates_total[5m]))",
          "legendFormat": "Updates/sec"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      }
    },
    {
      "title": "Processing Latency (p99)",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, rate(kafka_consumer_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "{{topic}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      }
    },
    {
      "title": "DLQ Rate",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(kafka_producer_dlq_messages_total[1m])",
          "legendFormat": "{{topic}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      }
    }
  ],
