{
  "title": "DR Overview",
  "panels": [
    {
      "type": "stat",
      "title": "Backup Freshness",
      "targets": [{ "expr": "time() - max(backup_last_success_timestamp)" }]
    },
    {
      "type": "stat",
      "title": "Verify Success",
      "targets": [{ "expr": "min(backup_verify_success)" }]
    },
    {
      "type": "graph",
      "title": "Backup Duration",
      "targets": [{ "expr": "backup_duration_seconds" }]
    },
    {
      "type": "table",
      "title": "RTO/RPO Catalog",
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "expr": "label_replace(backup_last_success_timestamp, \"store\", \"$1\", \"store\", \"(.*)\")"
        }
      ]
    }
  ],
  "time": {
    "from": "now-7d",
    "to": "now"
  }
}
