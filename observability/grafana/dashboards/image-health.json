{
  "title": "Container Image Health",
  "uid": "image-health",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5m",
  "panels": [
    {
      "type": "stat",
      "id": 1,
      "title": "Runtime Image Budget Compliance",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "max_over_time(container_image_budget_violation_total[24h])",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["last"], "fields": "", "values": false },
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "unit": "none"
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "id": 2,
      "title": "Image Size (MB)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "max by (image) (container_image_size_bytes) / 1024 / 1024",
          "refId": "A",
          "legendFormat": "{{image}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "type": "table",
      "id": 3,
      "title": "Base Image Freshness",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "(time() - container_base_image_created_timestamp_seconds) / 86400",
          "refId": "A",
          "legendFormat": "{{image}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "d",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 14 },
              { "color": "red", "value": 30 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "showHeader": true
      }
    },
    {
      "type": "timeseries",
      "id": 4,
      "title": "CVE Delta (last 7d)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "increase(container_image_vulnerabilities_total[7d])",
          "refId": "A",
          "legendFormat": "{{image}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    }
  ],
  "templating": { "list": [] }
}
