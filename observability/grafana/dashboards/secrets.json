{
  "title": "Secret Delivery and Rotation",
  "refresh": "30s",
  "panels": [
    {
      "type": "stat",
      "title": "Secret Deploy Events",
      "targets": [
        {
          "expr": "sum by (env, app) (secret_deploy_events_total)",
          "legendFormat": "{{env}}/{{app}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Rotation Age (days)",
      "targets": [
        {
          "expr": "secret_rotation_age_days",
          "legendFormat": "{{secret}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 60},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    }
  ]
}
