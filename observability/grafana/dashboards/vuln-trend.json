{
  "title": "Security â€” Vulnerability Trends & Exceptions",
  "tags": ["security", "vulnerability", "exceptions", "trend"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "Critical & High Vulnerabilities (open)",
      "type": "timeseries",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "sum(security_vulnerability_info{status=\"open\", severity=\"critical\"})",
          "legendFormat": "Critical"
        },
        {
          "expr": "sum(security_vulnerability_info{status=\"open\", severity=\"high\"})",
          "legendFormat": "High"
        }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" },
        "showPoints": "never"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "Exception Debt Burn-down",
      "type": "timeseries",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          },
          "unit": "none"
        }
      },
      "targets": [
        {
          "expr": "sum(security_vulnerability_info{status=\"exception\", severity=\"critical\"})",
          "legendFormat": "Critical exceptions"
        },
        {
          "expr": "sum(security_vulnerability_info{status=\"exception\", severity=\"high\"})",
          "legendFormat": "High exceptions"
        }
      ],
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "single" },
        "showPoints": "never"
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
    },
    {
      "id": 3,
      "title": "Critical Vuln Alert",
      "type": "stat",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 1 },
              { "color": "orange", "value": 0.1 },
              { "color": "green", "value": 0 }
            ]
          },
          "mappings": [],
          "unit": "none"
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "targets": [
        {
          "expr": "sum(security_vulnerability_info{status=\"open\", severity=\"critical\"})",
          "legendFormat": "Critical open"
        }
      ],
      "gridPos": { "h": 5, "w": 24, "x": 0, "y": 16 },
      "alert": {
        "name": "Critical vulnerabilities present",
        "conditions": [
          {
            "evaluator": { "type": "gt", "params": [0] },
            "query": { "params": ["A", "5m", "now"] }
          }
        ],
        "noDataState": "no_data",
        "executionErrorState": "alerting",
        "frequency": "1m"
      }
    }
  ]
}
