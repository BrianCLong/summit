{
  "title": "Search Indexer",
  "uid": "search-indexer",
  "panels": [
    {
      "title": "Indexer Lag (seconds)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
      "targets": [{ "expr": "indexer_lag_seconds", "legendFormat": "Lag" }]
    },
    {
      "title": "DLQ Total",
      "type": "stat",
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 },
      "targets": [{ "expr": "indexer_dlq_total", "legendFormat": "DLQ Messages" }]
    },
    {
      "title": "Operations Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(indexer_ops_total[5m])) by (op, status)",
          "legendFormat": "{{op}} - {{status}}"
        }
      ]
    }
  ]
}
