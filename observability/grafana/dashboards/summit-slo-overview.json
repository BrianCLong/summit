{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "description": "Current SLO compliance for all services",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "max": 100,
          "min": 99,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 99.5},
              {"color": "green", "value": 99.9}
            ]
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
      "id": 1,
      "options": {
        "orientation": "horizontal",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "pluginVersion": "10.4.7",
      "targets": [
        {
          "expr": "(1 - (sum(rate(http_requests_total{service=\"api\",code=~\"5..\"}[30d])) / sum(rate(http_requests_total{service=\"api\"}[30d])))) * 100",
          "legendFormat": "API",
          "refId": "A"
        },
        {
          "expr": "(1 - (sum(rate(http_requests_total{service=\"gateway\",code=~\"5..\"}[30d])) / sum(rate(http_requests_total{service=\"gateway\"}[30d])))) * 100",
          "legendFormat": "Gateway",
          "refId": "B"
        },
        {
          "expr": "(1 - (sum(rate(http_requests_total{service=\"web\",code=~\"5..\"}[30d])) / sum(rate(http_requests_total{service=\"web\"}[30d])))) * 100",
          "legendFormat": "Web",
          "refId": "C"
        }
      ],
      "title": "Service SLO Compliance (30d)",
      "type": "gauge"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "description": "Remaining error budget for each service",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "custom": {
            "align": "center",
            "cellOptions": {"type": "color-background"},
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "green", "value": 80}
            ]
          },
          "unit": "percent"
        },
        "overrides": []
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "id": 2,
      "options": {
        "showHeader": true,
        "cellHeight": "sm"
      },
      "pluginVersion": "10.4.7",
      "targets": [
        {
          "expr": "(1 - ((sum(rate(http_requests_total{service=\"api\",code=~\"5..\"}[30d])) / sum(rate(http_requests_total{service=\"api\"}[30d]))) / 0.001)) * 100",
          "format": "table",
          "instant": true,
          "legendFormat": "API",
          "refId": "A"
        }
      ],
      "title": "Error Budget Remaining",
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true},
            "renameByName": {"Value": "Budget %"}
          }
        }
      ],
      "type": "table"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "description": "Rate at which error budget is being consumed",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisCenteredZero": false,
            "axisLabel": "Burn Rate",
            "axisPlacement": "auto",
            "drawStyle": "line",
            "fillOpacity": 10,
            "lineWidth": 2
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "orange", "value": 6},
              {"color": "red", "value": 14.4}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "id": 3,
      "options": {
        "legend": {
          "calcs": ["mean", "max"],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "(sum(rate(http_requests_total{service=\"api\",code=~\"5..\"}[1h])) / sum(rate(http_requests_total{service=\"api\"}[1h]))) / 0.001",
          "legendFormat": "API Burn Rate (1h)",
          "refId": "A"
        }
      ],
      "title": "Error Budget Burn Rate",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["summit", "slo", "sre"],
  "templating": {"list": []},
  "time": {"from": "now-24h", "to": "now"},
  "timezone": "",
  "title": "Summit - SLO Overview",
  "uid": "summit-slo-overview",
  "version": 1
}
