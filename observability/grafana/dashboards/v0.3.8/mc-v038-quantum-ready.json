    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": [
        {
          "name": "tenant",
          "type": "query",
          "query": "label_values(mc_pqa_coverage_percent, tenant_id)",
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true
        },
        {
          "name": "region",
          "type": "query",
          "query": "label_values(mc_bft_eco_quorum_reliability_score, region)",
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "PQA Verification Failures",
          "datasource": "prometheus",
          "expr": "changes(mc_pqa_verification_failures_total[5m])",
