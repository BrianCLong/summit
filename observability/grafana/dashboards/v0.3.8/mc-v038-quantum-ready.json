            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 24},
                {"color": "red", "value": 72}
              ]
            },
            "unit": "h"
          }
        },
        "targets": [
          {
            "expr": "mc_podr_last_drill_hours_ago",
            "legendFormat": "Hours Since Last DR Drill",
            "refId": "A"
