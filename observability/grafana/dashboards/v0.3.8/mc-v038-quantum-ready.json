{
  "dashboard": {
    "id": null,
    "title": "MC v0.3.8 - Quantum-Ready Equilibrium",
    "tags": ["mc-platform", "v0.3.8", "quantum-ready", "beyond-mythic", "equilibrium"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Post-Quantum Coverage",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99.9}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "targets": [
          {
            "expr": "mc_pqa_coverage_percent",
            "legendFormat": "PQ Coverage %",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "zk-Fairness Health",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.8},
                {"color": "green", "value": 0.95}
              ]
            },
            "min": 0,
            "max": 1,
            "unit": "short"
          }
        },
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "targets": [
          {
            "expr": "mc_zkfsa_composite_health_score",
            "legendFormat": "ZKFSA Health",
            "refId": "A"
          }
        ]
      },
