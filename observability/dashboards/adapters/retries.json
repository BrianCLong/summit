{
  "dashboard": {
    "title": "Adapters - Retries",
    "tags": ["intelgraph", "adapters", "retries"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Global Retry Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(adapter_retries_total[5m]))",
            "legendFormat": "Retries/min",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Retries by Adapter",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (adapter) (rate(adapter_retries_total[5m]))",
            "legendFormat": "{{adapter}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Retry Outcomes",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (adapter) (rate(adapter_retry_outcomes_total{outcome=\"success\"}[5m]))",
            "legendFormat": "{{adapter}} success",
            "refId": "A"
          },
          {
            "expr": "sum by (adapter) (rate(adapter_retry_outcomes_total{outcome=\"failed\"}[5m]))",
            "legendFormat": "{{adapter}} failed",
            "refId": "B"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Retry Exhaustion by Adapter",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (adapter) (rate(adapter_retry_exhausted_total[5m]))",
            "legendFormat": "{{adapter}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      }
    ],
    "refresh": "15s",
    "time": { "from": "now-6h", "to": "now" }
  }
}
