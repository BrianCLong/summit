{
  "dashboard": {
    "title": "Adapters - Latency",
    "tags": ["intelgraph", "adapters", "latency"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Latency (p50/p95/p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum by (le, adapter) (rate(adapter_request_duration_seconds_bucket[5m]))) * 1000",
            "legendFormat": "p50 {{adapter}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum by (le, adapter) (rate(adapter_request_duration_seconds_bucket[5m]))) * 1000",
            "legendFormat": "p95 {{adapter}}",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum by (le, adapter) (rate(adapter_request_duration_seconds_bucket[5m]))) * 1000",
            "legendFormat": "p99 {{adapter}}",
            "refId": "C"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Average Latency by Adapter (ms)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (adapter) (rate(adapter_request_duration_seconds_sum[5m])) / sum by (adapter) (rate(adapter_request_duration_seconds_count[5m])) * 1000",
            "legendFormat": "{{adapter}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Request Volume by Adapter",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (adapter) (rate(adapter_requests_total[5m]))",
            "legendFormat": "{{adapter}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Latency Budget Burn-down",
        "type": "graph",
        "targets": [
          {
            "expr": "(histogram_quantile(0.95, sum by (le) (rate(adapter_request_duration_seconds_bucket[5m]))) * 1000) > bool 750",
            "legendFormat": "p95 over 750ms",
            "refId": "A"
          },
          {
            "expr": "(histogram_quantile(0.99, sum by (le) (rate(adapter_request_duration_seconds_bucket[5m]))) * 1000) > bool 1000",
            "legendFormat": "p99 over 1s",
            "refId": "B"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      }
    ],
    "refresh": "15s",
    "time": { "from": "now-6h", "to": "now" }
  }
}
