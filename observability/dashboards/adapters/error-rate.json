{
  "dashboard": {
    "title": "Adapters - Error Rate",
    "tags": ["intelgraph", "adapters", "errors"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Global Error Rate (%)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(adapter_requests_total{status=~\"5..|4..\"}[5m])) / sum(rate(adapter_requests_total[5m])) * 100",
            "legendFormat": "Global Error %",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Error Rate by Adapter",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (adapter) (rate(adapter_requests_total{status=~\"5..|4..\"}[5m])) / sum by (adapter) (rate(adapter_requests_total[5m])) * 100",
            "legendFormat": "{{adapter}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Top Erroring Routes",
        "type": "graph",
        "targets": [
          {
            "expr": "topk(5, sum by (adapter, route) (rate(adapter_requests_total{status=~\"5..|4..\"}[5m])))",
            "legendFormat": "{{adapter}} {{route}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Recent Failure Codes",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (status) (rate(adapter_requests_total{status=~\"4..|5..\"}[5m]))",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      }
    ],
    "refresh": "15s",
    "time": { "from": "now-6h", "to": "now" }
  }
}
