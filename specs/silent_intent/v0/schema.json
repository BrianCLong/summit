{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SilentIntent v0",
  "type": "object",
  "required": ["session_id", "timestamp_ms", "intent_frames"],
  "properties": {
    "session_id": { "type": "string" },
    "timestamp_ms": { "type": "integer" },
    "intent_frames": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["intent_class", "confidence"],
        "properties": {
          "intent_class": { "enum": ["command_decode", "identity_inference", "emotion_inference", "physiology_inference"] },
          "text": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "meta": { "type": "object" }
        }
      }
    },
    "device_caps": { "type": "object" },
    "consent_token": { "type": "string" }
  },
  "additionalProperties": false
}
