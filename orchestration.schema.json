{
  "type": "object",
  "required": ["env", "policies", "routing", "observability", "fastlane", "friction_alerts"],
  "properties": {
    "env": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "kill_switch": { "type": "integer", "minimum": 0, "maximum": 1 }
      }
    },
    "policies": { "type": "object" },
    "routing": { "type": "array" },
    "observability": {
      "type": "object",
      "required": ["metrics", "logging"],
      "properties": {
        "metrics": { "type": "object" },
        "logging": { "type": "object" },
        "tracing": { "type": "object" }
      }
    },
    "fastlane": {
      "type": "object",
      "required": ["enabled"],
      "properties": {
        "enabled": { "type": "boolean" },
        "handoff_timeout_ms": { "type": "integer" },
        "signal_threshold": { "type": "number" },
        "routes": { "type": "array" }
      }
    },
    "friction_alerts": {
      "type": "object",
      "required": ["enabled", "thresholds"],
      "properties": {
        "enabled": { "type": "boolean" },
        "thresholds": { "type": "object" },
        "notifications": { "type": "object" },
        "escalation": { "type": "object" }
      }
    }
  }
}
