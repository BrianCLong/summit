{
  "id": "opportunity_filter_v0",
  "version": "0.1.0",
  "description": "Filter opportunities by niche, ICP fit, pain intensity, and willingness-to-pay signals.",
  "inputs_schema": {
    "type": "object",
    "properties": {
      "niche": {"type": "string"},
      "icp": {"type": "string"},
      "pain_points": {"type": "array", "items": {"type": "string"}},
      "constraints": {"type": "array", "items": {"type": "string"}}
    },
    "required": ["niche", "icp", "pain_points"],
    "additionalProperties": false
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "niche_summary": {"type": "string"},
      "icp_summary": {"type": "string"},
      "willingness_signals": {"type": "array", "items": {"type": "string"}},
      "disqualifiers": {"type": "array", "items": {"type": "string"}},
      "recommendation": {"type": "string"}
    },
    "required": [
      "niche_summary",
      "icp_summary",
      "willingness_signals",
      "disqualifiers",
      "recommendation"
    ],
    "additionalProperties": false
  },
  "prompt_template": "You are evaluating a solo-business opportunity.\nNiche: {{niche}}\nICP: {{icp}}\nPain points: {{pain_points}}\nConstraints: {{constraints}}\n\nReturn JSON matching the output schema with concise, specific language.",
  "policies": {
    "tools_allowed": false,
    "deny_guaranteed_earnings": true
  }
}
