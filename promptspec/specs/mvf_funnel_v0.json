{
  "id": "mvf_funnel_v0",
  "version": "0.1.0",
  "description": "Define a minimum viable funnel: lead magnet, nurture, CTA, and qualification steps.",
  "inputs_schema": {
    "type": "object",
    "properties": {
      "offer_name": {"type": "string"},
      "target_audience": {"type": "string"},
      "channels": {"type": "array", "items": {"type": "string"}},
      "constraints": {"type": "array", "items": {"type": "string"}}
    },
    "required": ["offer_name", "target_audience"],
    "additionalProperties": false
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "lead_magnet": {"type": "string"},
      "nurture_sequence": {"type": "array", "items": {"type": "string"}},
      "call_to_action": {"type": "string"},
      "qualification_criteria": {"type": "array", "items": {"type": "string"}}
    },
    "required": [
      "lead_magnet",
      "nurture_sequence",
      "call_to_action",
      "qualification_criteria"
    ],
    "additionalProperties": false
  },
  "prompt_template": "Build a minimum viable funnel for {{offer_name}}.\nAudience: {{target_audience}}\nChannels: {{channels}}\nConstraints: {{constraints}}\n\nReturn JSON matching the output schema with concrete, testable steps.",
  "policies": {
    "tools_allowed": false,
    "deny_guaranteed_earnings": true
  }
}
