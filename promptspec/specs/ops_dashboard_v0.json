{
  "id": "ops_dashboard_v0",
  "version": "0.1.0",
  "description": "Define an ops dashboard with KPIs, cadence, failure modes, and escalation rules.",
  "inputs_schema": {
    "type": "object",
    "properties": {
      "offer_name": {"type": "string"},
      "funnel_steps": {"type": "array", "items": {"type": "string"}},
      "constraints": {"type": "array", "items": {"type": "string"}}
    },
    "required": ["offer_name", "funnel_steps"],
    "additionalProperties": false
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "kpis": {"type": "array", "items": {"type": "string"}},
      "cadence": {"type": "string"},
      "failure_modes": {"type": "array", "items": {"type": "string"}},
      "escalation_rules": {"type": "array", "items": {"type": "string"}}
    },
    "required": ["kpis", "cadence", "failure_modes", "escalation_rules"],
    "additionalProperties": false
  },
  "prompt_template": "Create an ops dashboard plan for {{offer_name}}.\nFunnel steps: {{funnel_steps}}\nConstraints: {{constraints}}\n\nReturn JSON matching the output schema with concrete monitoring rules.",
  "policies": {
    "tools_allowed": false,
    "deny_guaranteed_earnings": true
  }
}
