{
  "name": "Executive Dashboard",
  "description": "High-level KPIs and metrics for executives",
  "category": "business",
  "pages": [
    {
      "id": "overview",
      "name": "Overview",
      "order": 0,
      "layout": {
        "type": "grid",
        "columns": 12,
        "rowHeight": 80
      },
      "widgets": [
        {
          "id": "revenue-metric",
          "type": "metric",
          "title": "Total Revenue",
          "config": {
            "value": "$2.5M",
            "label": "Total Revenue",
            "format": "currency",
            "trend": {
              "value": 12.5,
              "direction": "up",
              "label": "vs last month"
            },
            "icon": "üí∞",
            "color": "#10b981"
          },
          "layout": { "x": 0, "y": 0, "w": 3, "h": 2, "minW": 2, "minH": 2 }
        },
        {
          "id": "users-metric",
          "type": "metric",
          "title": "Active Users",
          "config": {
            "value": "48.2K",
            "label": "Active Users",
            "format": "number",
            "trend": {
              "value": 8.3,
              "direction": "up",
              "label": "vs last month"
            },
            "icon": "üë•",
            "color": "#3b82f6"
          },
          "layout": { "x": 3, "y": 0, "w": 3, "h": 2, "minW": 2, "minH": 2 }
        },
        {
          "id": "conversion-metric",
          "type": "metric",
          "title": "Conversion Rate",
          "config": {
            "value": "3.8%",
            "label": "Conversion Rate",
            "format": "percentage",
            "trend": {
              "value": -2.1,
              "direction": "down",
              "label": "vs last month"
            },
            "icon": "üéØ",
            "color": "#ef4444"
          },
          "layout": { "x": 6, "y": 0, "w": 3, "h": 2, "minW": 2, "minH": 2 }
        },
        {
          "id": "satisfaction-metric",
          "type": "metric",
          "title": "Customer Satisfaction",
          "config": {
            "value": "4.6",
            "label": "Customer Satisfaction",
            "format": "number",
            "trend": {
              "value": 0.3,
              "direction": "up",
              "label": "vs last month"
            },
            "icon": "‚≠ê",
            "color": "#f59e0b"
          },
          "layout": { "x": 9, "y": 0, "w": 3, "h": 2, "minW": 2, "minH": 2 }
        },
        {
          "id": "revenue-trend",
          "type": "chart",
          "title": "Revenue Trend",
          "config": {
            "chartType": "line",
            "xAxis": "month",
            "yAxis": "revenue",
            "colors": ["#10b981"],
            "animation": true,
            "legend": false,
            "tooltip": true
          },
          "layout": { "x": 0, "y": 2, "w": 8, "h": 4, "minW": 4, "minH": 3 },
          "dataSource": {
            "type": "graphql",
            "query": "query RevenueData { revenue { month value } }",
            "refreshInterval": 300000
          }
        },
        {
          "id": "category-breakdown",
          "type": "chart",
          "title": "Revenue by Category",
          "config": {
            "chartType": "pie",
            "groupBy": "category",
            "valueField": "revenue",
            "animation": true,
            "legend": true
          },
          "layout": { "x": 8, "y": 2, "w": 4, "h": 4, "minW": 3, "minH": 3 },
          "dataSource": {
            "type": "graphql",
            "query": "query CategoryRevenue { categories { name revenue } }",
            "refreshInterval": 300000
          }
        },
        {
          "id": "user-growth",
          "type": "chart",
          "title": "User Growth",
          "config": {
            "chartType": "area",
            "xAxis": "date",
            "yAxis": "users",
            "colors": ["#3b82f6", "#8b5cf6"],
            "animation": true,
            "stacked": false
          },
          "layout": { "x": 0, "y": 6, "w": 6, "h": 4, "minW": 4, "minH": 3 },
          "dataSource": {
            "type": "graphql",
            "query": "query UserGrowth { users { date newUsers returningUsers } }",
            "refreshInterval": 300000
          }
        },
        {
          "id": "top-products",
          "type": "table",
          "title": "Top Products",
          "config": {
            "columns": [
              { "id": "name", "label": "Product", "field": "name", "sortable": true },
              { "id": "sales", "label": "Sales", "field": "sales", "sortable": true, "format": "currency" },
              { "id": "growth", "label": "Growth", "field": "growth", "sortable": true, "format": "percentage" }
            ],
            "sortable": true,
            "filterable": false,
            "paginated": false
          },
          "layout": { "x": 6, "y": 6, "w": 6, "h": 4, "minW": 4, "minH": 3 },
          "dataSource": {
            "type": "graphql",
            "query": "query TopProducts { products(limit: 10, orderBy: sales) { name sales growth } }",
            "refreshInterval": 600000
          }
        }
      ]
    }
  ]
}
