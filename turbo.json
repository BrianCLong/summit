{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.local", "tsconfig.json"],
  "globalEnv": ["NODE_ENV", "CI"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "out/**", "storybook-static/**"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "junit.xml", ".vitest/**"],
      "env": ["NODE_ENV", "CI"],
      "cache": true
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:integration": {
      "dependsOn": ["^build", "db:migrate"],
      "outputs": ["test-results/**", "junit.xml"],
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "cache": false
    },
    "lint": {
      "outputs": [".eslintcache"],
      "env": ["NODE_ENV"],
      "cache": true
    },
    "lint:fix": {
      "outputs": [".eslintcache"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": ["**/.tsbuildinfo", "tsconfig.tsbuildinfo", "*.tsbuildinfo"],
      "cache": true
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "smoke": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
