{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"], "cache": true },
    "test":  { "dependsOn": ["build"], "inputs": ["src/**","test/**","jest.config.*"], "cache": true },
    "lint":  { "inputs": ["src/**",".eslintrc.*","package.json"], "cache": true }
  }
}