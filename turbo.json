{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "CI", "TZ"],
  "globalDependencies": [
    "turbo.json",
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml",
    "tsconfig.json",
    "tsconfig.base.json",
    "tsconfig.build.json",
    ".eslintrc.*",
    "jest.config.*"
  ],
  "pipeline": {
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": [
        "{apps,packages,services,client,server,libs,tools}/**/*.{js,jsx,ts,tsx}",
        "package.json",
        "tsconfig*.json",
        ".eslintrc.*"
      ]
    },
    "typecheck": {
      "outputs": [],
      "cache": true,
      "inputs": [
        "{apps,packages,services,client,server,libs,tools}/**/*.{ts,tsx,js,jsx}",
        "package.json",
        "tsconfig*.json"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "out/**"],
      "inputs": [
        "{apps,packages,services,client,server,libs,tools}/src/**",
        "{apps,packages,services,client,server,libs,tools}/public/**",
        "{apps,packages,services,client,server,libs,tools}/package.json",
        "{apps,packages,services,client,server,libs,tools}/tsconfig*.json",
        "package.json",
        "tsconfig*.json",
        "vite.config.*",
        "next.config.*",
        "codegen.yml"
      ],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**", "test-results/**", "junit.xml", "playwright-report/**"],
      "inputs": [
        "{apps,packages,services,client,server,libs,tools}/src/**",
        "{apps,packages,services,client,server,libs,tools}/{tests,__tests__}/**",
        "{apps,packages,services,client,server,libs,tools}/package.json",
        "{apps,packages,services,client,server,libs,tools}/jest.config.*",
        "package.json",
        "tsconfig*.json"
      ],
      "env": ["NODE_ENV", "CI"],
      "cache": true
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "junit.xml", "playwright-report/**"],
      "cache": false,
      "env": ["NODE_ENV", "CI"],
      "inputs": [
        "{apps,packages,services,client,server,libs,tools}/src/**",
        "{apps,packages,services,client,server,libs,tools}/tests/**",
        "{apps,packages,services,client,server,libs,tools}/package.json",
        "package.json"
      ]
    },
    "smoke": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
