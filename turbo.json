{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "out/**"],
      "inputs": [
        "src/**",
        "public/**",
        "package.json",
        "tsconfig.json",
        "tsconfig.base.json",
        "vite.config.ts",
        "vite.config.js",
        "index.html",
        "codegen.yml"
      ],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**",
        "tests/**",
        "__tests__/**",
        "package.json",
        "jest.config.*",
        "tsconfig.json"
      ],
      "env": ["NODE_ENV", "CI"]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "junit.xml", "playwright-report/**"],
      "cache": false,
      "env": ["NODE_ENV", "CI"]
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": [
        "src/**",
        "tests/**",
        "__tests__/**",
        ".eslintrc.*",
        "tsconfig.json",
        "package.json"
      ]
    },
    "typecheck": {
      "outputs": [],
      "cache": true,
      "inputs": [
        "src/**",
        "types/**",
        "package.json",
        "tsconfig.json",
        "tsconfig.base.json"
      ]
    },
    "smoke": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": ["NODE_ENV", "CI"],
  "globalDependencies": [
    "tsconfig.json",
    "tsconfig.base.json",
    ".eslintrc.*",
    "jest.config.*",
    "pnpm-lock.yaml"
  ]
}
