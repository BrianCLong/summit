{
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**", "build/**"] },
    "test": { "dependsOn": ["build"], "outputs": ["coverage/**"] },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["test-results/**", "junit.xml"]
    },
    "lint": { "outputs": [] },
    "typecheck": { "outputs": ["tsbuildinfo/**"] },
    "smoke": { "dependsOn": ["build"], "outputs": [], "cache": false }
  }
}
