# ===============================
# IntelGraph Production Environment Configuration
# ===============================

# ===============================
# Security & Authentication
# ===============================
JWT_SECRET=your-256-bit-secret-here-change-in-production
JWT_REFRESH_SECRET=your-different-256-bit-refresh-secret-here
SESSION_SECRET=your-session-secret-here-change-in-production
BCRYPT_ROUNDS=12

# ===============================
# Database Passwords
# ===============================
POSTGRES_PASSWORD=your-postgres-password-here
NEO4J_PASSWORD=your-neo4j-password-here
REDIS_PASSWORD=your-redis-password-here
ELASTICSEARCH_PASSWORD=your-elasticsearch-password-here

# ===============================
# Application Configuration
# ===============================
NODE_ENV=production
CORS_ORIGIN=https://app.intelgraph.com,https://admin.intelgraph.com
ALLOWED_ORIGINS=https://app.intelgraph.com,https://admin.intelgraph.com
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=60000

# GraphQL Configuration
GRAPHQL_DEPTH_LIMIT=10
GRAPHQL_COMPLEXITY_LIMIT=1000
GRAPHQL_PLAYGROUND_ENABLED=false
GRAPHQL_INTROSPECTION_ENABLED=false

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=image/*,application/pdf,application/json,text/csv

# ===============================
# External API Keys
# ===============================
# AI/ML Services
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
HUGGINGFACE_API_KEY=hf_your-huggingface-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# Vector Databases
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=intelgraph-vectors

# Cloud Services
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1

# Google Cloud (for additional services)
GOOGLE_APPLICATION_CREDENTIALS=/app/config/gcp-service-account.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Azure (for additional services)
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# ===============================
# Monitoring & Observability
# ===============================
# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=3.0.0-alpha

# New Relic APM
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=IntelGraph Production

# DataDog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# Grafana
GRAFANA_PASSWORD=your-grafana-admin-password

# Prometheus
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=50GB

# Jaeger Tracing
JAEGER_ENDPOINT=http://jaeger:14268
JAEGER_SERVICE_NAME=intelgraph-production

# ===============================
# SSL/TLS Configuration
# ===============================
# Let's Encrypt
ACME_EMAIL=admin@intelgraph.com
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# ===============================
# Domain Configuration
# ===============================
DOMAIN=intelgraph.com
API_DOMAIN=api.intelgraph.com
APP_DOMAIN=app.intelgraph.com
ADMIN_DOMAIN=admin.intelgraph.com
GRAFANA_DOMAIN=grafana.intelgraph.com
KIBANA_DOMAIN=kibana.intelgraph.com
JAEGER_DOMAIN=jaeger.intelgraph.com

# ===============================
# Backup Configuration
# ===============================
BACKUP_S3_BUCKET=intelgraph-production-backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here
BACKUP_RETENTION_DAYS=90
BACKUP_FREQUENCY_HOURS=6

# Database Backup Configuration
POSTGRES_BACKUP_ENABLED=true
NEO4J_BACKUP_ENABLED=true
REDIS_BACKUP_ENABLED=true
ELASTICSEARCH_BACKUP_ENABLED=true

# ===============================
# Cache Configuration
# ===============================
REDIS_CACHE_TTL=3600
REDIS_MAX_MEMORY=2gb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# Application Cache
APP_CACHE_ENABLED=true
APP_CACHE_TTL=300
APP_CACHE_MAX_SIZE=10000

# Query Cache
QUERY_CACHE_ENABLED=true
QUERY_CACHE_TTL=60
QUERY_CACHE_MAX_SIZE=1000

# ===============================
# Performance Configuration
# ===============================
# Node.js Optimization
UV_THREADPOOL_SIZE=128
NODE_OPTIONS="--max-old-space-size=4096 --max-semi-space-size=128"

# Database Connection Pooling
POSTGRES_POOL_SIZE=20
NEO4J_POOL_SIZE=50
REDIS_POOL_SIZE=10

# Request Timeouts
HTTP_TIMEOUT=30000
DB_TIMEOUT=10000
GRAPHQL_TIMEOUT=15000

# ===============================
# Logging Configuration
# ===============================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10
LOG_ROTATE=true

# Application Logging
SERVER_LOG_LEVEL=info
CLIENT_LOG_LEVEL=warn
ML_LOG_LEVEL=info
GATEWAY_LOG_LEVEL=info

# Database Logging
POSTGRES_LOG_STATEMENT=none
NEO4J_LOG_LEVEL=INFO
REDIS_LOG_LEVEL=notice

# ===============================
# Feature Flags
# ===============================
# Core Features
MULTI_TENANT_ENABLED=true
REAL_TIME_COLLABORATION_ENABLED=true
AI_ANALYSIS_ENABLED=true
GRAPH_ANALYTICS_ENABLED=true

# Advanced Features
MACHINE_LEARNING_ENABLED=true
NATURAL_LANGUAGE_PROCESSING_ENABLED=true
IMAGE_ANALYSIS_ENABLED=true
GEOSPATIAL_ANALYSIS_ENABLED=true

# Experimental Features
QUANTUM_COMPUTING_ENABLED=false
BLOCKCHAIN_INTEGRATION_ENABLED=false
AR_VR_ENABLED=true
VOICE_INTERFACE_ENABLED=false

# Security Features
TWO_FACTOR_AUTH_ENABLED=true
BIOMETRIC_AUTH_ENABLED=false
ZERO_TRUST_ENABLED=true
ENCRYPTION_AT_REST_ENABLED=true

# ===============================
# Scaling Configuration
# ===============================
# Horizontal Scaling
MAX_REPLICAS=10
MIN_REPLICAS=3
SCALE_TARGET_CPU=70
SCALE_TARGET_MEMORY=80

# Vertical Scaling
MAX_MEMORY_PER_CONTAINER=8GB
MAX_CPU_PER_CONTAINER=4
MIN_MEMORY_PER_CONTAINER=1GB
MIN_CPU_PER_CONTAINER=0.5

# Load Balancing
LOAD_BALANCER_ALGORITHM=least_connections
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ===============================
# Data Retention Configuration
# ===============================
# Analytics Data
ANALYTICS_RETENTION_DAYS=365
METRICS_RETENTION_DAYS=90
LOGS_RETENTION_DAYS=30

# User Data
USER_SESSION_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance
INVESTIGATION_DATA_RETENTION_DAYS=1825  # 5 years

# Cache Expiration
QUERY_CACHE_EXPIRATION_HOURS=1
SESSION_CACHE_EXPIRATION_HOURS=24
ML_MODEL_CACHE_EXPIRATION_DAYS=7

# ===============================
# Compliance Configuration
# ===============================
# GDPR Compliance
GDPR_ENABLED=true
DATA_SUBJECT_RIGHTS_ENABLED=true
CONSENT_MANAGEMENT_ENABLED=true
DATA_PORTABILITY_ENABLED=true

# SOC 2 Compliance
SOC2_LOGGING_ENABLED=true
ACCESS_CONTROL_LOGGING_ENABLED=true
CHANGE_MANAGEMENT_LOGGING_ENABLED=true
INCIDENT_RESPONSE_ENABLED=true

# HIPAA Compliance (if handling health data)
HIPAA_ENABLED=false
PHI_ENCRYPTION_ENABLED=false
AUDIT_TRAILS_ENABLED=true

# ===============================
# Disaster Recovery Configuration
# ===============================
# Backup Strategy
BACKUP_STRATEGY=3-2-1  # 3 copies, 2 different media, 1 offsite
RTO_MINUTES=30  # Recovery Time Objective
RPO_MINUTES=15  # Recovery Point Objective

# Failover Configuration
AUTO_FAILOVER_ENABLED=true
FAILOVER_THRESHOLD_MINUTES=5
CROSS_REGION_REPLICATION_ENABLED=false

# ===============================
# Development/Testing Overrides
# ===============================
# (Only use in non-production environments)
DEBUG_MODE=false
PROFILING_ENABLED=false
MOCK_EXTERNAL_APIS=false
SEED_TEST_DATA=false