# Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Airflow Web UI Credentials
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=admin

# Additional Python packages (optional)
_PIP_ADDITIONAL_REQUIREMENTS=apache-airflow-providers-postgres apache-airflow-providers-redis

# Database Configuration
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# External Database URL (if not using docker-compose postgres)
# AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://user:password@host:5432/airflow

# External Redis URL (if not using docker-compose redis)
# AIRFLOW__CELERY__BROKER_URL=redis://:password@host:6379/0

# Airflow Configuration
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth

# Security
AIRFLOW__WEBSERVER__SECRET_KEY=changeme-in-production
AIRFLOW__CORE__FERNET_KEY=

# Email Configuration (optional)
# AIRFLOW__SMTP__SMTP_HOST=smtp.gmail.com
# AIRFLOW__SMTP__SMTP_PORT=587
# AIRFLOW__SMTP__SMTP_USER=your-email@gmail.com
# AIRFLOW__SMTP__SMTP_PASSWORD=your-app-password
# AIRFLOW__SMTP__SMTP_MAIL_FROM=airflow@example.com
