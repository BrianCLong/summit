{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:summit:PolicyDecision:v0.1",
  "title": "PolicyDecision v0.1",
  "type": "object",
  "required": ["schemaVersion", "decisionId", "ts", "policy", "result", "reasons", "obligations", "receiptRef"],
  "properties": {
    "schemaVersion": { "const": "urn:summit:PolicyDecision:v0.1" },
    "decisionId": { "type": "string" },
    "ts": { "type": "string", "format": "date-time" },
    "policy": {
      "type": "object",
      "required": ["id", "version"],
      "properties": {
        "id": { "type": "string" },
        "version": { "type": "string" }
      }
    },
    "result": { "type": "string", "enum": ["allow", "deny", "allow_with_obligations"] },
    "reasons": { "type": "array", "items": { "type": "string" } },
    "obligations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "type": "string" },
          "params": { "type": "object" }
        }
      }
    },
    "receiptRef": { "type": "string" }
  }
}
