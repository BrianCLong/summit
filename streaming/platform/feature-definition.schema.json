{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.local/streaming/feature-definition.schema.json",
  "title": "Feature Definition",
  "type": "object",
  "required": ["featureId", "entity", "version", "owner", "sources", "lineage", "materialization"],
  "properties": {
    "featureId": { "type": "string", "pattern": "^[a-z0-9_]+$" },
    "entity": { "type": "string", "pattern": "^[a-z0-9_]+$" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "owner": { "type": "string" },
    "description": { "type": "string" },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["event", "attributes"],
        "properties": {
          "event": { "type": "string" },
          "attributes": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "transforms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["tumbling", "sliding", "scalar", "aggregation"] },
          "window": { "type": "string" },
          "aggregation": { "type": "string" },
          "params": { "type": "object" }
        },
        "additionalProperties": false
      }
    },
    "lineage": {
      "type": "object",
      "required": ["parents", "quality"],
      "properties": {
        "parents": {
          "type": "array",
          "items": { "type": "string" }
        },
        "quality": { "type": "string", "enum": ["bronze", "silver", "gold", "platinum"] }
      },
      "additionalProperties": false
    },
    "materialization": {
      "type": "object",
      "required": ["freshness", "retention", "storageClass"],
      "properties": {
        "freshness": { "type": "string" },
        "retention": { "type": "string" },
        "storageClass": { "type": "string", "enum": ["memory", "disk", "hybrid"] }
      },
      "additionalProperties": false
    },
    "observability": {
      "type": "object",
      "properties": {
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "name": { "type": "string" },
              "type": { "type": "string", "enum": ["counter", "gauge", "histogram"] },
              "description": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "alerts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "condition"],
            "properties": {
              "name": { "type": "string" },
              "condition": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
