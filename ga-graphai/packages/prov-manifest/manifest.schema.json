{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Provenance Export Manifest",
  "type": "object",
  "required": ["manifestVersion", "bundleId", "generatedAt", "assets"],
  "properties": {
    "manifestVersion": { "type": "string" },
    "bundleId": { "type": "string" },
    "generatedAt": { "type": "string", "format": "date-time" },
    "rootDocument": { "type": "string" },
    "assets": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "path", "sha256"],
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" },
          "mediaType": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "transforms": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "input", "output", "sha256"],
              "properties": {
                "type": { "type": "string" },
                "input": { "type": "string" },
                "output": { "type": "string" },
                "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
              }
            }
          },
          "evidence": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "path", "sha256"],
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" },
          "label": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        }
      }
    }
  },
  "additionalProperties": false
}
