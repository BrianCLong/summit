{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist/browser",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "types": [],
    "lib": ["DOM", "ES2020"],
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/browser.ts",
    "src/common/**/*",
    "src/types.ts"
  ],
  "exclude": [
    "src/node/**/*",
    "src/cli/**/*"
  ]
}
