{
  "title": "Universal AI Fabric â€“ Staging",
  "tags": ["ai-fabric", "intelgraph"],
  "panels": [
    {
      "title": "Latency by Operation/Model",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(ai_call_latency_ms_bucket[5m])) by (le, operation, model))",
          "legendFormat": "{{operation}} p95 ({{model}})"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(ai_call_latency_ms_bucket[5m])) by (le, operation, model))",
          "legendFormat": "{{operation}} p99 ({{model}})"
        }
      ]
    },
    {
      "title": "Token Throughput",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(ai_tokens_total[5m])) by (operation, direction)",
          "legendFormat": "{{operation}} {{direction}}"
        }
      ]
    },
    {
      "title": "Policy Denies",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(increase(ai_policy_denies_total[5m]))",
          "legendFormat": "denies"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "operation",
        "query": "label_values(ai_call_latency_ms_bucket, operation)",
        "type": "query"
      }
    ]
  }
}
