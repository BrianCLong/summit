# i18n Service - Environment Configuration

# Service Port
PORT=3100

# Translation Provider
# Options: mock, google, deepl, local
TRANSLATION_PROVIDER=mock

# Google Cloud Translation API
# Get your API key from: https://console.cloud.google.com/
GOOGLE_TRANSLATE_API_KEY=

# DeepL API Key (if using DeepL)
DEEPL_API_KEY=

# Language Detection
DEFAULT_LANGUAGE=en
MIN_DETECTION_CONFIDENCE=0.6
MIN_TEXT_LENGTH=10

# Translation Configuration
MAX_TEXT_LENGTH=10000
ENABLE_CACHE=true
CACHE_TTL=3600

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9100

# Development
NODE_ENV=development
DEBUG=false
