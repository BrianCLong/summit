{
  "name": "@intelgraph/i18n-service",
  "version": "1.0.0",
  "description": "Backend i18n service for language detection and policy-aware translation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "franc": "^6.2.0",
    "iso-639-1": "^3.1.3",
    "@google-cloud/translate": "^8.5.0",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "zod": "^3.23.8",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3",
    "@vitest/coverage-v8": "^4.0.3"
  },
  "keywords": [
    "i18n",
    "translation",
    "language-detection",
    "multilingual"
  ],
  "author": "IntelGraph Team",
  "license": "PROPRIETARY"
}
