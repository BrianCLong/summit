{
  "dashboard": {
    "title": "WebSocket Server Monitoring",
    "tags": ["websocket", "realtime", "summit"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "title": "Active Connections",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum(websocket_active_connections) by (tenant, status)",
            "legendFormat": "{{tenant}} - {{status}}"
          }
        ]
      },
      {
        "title": "Connection Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "rate(websocket_connections_total[5m])",
            "legendFormat": "Connections/sec - {{tenant}}"
          }
        ]
      },
      {
        "title": "Message Throughput",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "sum(rate(websocket_messages_received_total[5m])) by (tenant)",
            "legendFormat": "Received - {{tenant}}"
          },
          {
            "expr": "sum(rate(websocket_messages_sent_total[5m])) by (tenant)",
            "legendFormat": "Sent - {{tenant}}"
          }
        ]
      },
      {
        "title": "Message Latency (p95)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(websocket_message_latency_ms_bucket[5m]))",
            "legendFormat": "p95 - {{event}}"
          }
        ]
      },
      {
        "title": "Active Rooms",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "sum(websocket_active_rooms)"
          }
        ]
      },
      {
        "title": "Total Subscriptions",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 16 },
        "targets": [
          {
            "expr": "sum(websocket_room_subscriptions)"
          }
        ]
      },
      {
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "sum(rate(websocket_errors_total[5m])) by (type)",
            "legendFormat": "{{type}}"
          }
        ]
      },
      {
        "title": "Redis Latency",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(websocket_redis_latency_ms_bucket[5m]))",
            "legendFormat": "p95 - {{operation}}"
          }
        ]
      },
      {
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "process_resident_memory_bytes",
            "legendFormat": "RSS Memory"
          }
        ]
      },
      {
        "title": "Event Loop Lag",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
        "targets": [
          {
            "expr": "websocket_event_loop_lag_ms",
            "legendFormat": "Event Loop Lag (ms)"
          }
        ]
      },
      {
        "title": "Rate Limit Hits",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
        "targets": [
          {
            "expr": "rate(websocket_rate_limit_hits_total[5m])",
            "legendFormat": "{{type}} - {{tenant}}"
          }
        ]
      }
    ]
  }
}
