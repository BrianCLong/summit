# Privacy Analytics Service Configuration
# Copy this file to .env and configure for your environment

# Service Configuration
NODE_ENV=development
PORT=3020
LOG_LEVEL=info

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=intelgraph
POSTGRES_USER=intelgraph
POSTGRES_PASSWORD=

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Governance/Policy Service Integration
GOVERNANCE_SERVICE_URL=http://localhost:3015
OPA_ENDPOINT=http://localhost:8181

# Privacy Defaults
DEFAULT_MIN_COHORT_SIZE=5
DEFAULT_EPSILON=1.0
DEFAULT_MAX_QUERIES_PER_HOUR=100
ENABLE_DIFFERENTIAL_PRIVACY=true
ENABLE_K_ANONYMITY=true

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:4000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Observability
OTEL_SERVICE_NAME=privacy-analytics-service
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
ENABLE_METRICS=true
ENABLE_TRACING=false
