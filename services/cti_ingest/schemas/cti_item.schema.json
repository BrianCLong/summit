{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "source_url": {
      "type": "string",
      "format": "uri"
    },
    "retrieved_at": {
      "type": "string"
    },
    "content_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "extract_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "title": {
      "type": "string"
    },
    "claims": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "citation_offsets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start": { "type": "integer" },
          "end": { "type": "integer" },
          "quote_hash": { "type": "string" }
        },
        "required": ["start", "end"]
      }
    }
  },
  "required": ["source_url", "content_hash", "title", "claims"]
}
