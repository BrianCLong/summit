# GraphRAG Service Configuration
# Copy to .env and fill in your values

# ============================================================================
# Neo4j Configuration
# ============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-password-here

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# Retrieval Settings
# ============================================================================
# Maximum number of hops in graph traversal
MAX_HOPS=3

# Maximum number of nodes to include in subgraph
MAX_NODES=1000

# Maximum number of documents to retrieve
MAX_DOCUMENTS=20

# Minimum relevance score for results (0-1)
MIN_RELEVANCE=0.3

# Embedding dimensions (match your model)
EMBEDDING_DIMENSIONS=1536

# ============================================================================
# Generation Settings
# ============================================================================
# Maximum tokens in LLM response
MAX_TOKENS=1000

# LLM temperature (0-2)
TEMPERATURE=0.7

# LLM top-p (0-1)
TOP_P=0.9

# ============================================================================
# Policy Settings
# ============================================================================
# Enable policy enforcement
POLICY_ENABLED=true

# OPA endpoint (optional)
# OPA_ENDPOINT=http://localhost:8181

# ============================================================================
# Telemetry Settings
# ============================================================================
# Enable OpenTelemetry
TELEMETRY_ENABLED=true

# OTLP endpoint (optional)
# OTLP_ENDPOINT=http://localhost:4318

# ============================================================================
# Server Settings
# ============================================================================
PORT=8002
