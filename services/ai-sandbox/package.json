{
  "name": "@summit/ai-sandbox",
  "version": "1.0.0",
  "description": "Secure AI experimentation sandbox for government AI system testing and validation",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --forceExit",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern='(sandbox|policy|types)' --forceExit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern='integration' --forceExit",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --forceExit",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "fastify": "^5.0.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^12.0.0",
    "bullmq": "^5.12.0",
    "ioredis": "^5.4.1",
    "pino": "^9.4.0",
    "prom-client": "^15.1.3",
    "zod": "^3.23.8",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@types/jest": "^29.5.12"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
