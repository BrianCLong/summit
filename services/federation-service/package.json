{
  "name": "@intelgraph/federation-service",
  "version": "1.0.0",
  "description": "Cross-organization intelligence exchange and federation service with policy-bound sharing",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@intelgraph/policy-engine": "workspace:*",
    "@intelgraph/kafka-integration": "workspace:*",
    "@intelgraph/prov-ledger-client": "workspace:*",
    "express": "^4.21.2",
    "express-validator": "^7.0.1",
    "ioredis": "^5.3.2",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1",
    "@opentelemetry/api": "1.7.0",
    "zod": "^3.22.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^24.10.1",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.9.3",
    "tsx": "^4.19.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0"
  }
}
