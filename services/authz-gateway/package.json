    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.0.0",
    "istanbul-lib-coverage": "^3.2.2",
    "jest-util": "^29.7.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.40.0"
