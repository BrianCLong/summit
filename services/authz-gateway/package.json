{
  "name": "authz-gateway",
  "version": "4.2.3",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "jest --coverage",
    "test:fuzz": "jest --runTestsByPath tests/fuzz/governance-gate.fuzz.test.ts --coverage",
    "phase1:gate": "ts-node src/security/phase1-cli.ts",
    "phase1:build-artifacts": "npm run build && node dist/security/phase1-cli.js"
  },
  "dependencies": {
    "@opentelemetry/api": "latest",
    "@opentelemetry/auto-instrumentations-node": "latest",
    "@opentelemetry/core": "latest",
    "@opentelemetry/exporter-jaeger": "latest",
    "@opentelemetry/exporter-trace-otlp-http": "latest",
    "@opentelemetry/exporter-zipkin": "latest",
    "@opentelemetry/propagator-b3": "latest",
    "@opentelemetry/propagator-jaeger": "latest",
    "@opentelemetry/resources": "latest",
    "@opentelemetry/sdk-node": "latest",
    "@opentelemetry/sdk-trace-base": "latest",
    "@opentelemetry/semantic-conventions": "latest",
    "axios": "^1.6.7",
    "express": "^5.2.0",
    "http-proxy-middleware": "^3.0.5",
    "jose": "^6.1.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/express": "^5.0.3",
    "@types/http-proxy-middleware": "^1.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.27",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "fast-check": "^3.18.0",
    "istanbul-lib-coverage": "^3.2.2",
    "jest": "^30.2.0",
    "jest-util": "^30.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  }
}
