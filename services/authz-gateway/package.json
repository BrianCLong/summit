  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/http-proxy-middleware": "^1.0.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^18.18.0",
    "@types/supertest": "^2.0.12",
