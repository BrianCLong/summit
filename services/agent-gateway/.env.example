# Agent Gateway Environment Configuration

# Server
PORT=3001
NODE_ENV=production

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=summit
DB_USER=summit
DB_PASSWORD=

# OPA (Policy Engine)
OPA_ENDPOINT=http://localhost:8181
OPA_DRY_RUN=false

# Operation Modes
# Force all agents to run in SIMULATION mode (recommended for initial deployment)
FORCE_SIMULATION=false

# Default operation mode for agents (SIMULATION, DRY_RUN, ENFORCED)
DEFAULT_OPERATION_MODE=SIMULATION

# Allow agents to override operation mode in requests
ALLOW_MODE_OVERRIDE=true

# Rate Limiting
GLOBAL_RATE_LIMIT_HOUR=10000
GLOBAL_RATE_LIMIT_DAY=100000

# Approval Workflow
# Risk level below which actions are auto-approved (low, medium, high, critical)
AUTO_APPROVE_BELOW=low

# Risk level above which approval is required
REQUIRE_APPROVAL_ABOVE=medium

# Default approval expiry in minutes
APPROVAL_EXPIRY_MINUTES=60

# Comma-separated list of user IDs who can approve
APPROVAL_ASSIGNEES=admin-user-1,admin-user-2

# Observability
ENABLE_DETAILED_LOGGING=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# Safety Features
ENABLE_SAFETY_CHECKS=true
ENABLE_CROSS_TENANT_BLOCKING=true
ENABLE_QUOTA_ENFORCEMENT=true

# Integration Endpoints
PROVENANCE_LEDGER_URL=http://localhost:3002
ORCHESTRATOR_URL=http://localhost:3003
CLI_PATH=/usr/local/bin/maestro

# OpenTelemetry
OTEL_SERVICE_NAME=agent-gateway
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SAMPLE_RATE=0.1

# Jaeger (for tracing)
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Prometheus (for metrics)
PROMETHEUS_PORT=9090
