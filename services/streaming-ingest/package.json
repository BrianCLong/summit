{
  "name": "@intelgraph/streaming-ingest",
  "version": "1.0.0",
  "description": "Event sourcing streaming ingest with schema validation, append-only event store, and provenance tracking",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "replay": "tsx src/cli/replay.ts",
    "verify": "tsx src/cli/verifier.ts"
  },
  "dependencies": {
    "@intelgraph/kafka-integration": "workspace:*",
    "@intelgraph/prov-ledger": "workspace:*",
    "fastify": "^5.6.1",
    "@fastify/cors": "^11.1.0",
    "kafkajs": "^2.2.4",
    "pg": "^8.16.3",
    "zod": "^3.22.4",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "ioredis": "^5.3.2",
    "crypto": "^1.0.1",
    "commander": "^12.0.0",
    "crypto-js": "^4.2.0",
    "@opentelemetry/api": "1.7.0",
    "@opentelemetry/sdk-trace-base": "1.19.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "typescript": "^5.9.3",
    "tsx": "^4.19.2",
    "jest": "^30.2.0",
    "@types/jest": "^30.0.0",
    "ts-jest": "^29.1.0",
    "eslint": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  }
}
