# --- Core data services ---
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=local_dev_pw
POSTGRES_URL=postgres://postgres:postgres @localhost:5432/postgres
REDIS_URL=redis://localhost:6379

# --- Conductor ---
CONDUCTOR_ENABLED=true
CONDUCTOR_TIMEOUT_MS=30000
CONDUCTOR_MAX_CONCURRENT=10
CONDUCTOR_AUDIT_ENABLED=true

# --- LLM providers (keys set only in your private .env) ---
LLM_LIGHT_ENDPOINT=https://api.openai.com/v1
LLM_LIGHT_API_KEY=
LLM_HEAVY_ENDPOINT=https://api.openai.com/v1
LLM_HEAVY_API_KEY=

# --- MCP servers ---
MCP_GRAPHOPS_PORT=7411
MCP_FILES_PORT=7412

# --- App ports ---
INTELGRAPH_SERVER_PORT=4000
UI_PORT=5173