{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MaestroWorkflow",
  "type": "object",
  "required": ["apiVersion", "kind", "metadata", "spec"],
  "properties": {
    "apiVersion": {"const": "maestro/v1"},
    "kind": {"const": "Workflow"},
    "metadata": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {"type": "string", "pattern": "^[a-z0-9-]+$"},
        "version": {"type": "string"},
        "owner": {"type": "string"},
        "description": {"type": "string"},
        "labels": {"type": "array", "items": {"type": "string"}}
      }
    },
    "attestations": {
      "type": "object",
      "properties": {
        "signature": {
          "type": "object",
          "required": ["algorithm", "keyRef", "signature"],
          "properties": {
            "algorithm": {"type": "string"},
            "keyRef": {"type": "string"},
            "signature": {"type": "string"}
          }
        }
      }
    },
    "spec": {
      "type": "object",
      "required": ["tasks"],
      "properties": {
        "parameters": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "name": {"type": "string"},
              "type": {"type": "string", "enum": ["string", "number", "boolean", "datetime", "object"]},
              "required": {"type": "boolean"},
              "default": {}
            }
          }
        },
        "policy": {
          "type": "object",
          "required": ["purpose", "authority", "license"],
          "properties": {
            "purpose": {"type": "string"},
            "authority": {"type": "string"},
            "license": {"type": "string"}
          }
        },
        "tasks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["id", "uses"],
            "properties": {
              "id": {"type": "string", "pattern": "^[a-z0-9-]+$"},
              "uses": {"type": "string"},
              "needs": {"type": "array", "items": {"type": "string"}},
              "with": {"type": "object"}
            }
          }
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "from"],
            "properties": {
              "name": {"type": "string"},
              "from": {"type": "string"}
            }
          }
        },
        "observability": {
          "type": "object",
          "properties": {
            "correlation": {"type": "object"}
          }
        }
      }
    }
  }
}
