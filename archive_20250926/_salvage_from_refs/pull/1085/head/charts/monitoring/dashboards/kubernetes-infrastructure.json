{
  "dashboard": {
    "id": null,
    "title": "Kubernetes Infrastructure",
    "tags": ["kubernetes", "infrastructure", "cluster"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "node",
          "type": "query",
          "query": "label_values(kube_node_info, node)",
          "refresh": "time",
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_namespace_status_phase, namespace)",
          "refresh": "time",
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Cluster Overview",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(kube_node_info)",
            "legendFormat": "Nodes",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short"
          }
        }
      },
      {
        "id": 2,
        "title": "Running Pods",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Running\"})",
            "legendFormat": "Running Pods",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Failed Pods",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Failed\"})",
            "legendFormat": "Failed Pods",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Pending Pods",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(kube_pod_status_phase{phase=\"Pending\"})",
            "legendFormat": "Pending Pods",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Node CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "(1 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\",instance=~\"$node\"}[5m]))) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "CPU %",
            "max": 100,
            "min": 0
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [80],
                "type": "gt"
              },
              "query": {
                "model": {
                  "expr": "(1 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m]))) * 100",
                  "refId": "A"
                },
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "High Node CPU Usage"
        }
      },
      {
        "id": 6,
        "title": "Node Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes{instance=~\"$node\"} / node_memory_MemTotal_bytes{instance=~\"$node\"})) * 100",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Memory %",
            "max": 100,
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "Pod CPU Usage by Namespace",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "sum by (namespace) (rate(container_cpu_usage_seconds_total{namespace=~\"$namespace\",container!=\"POD\",container!=\"\"}[5m]))",
            "legendFormat": "{{namespace}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Pod Memory Usage by Namespace",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "sum by (namespace) (container_memory_working_set_bytes{namespace=~\"$namespace\",container!=\"POD\",container!=\"\"}) / 1024 / 1024 / 1024",
            "legendFormat": "{{namespace}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (GB)"
          }
        ]
      },
      {
        "id": 9,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{instance=~\"$node\",device!=\"lo\"}[5m]) * 8",
            "legendFormat": "{{instance}} - {{device}} in",
            "refId": "A"
          },
          {
            "expr": "-rate(node_network_transmit_bytes_total{instance=~\"$node\",device!=\"lo\"}[5m]) * 8",
            "legendFormat": "{{instance}} - {{device}} out",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "bits/sec"
          }
        ]
      },
      {
        "id": 10,
        "title": "Disk I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 22},
        "targets": [
          {
            "expr": "rate(node_disk_read_bytes_total{instance=~\"$node\"}[5m])",
            "legendFormat": "{{instance}} - {{device}} read",
            "refId": "A"
          },
          {
            "expr": "-rate(node_disk_written_bytes_total{instance=~\"$node\"}[5m])",
            "legendFormat": "{{instance}} - {{device}} write",
            "refId": "B"
          }
        ]
      },
      {
        "id": 11,
        "title": "Disk Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 22},
        "targets": [
          {
            "expr": "(1 - (node_filesystem_avail_bytes{instance=~\"$node\",fstype!=\"tmpfs\"} / node_filesystem_size_bytes{instance=~\"$node\",fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "{{instance}} - {{mountpoint}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Disk Usage %",
            "max": 100,
            "min": 0
          }
        ]
      },
      {
        "id": 12,
        "title": "Top Pods by CPU",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "topk(10, sum by (pod, namespace) (rate(container_cpu_usage_seconds_total{container!=\"POD\",container!=\"\"}[5m])))",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "pod": "Pod",
                "namespace": "Namespace",
                "Value": "CPU Usage"
              }
            }
          }
        ]
      },
      {
        "id": 13,
        "title": "Top Pods by Memory",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "targets": [
          {
            "expr": "topk(10, sum by (pod, namespace) (container_memory_working_set_bytes{container!=\"POD\",container!=\"\"}) / 1024 / 1024)",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "pod": "Pod",
                "namespace": "Namespace",
                "Value": "Memory Usage (MB)"
              }
            }
          }
        ]
      },
      {
        "id": 14,
        "title": "Ingress Controller Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 38},
        "targets": [
          {
            "expr": "rate(nginx_ingress_controller_requests[5m])",
            "legendFormat": "{{ingress}} - {{status}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}