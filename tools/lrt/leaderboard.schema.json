{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Leakage Red-Team Tournament Leaderboard",
  "type": "object",
  "properties": {
    "runs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "run_id",
          "timestamp",
          "seed",
          "agents",
          "metrics"
        ],
        "properties": {
          "run_id": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "seed": { "type": "integer" },
          "agents": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "seed"],
              "properties": {
                "name": { "type": "string" },
                "seed": { "type": "integer" }
              }
            }
          },
          "defenses": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          },
          "metrics": {
            "type": "object",
            "required": ["precision", "recall", "time_to_first_leak"],
            "properties": {
              "precision": { "type": "number", "minimum": 0, "maximum": 1 },
              "recall": { "type": "number", "minimum": 0, "maximum": 1 },
              "time_to_first_leak": {
                "type": ["number", "null"],
                "description": "Deterministic logical timestamp of first leak."
              }
            }
          }
        }
      }
    }
  },
  "required": ["runs"]
}
