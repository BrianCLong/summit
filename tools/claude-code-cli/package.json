{
  "name": "@intelgraph/claude-code-cli",
  "version": "4.2.3",
  "description": "Deterministic, CI-friendly CLI for Claude Code agent operations",
  "type": "module",
  "bin": {
    "claude-code": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint \"src/**/*.ts\"",
    "test": "jest",
    "test:golden": "jest --testPathPattern=golden",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "glob": "^10.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "cli",
    "claude",
    "ai",
    "agent",
    "deterministic"
  ],
  "author": "IntelGraph Team",
  "license": "MIT"
}
