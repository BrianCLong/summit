{
  "name": "issue-sweeper",
  "version": "1.0.0",
  "private": true,
  "description": "A tool to sweep and process issues in a GitHub repository.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "build": "tsc -p tsconfig.json",
    "build:test": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "test": "pnpm run build:test && node --test dist/index.test.js"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "undici": "^6.19.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/sinon": "^21.0.0",
    "@types/yargs": "^17.0.32",
    "sinon": "^21.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "type": "module"
}
