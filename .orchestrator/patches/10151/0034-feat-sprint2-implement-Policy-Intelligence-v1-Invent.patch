+    tokensIn: res.tokensIn,
+    tokensOut: res.tokensOut,
+    costUsd: res.costUsd,
+    latencyMs: res.latencyMs,
+    authorityId: ctx.authorityId,
+    reasonForAccess: ctx.reasonForAccess,
+    routeReason: decision.reason,
+  });
