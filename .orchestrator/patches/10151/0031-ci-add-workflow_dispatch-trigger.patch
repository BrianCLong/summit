+	  > .out/helm/intelgraph.yaml
+	@rg -n "kind: Service|/health|prometheus.io/scrape|port: 4000" .out/helm/intelgraph.yaml
+	@if [ -d "$(SCHEMAS_DIR)" ]; then \
