+  added_rules: string[];
+  removed_rules: string[];
+  modified_rules: string[];
+}
+
+interface ImpactAnalysis {
+  affected_users: number;
+  affected_resources: number;
+  permission_changes: {
+    granted: number;
+    revoked: number;
+  };
