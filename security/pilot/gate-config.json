{
  "workflowGate": {
    "workflowGlobs": [
      ".github/workflows/pilot-security-gates.yml"
    ],
    "enforcePinnedActions": true,
    "enforceMinimumPermissions": {
      "contents": "read",
      "id-token": "write",
      "packages": "read"
    }
  },
  "imageGate": {
    "stageImages": [
      {
        "name": "ghcr.io/summit/pilot@sha256:9d13b3c4a2b1d4f996bb77dd2f1373b8e6e0dffcb31d4660b9e6f29a3f2a1e5e",
        "digest": "sha256:9d13b3c4a2b1d4f996bb77dd2f1373b8e6e0dffcb31d4660b9e6f29a3f2a1e5e",
        "signaturePath": "security/pilot/signatures/pilot.sig",
        "provenancePath": "security/pilot/provenance/pilot.intoto.jsonl"
      }
    ]
  },
  "secretScan": {
    "paths": [
      "security/pilot",
      "tools/security-gates"
    ],
    "excludedGlobs": [
      "**/node_modules/**"
    ]
  },
  "policyGate": {
    "inputPath": "security/pilot/policies/input.json",
    "denyWildcardIam": true,
    "allowPublicEndpoints": false
  }
}
