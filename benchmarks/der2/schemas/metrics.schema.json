{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DeR2 Metrics",
  "type": "object",
  "required": ["bench_id", "model", "deterministic", "accuracy", "regime_gap"],
  "properties": {
    "bench_id": { "type": "string" },
    "model": { "type": "string" },
    "deterministic": { "type": "boolean" },
    "accuracy": {
      "type": "object",
      "properties": {
        "instruction_only": { "type": "number" },
        "concepts": { "type": "number" },
        "related_only": { "type": "number" },
        "full_set": { "type": "number" }
      },
      "additionalProperties": false
    },
    "regime_gap": {
      "type": "object",
      "required": [
        "full_set_minus_instruction_only",
        "concepts_minus_instruction_only",
        "related_only_minus_instruction_only"
      ],
      "properties": {
        "full_set_minus_instruction_only": { "type": "number" },
        "concepts_minus_instruction_only": { "type": "number" },
        "related_only_minus_instruction_only": { "type": "number" }
      }
    }
  }
}
