{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["evidence"],
  "properties": {
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["evidence_id", "files"],
        "properties": {
          "evidence_id": { "type": "string" },
          "files": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
