{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://summit.local/adk/spec/agent_manifest.schema.json",
  "title": "Summit Agent Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "name"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "s-adk/v1"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "tools": {
      "type": "array",
      "items": {
        "$ref": "./tool.schema.json"
      },
      "default": []
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          }
        }
      },
      "default": []
    },
    "knowledge_base": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "uri", "type"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "uri": {
                "type": "string",
                "minLength": 1
              },
              "type": {
                "type": "string",
                "minLength": 1
              }
            }
          },
          "default": []
        }
      }
    },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "allow_tools": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "allow_network": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}
