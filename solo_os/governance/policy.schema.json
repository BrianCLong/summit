{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Solo OS Governance Policy",
  "type": "object",
  "properties": {
    "allow_outbound": { "type": "boolean", "default": false },
    "allowed_connectors": {
      "type": "array",
      "items": { "type": "string" }
    },
    "allowed_actions": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["allow_outbound", "allowed_connectors", "allowed_actions"],
  "additionalProperties": false
}
