{
  "name": "IntelGraphMobile",
  "displayName": "IntelGraph Mobile",
  "expo": {
    "name": "IntelGraph Mobile",
    "slug": "intelgraph-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0b"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "io.intelgraph.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "IntelGraph uses your location to display GEOINT data on the map.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "IntelGraph uses your location in the background to track GEOINT events.",
        "NSCameraUsageDescription": "IntelGraph uses the camera to capture evidence photos.",
        "NSPhotoLibraryUsageDescription": "IntelGraph accesses photos to attach evidence to investigations.",
        "NSFaceIDUsageDescription": "IntelGraph uses Face ID for secure authentication.",
        "UIBackgroundModes": ["location", "fetch", "remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0b"
      },
      "package": "io.intelgraph.mobile",
      "versionCode": 1,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "minSdkVersion": 24,
            "buildToolsVersion": "34.0.0"
          },
          "ios": {
            "deploymentTarget": "14.0"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "intelgraph-mobile"
      }
    }
  }
}
