{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["../server/node_modules/@types", "../node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["./**/*.test.ts", "./dist"]
}
