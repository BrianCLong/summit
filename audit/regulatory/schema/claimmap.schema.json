{
  "$id": "https://summit.local/schemas/claimmap.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["controlPackSlug", "mappings"],
  "properties": {
    "controlPackSlug": { "type": "string" },
    "mappings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["summitControlId", "regulatoryClaimId"],
        "properties": {
          "summitControlId": { "type": "string" },
          "regulatoryClaimId": { "type": "string" },
          "justification": { "type": "string" }
        }
      }
    }
  }
}
