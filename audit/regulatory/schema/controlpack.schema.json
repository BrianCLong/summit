{
  "$id": "https://summit.local/schemas/controlpack.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["slug", "sources", "controls", "claimRegistryVersion"],
  "properties": {
    "slug": { "type": "string" },
    "claimRegistryVersion": { "type": "string" },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "url", "etag", "lastModified", "data"],
        "properties": {
          "name": { "type": "string" },
          "url": { "type": "string" },
          "etag": { "type": "string" },
          "lastModified": { "type": "string" },
          "data": { "type": "object" }
        }
      }
    },
    "controls": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "mapping"],
        "properties": {
          "id": { "type": "string" },
          "mapping": {
            "type": "object",
            "properties": {
              "sourceId": { "type": "string" },
              "claimId": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
