{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Deployments",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "title": "IntelGraph SLO Dashboard",
  "uid": "intelgraph-slo-production",
  "version": 1,
  "panels": [
    {
      "title": "Error Budget Remaining",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "100 - (intelgraph:error_budget_remaining_ratio * 100)",
          "legendFormat": "Budget Remaining %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "orange", "value": 25 },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 75 }
            ]
          },
          "max": 100,
          "min": 0,
          "unit": "percent"
        }
      }
    },
    {
      "title": "Burn Rate (1h)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 3, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "intelgraph:error_budget_burn_rate_1h",
          "legendFormat": "1h Burn Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 1 },
              { "color": "orange", "value": 6 },
              { "color": "red", "value": 14.4 }
            ]
          }
        }
      }
    },
    {
      "title": "Burn Rate (6h)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 3, "x": 9, "y": 0 },
      "targets": [
        {
          "expr": "intelgraph:error_budget_burn_rate_6h",
          "legendFormat": "6h Burn Rate"
        }
      ]
    },
    {
      "title": "Availability (99.9% SLO)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 3, "x": 6, "y": 4 },
      "targets": [
        {
          "expr": "intelgraph:availability_5m * 100",
          "legendFormat": "Availability"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 3,
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "orange", "value": 99.5 },
              { "color": "green", "value": 99.9 }
            ]
          }
        }
      }
    },
    {
      "title": "P95 Latency (350ms SLO)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 3, "x": 9, "y": 4 },
      "targets": [
        {
          "expr": "intelgraph:latency_p95_5m",
          "legendFormat": "P95 Latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 250 },
              { "color": "orange", "value": 350 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      }
    },
    {
      "title": "Error Budget Burn Over Time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "intelgraph:error_budget_burn_rate_1h",
          "legendFormat": "1h Burn Rate"
        },
        {
          "expr": "intelgraph:error_budget_burn_rate_6h",
          "legendFormat": "6h Burn Rate"
        },
        {
          "expr": "1",
          "legendFormat": "Sustainable Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Service SLO Status",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "topk(10, sum by (service) (rate(http_requests_total{status=~\"5..\"}[5m])) / sum by (service) (rate(http_requests_total[5m])))",
          "format": "table",
          "legendFormat": "{{service}}"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Value": "Error Rate",
              "service": "Service"
            }
          }
        }
      ]
    },
    {
      "title": "Request Rate by Service",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum by (service) (rate(http_requests_total[5m]))",
          "legendFormat": "{{service}}"
        }
      ]
    },
    {
      "title": "Error Rate Trend",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "intelgraph:error_rate_5m * 100",
          "legendFormat": "Error Rate %"
        },
        {
          "expr": "intelgraph:slo_error_rate_target * 100",
          "legendFormat": "SLO Target (1%)"
        }
      ]
    },
    {
      "title": "Latency Distribution",
      "type": "heatmap",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_bucket{namespace=\"intelgraph-prod\"}[5m])) by (le)",
          "format": "heatmap",
          "legendFormat": "{{le}}"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "query": "label_values(http_requests_total, namespace)",
        "current": { "value": "intelgraph-prod" }
      }
    ]
  },
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "refresh": "30s"
}
