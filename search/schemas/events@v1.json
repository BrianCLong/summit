{
  "name": "events",
  "fields": [
    { "name": "id", "type": "string" },
    { "name": "tenant", "type": "string", "facet": true },
    { "name": "type", "type": "string", "facet": true },
    { "name": "title", "type": "string" },
    { "name": "body", "type": "string" },
    { "name": "tags", "type": "string[]", "facet": true, "optional": true },
    { "name": "timestamp", "type": "int64", "facet": true },
    { "name": "classification", "type": "int32", "facet": true },
    { "name": "actor", "type": "string", "facet": true, "optional": true },
    { "name": "action", "type": "string", "facet": true, "optional": true }
  ],
  "default_sorting_field": "timestamp",
  "token_separators": ["-", "_", "."],
  "enable_nested_fields": true
}
