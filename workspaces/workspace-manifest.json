      "description": "User-facing applications and UI surfaces used by analysts and operators.",
      "packages": [
        "client",
        "apps/web",
        "apps/webapp",
        "apps/ui",
        "apps/tri-pane",
        "apps/mobile-interface",
        "apps/switchboard-web"
      ]
    },
    "backend": {
      "description": "APIs, ingestion surfaces, and service entrypoints that power the platform.",
      "packages": [
        "server",
        "apps/api",
        "apps/gateway",
        "apps/search-engine",
