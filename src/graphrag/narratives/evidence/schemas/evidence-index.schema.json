{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://summit.local/schemas/narratives/evidence-index.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "items"],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["evidence_id", "files"],
        "properties": {
          "evidence_id": { "type": "string" },
          "files": {
            "type": "object",
            "additionalProperties": false,
            "required": ["report", "metrics", "stamp"],
            "properties": {
              "report": { "type": "string" },
              "metrics": { "type": "string" },
              "stamp": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
