{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Evidence Report",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "title", "summary", "findings"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^EVD-[a-z0-9-]+-[A-Z]+-\\d{3}$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "findings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["key", "value"],
        "properties": {
          "key": { "type": "string" },
          "value": { "type": "string" }
        }
      }
    }
  }
}
