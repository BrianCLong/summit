{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "compound.index.schema.json",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^EVD-CLAUDE-COMPOUND-(PLAN|WORK|ASSESS|MEMORY|METRICS|STAMP|SEC|DEPS)-\\d{3}$": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "path": { "type": "string" },
        "kind": { "type": "string" }
      },
      "required": ["path", "kind"]
    }
  },
  "minProperties": 1
}
