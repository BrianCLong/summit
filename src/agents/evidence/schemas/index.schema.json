{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EvidenceIndex",
  "type": "object",
  "required": ["entries"],
  "properties": {
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["evidenceId", "paths"],
        "properties": {
          "evidenceId": { "type": "string" },
          "paths": {
            "type": "object",
            "required": ["report", "metrics", "stamp"],
            "properties": {
              "report": { "type": "string" },
              "metrics": { "type": "string" },
              "stamp": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
